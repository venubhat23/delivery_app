<!-- Enhanced Monthly Invoice Modal -->
<div id="monthlyInvoiceModal" class="custom-modal" style="display: none;">
  <div class="custom-modal-backdrop" onclick="closeMonthlyInvoiceModal()"></div>
  <div class="custom-edit-modal-content">
    <div class="custom-modal-header">
      <h5 class="custom-modal-title">
        <i class="fas fa-paper-plane me-2"></i>Send Monthly Invoice to Vendors
      </h5>
      <button type="button" class="custom-close-btn" onclick="closeMonthlyInvoiceModal()">×</button>
    </div>
    <div class="custom-modal-body">
      <!-- Alert Section -->
      <div class="alert alert-info mb-4">
        <i class="fas fa-info-circle me-2"></i>
        Send monthly procurement invoices to all vendors via <strong>WhatsApp</strong> for the selected period.
      </div>

      <form id="monthlyInvoiceForm">
        <div class="row g-3">
          <!-- Month Selection -->
          <div class="col-md-6">
            <label for="invoiceMonth" class="form-label fw-bold text-primary">
              <i class="fas fa-calendar-alt me-1"></i>Month
            </label>
            <select class="form-select form-select-enhanced" id="invoiceMonth" name="month" required>
              <% (1..12).each do |month| %>
                <option value="<%= month %>" <%= 'selected' if month == Date.current.month %>>
                  <%= Date.new(2025, month, 1).strftime('%B') %>
                </option>
              <% end %>
            </select>
          </div>

          <!-- Year Selection -->
          <div class="col-md-6">
            <label for="invoiceYear" class="form-label fw-bold text-primary">
              <i class="fas fa-calendar me-1"></i>Year
            </label>
            <select class="form-select form-select-enhanced" id="invoiceYear" name="year" required>
              <% (Date.current.year - 2..Date.current.year + 1).each do |year| %>
                <option value="<%= year %>" <%= 'selected' if year == Date.current.year %>>
                  <%= year %>
                </option>
              <% end %>
            </select>
          </div>

          <!-- Vendor Selection -->
          <div class="col-12">
            <label for="invoiceVendor" class="form-label fw-bold text-primary">
              <i class="fas fa-users me-1"></i>Vendor Selection
            </label>
            <select class="form-select form-select-enhanced" id="invoiceVendor" name="vendor" required>
              <option value="all" selected>All Vendors</option>
              <% if defined?(@vendors) && @vendors %>
                <% @vendors.each do |vendor| %>
                  <option value="<%= vendor.id %>"><%= vendor.name %></option>
                <% end %>
              <% end %>
            </select>
            <div class="form-text text-muted">
              <i class="fas fa-info-circle me-1"></i>
              Select "All Vendors" to send invoices to all vendors, or choose a specific vendor
            </div>
          </div>

          <!-- Enhanced Options Section -->
          <div class="col-12">
            <div class="card border-light">
              <div class="card-header bg-light">
                <h6 class="mb-0 fw-bold text-dark">
                  <i class="fas fa-cogs me-1"></i>Invoice Options
                </h6>
              </div>
              <div class="card-body">
                <div class="form-check mb-3">
                  <input class="form-check-input" type="checkbox" id="generateIfMissing" name="generate_if_missing" checked>
                  <label class="form-check-label fw-semibold" for="generateIfMissing">
                    <i class="fas fa-plus-circle text-success me-1"></i>
                    Generate invoice if not already created
                  </label>
                  <div class="form-text">Creates new invoices for vendors who don't have one for this period</div>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="sendExisting" name="send_existing" checked>
                  <label class="form-check-label fw-semibold" for="sendExisting">
                    <i class="fas fa-share text-primary me-1"></i>
                    Send existing invoice if already generated
                  </label>
                  <div class="form-text">Resends invoices that were previously created for this period</div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Enhanced Preview Section -->
        <div class="mt-4 p-4 bg-gradient-light rounded-3 border">
          <h6 class="fw-bold mb-3 text-dark">
            <i class="fas fa-eye me-2 text-primary"></i>Preview Summary
          </h6>
          <div class="row">
            <div class="col-md-6">
              <div class="d-flex align-items-center mb-2">
                <i class="fas fa-calendar-check text-success me-2"></i>
                <strong>Period:</strong>
                <span class="ms-2" id="invoicePreview">
                  <strong>December 2025</strong>
                </span>
              </div>
            </div>
            <div class="col-md-6">
              <div class="d-flex align-items-center mb-2">
                <i class="fas fa-users text-info me-2"></i>
                <strong>Recipients:</strong>
                <span class="ms-2" id="vendorPreview">
                  <strong>All Vendors</strong>
                </span>
              </div>
            </div>
          </div>
          <div id="vendorList" class="mt-3 p-3 bg-white rounded border-start border-4 border-primary">
            <div class="text-muted">
              <i class="fas fa-info-circle me-1"></i>
              Vendor list will be loaded based on your selection...
            </div>
          </div>
        </div>
      </form>
    </div>

    <div class="custom-modal-footer">
      <button type="button" class="btn btn-outline-secondary me-2" onclick="closeMonthlyInvoiceModal()" style="border-radius: 25px; padding: 12px 25px; font-weight: bold;">
        <i class="fas fa-times me-2"></i>Cancel
      </button>
      <button type="button" class="btn btn-primary" id="sendInvoicesBtn" onclick="sendMonthlyInvoices()" style="border-radius: 25px; padding: 12px 30px; font-weight: bold; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <i class="fas fa-paper-plane me-2"></i>Send Invoices
      </button>
    </div>
  </div>
