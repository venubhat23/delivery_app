function populateMonthlyReport(data) {
  const tbody = document.querySelector('#monthlyReportTable tbody');
  if (!data || Object.keys(data).length === 0) {
    tbody.innerHTML = `
      <tr>
        <td colspan="9" class="text-center py-4">
