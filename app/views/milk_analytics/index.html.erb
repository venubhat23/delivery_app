<% content_for :title, "Milk Analytics Dashboard" %>

<div class="container-fluid">
  <div class="row" style="margin-top: 2rem; margin-left: 1rem; padding-top: 1.5rem;">
    <div class="col-12">
  <% active_tab = params[:tab].presence || 'dashboard' %>
  <%= render 'navigation', active_tab: active_tab %>

  <!-- Tab Content -->
  <div class="tab-content" id="milkAnalyticsTabContent">
    <%= render 'dashboard_tab', active_tab: active_tab %>

    <!-- Reports Tab -->
    <div class="tab-pane fade <%= 'show active' if active_tab == 'reports' %>" id="reports" role="tabpanel" aria-labelledby="reports-tab">
      <div class="row mb-4">
        <div class="col-12">
          <div class="card border-0 shadow-lg">
            <div class="card-header py-4">
              <h5 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-chart-comparison me-2"></i>Daily Calculations Report
              </h5>
              <p class="text-muted mb-0 small">Daily calculations for the selected date range</p>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-hover" id="dailyReportTable">
                  <thead class="table-dark">
                    <tr>
                      <th>Date</th>
                      <th>Procured (L)</th>
                      <th>Delivered (L)</th>
                      <th>Cost (₹)</th>
                      <th>Revenue (₹)</th>
                      <th>Profit/Loss (₹)</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if @daily_calculations&.any? %>
                      <% @daily_calculations.each do |calc| %>
                        <tr>
                          <td><%= calc[:date].strftime('%d %b %Y') %></td>
                          <td><%= number_with_delimiter(calc[:procured].round(2)) %></td>
                          <td><%= number_with_delimiter(calc[:delivered].round(2)) %></td>
                          <td>₹<%= number_with_delimiter(calc[:cost].round(2)) %></td>
                          <td>₹<%= number_with_delimiter(calc[:revenue].round(2)) %></td>
                          <td class="<%= calc[:profit] >= 0 ? 'text-success' : 'text-danger' %>">
                            ₹<%= number_with_delimiter(calc[:profit].round(2)) %>
                          </td>
                        </tr>
                      <% end %>
                    <% else %>
                      <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                          No data available for the selected date range
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%= render 'procurement_tab', active_tab: active_tab %>

    <!-- Schedules Tab (Hidden) -->
    <div class="tab-pane fade <%= 'show active' if active_tab == 'schedules' %>" id="schedules" role="tabpanel" aria-labelledby="schedules-tab">
      <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        Schedules tab is currently hidden. Access schedules through other tabs.
      </div>
    </div>

    <!-- Calendar Tab -->
    <div class="tab-pane fade <%= 'show active' if active_tab == 'calendar' %>" id="calendar" role="tabpanel" aria-labelledby="calendar-tab">
      <div class="card border-0 shadow-lg">
        <div class="card-body p-0" id="calendarContent">
          <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
              <span class="visually-hidden">Loading...</span>
            </div>
            <h4 class="mt-3">Loading Procurement Calendar...</h4>
            <p class="text-muted">Please wait while we load your calendar</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Procurement Schedule Tab -->
    <div class="tab-pane fade <%= 'show active' if active_tab == 'procurement_schedule' %>" id="procurement-schedule" role="tabpanel" aria-labelledby="procurement-schedule-tab">
      <div class="card border-0 shadow-lg">
        <div class="card-header bg-gradient-primary text-white border-0">
          <div class="row align-items-center">
            <div class="col-md-4">
              <h4 class="mb-0">
                <i class="fas fa-clipboard-list me-2"></i>
                Procurement Schedule Details
              </h4>
            </div>
            <div class="col-md-8">
              <div class="row align-items-center">
                <div class="col-md-3">
                  <select id="monthFilter" class="form-select form-select-sm bg-white">
                    <option value="current">Current Month</option>
                    <option value="last">Last Month</option>
                    <option value="all">All Schedules</option>
                  </select>
                </div>
                <div class="col-md-3">
                  <select id="vendorFilter" class="form-select form-select-sm bg-white">
                    <option value="all">All Vendors</option>
                    <% if defined?(@vendors) && @vendors %>
                      <% @vendors.each do |vendor| %>
                        <option value="<%= vendor.id %>"><%= vendor.name %></option>
                      <% end %>
                    <% end %>
                  </select>
                </div>
                <div class="col-md-6 text-end">
                  <div class="btn-group">
                    <button class="btn btn-success btn-sm" id="copyFromLastMonthBtn" onclick="copySchedulesFromLastMonth()">
                      <i class="fas fa-copy me-1"></i>Copy from Last Month
                    </button>
                    <button class="btn btn-outline-light btn-sm" id="selectAllBtn" onclick="toggleSelectAll()">
                      <i class="fas fa-check-square me-1"></i>Select All
                    </button>
                    <button class="btn btn-outline-danger btn-sm" id="deleteSelectedBtn" onclick="deleteSelectedSchedules()" style="display: none;">
                      <i class="fas fa-trash me-1"></i>Delete Selected
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Selection Info Bar -->
          <div class="row mt-2" id="selectionInfoBar" style="display: none;">
            <div class="col-12">
              <div class="alert alert-info mb-0 py-2">
                <span id="selectionCount">0</span> schedule(s) selected
                <button class="btn btn-sm btn-outline-info ms-2" onclick="clearSelection()">
                  Clear Selection
                </button>
              </div>
            </div>
          </div>
        </div>

        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover table-striped mb-0" id="procurementScheduleTable">
              <thead class="table-dark sticky-top">
                <tr>
                  <th scope="col" class="border-0" style="width: 50px;">
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="selectAllCheckbox" onchange="toggleSelectAll()">
                      <label class="form-check-label" for="selectAllCheckbox">
                        <span class="visually-hidden">Select All</span>
                      </label>
                    </div>
                  </th>
                  <th scope="col" class="border-0">
                    <i class="fas fa-calendar me-1"></i>Date
                  </th>
                  <th scope="col" class="border-0">
                    <i class="fas fa-truck me-1"></i>Vendor
                  </th>
                  <th scope="col" class="border-0">
                    <i class="fas fa-box me-1"></i>Product
                  </th>
                  <th scope="col" class="border-0">
                    <i class="fas fa-weight me-1"></i>Quantity
                  </th>
                  <th scope="col" class="border-0">
                    <i class="fas fa-rupee-sign me-1"></i>Rate/Unit
                  </th>
                  <th scope="col" class="border-0">
                    <i class="fas fa-calculator me-1"></i>Total Amount
                  </th>
                  <th scope="col" class="border-0">
                    <i class="fas fa-info-circle me-1"></i>Status
                  </th>
                  <th scope="col" class="border-0">
                    <i class="fas fa-user me-1"></i>Created By
                  </th>
                  <th scope="col" class="border-0" style="width: 100px;">
                    <i class="fas fa-cogs me-1"></i>Actions
                  </th>
                </tr>
              </thead>
              <tbody id="procurementScheduleTableBody">
                <tr>
                  <td colspan="10" class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                      <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2 mb-0">Loading procurement schedules...</p>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <div class="card-footer bg-light border-0">
          <div class="row align-items-center">
            <div class="col-md-6">
              <small class="text-muted" id="scheduleCount">
                <i class="fas fa-info-circle me-1"></i>
                Loading schedule count...
              </small>
            </div>
            <div class="col-md-6 text-end">
              <button class="btn btn-outline-primary btn-sm" onclick="refreshProcurementSchedules()">
                <i class="fas fa-sync-alt me-1"></i>Refresh
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Simple Procurement Assignments Overlay (No Modal) -->
<div id="procurementAssignmentsOverlay" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.7); z-index: 9999;">
  <div style="position: absolute; top: 50%; left: 60%; transform: translate(-50%, -50%); width: 75%; max-width: 1000px; max-height: 90vh; overflow-y: auto; background: white; border-radius: 15px; box-shadow: 0 10px 30px rgba(0,0,0,0.3);">

    <!-- Header -->
    <div style="background: linear-gradient(135deg, #007bff, #0056b3); color: white; padding: 20px; border-radius: 15px 15px 0 0; position: sticky; top: 0; z-index: 10;">
      <div style="display: flex; justify-content: between; align-items: center;">
        <h4 style="margin: 0; font-weight: 600;">
          <i class="fas fa-clipboard-list me-2"></i>
          <span id="procurementAssignmentsTitle">Procurement Assignments</span>
        </h4>
        <button onclick="closeProcurementAssignmentsOverlay()" style="background: rgba(255,255,255,0.2); border: none; color: white; padding: 8px 12px; border-radius: 8px; cursor: pointer; margin-left: auto;">
          <i class="fas fa-times"></i>
        </button>
      </div>
    </div>

    <!-- Content -->
    <div id="procurementAssignmentsContent" style="padding: 20px;">
      <!-- Content will be loaded here -->
      <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
          <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 mb-0">Loading procurement assignments...</p>
      </div>
    </div>

    <!-- Footer -->
    <div style="background: #f8f9fa; padding: 15px 20px; border-radius: 0 0 15px 15px; border-top: 1px solid #dee2e6;">
      <div style="display: flex; justify-content: space-between; align-items: center;">
        <small class="text-muted">
          <i class="fas fa-info-circle me-1"></i>
          Click anywhere outside to close
        </small>
        <div>
          <button onclick="refreshCurrentAssignments()" class="btn btn-outline-primary btn-sm me-2" id="refreshAssignmentsBtn" style="display: none;">
            <i class="fas fa-sync-alt me-1"></i>Refresh
          </button>
          <button onclick="closeProcurementAssignmentsOverlay()" class="btn btn-secondary btn-sm">
            <i class="fas fa-times me-1"></i>Close
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Small Edit Modal for Procurement Assignments -->
<div id="editProcurementModal" style="display: none; position: fixed !important; top: 0 !important; left: 0 !important; width: 100% !important; height: 100% !important; background: rgba(0,0,0,0.6) !important; z-index: 100000 !important; justify-content: center !important; align-items: center !important;">
  <div style="background: white !important; border-radius: 12px !important; box-shadow: 0 10px 30px rgba(0,0,0,0.3) !important; width: 80% !important; max-width: 450px !important; max-height: 80vh !important; overflow-y: auto !important; position: relative !important; z-index: 100001 !important; margin-left: auto !important; margin-right: auto !important;">

    <!-- Modal Header -->
    <div style="background: linear-gradient(135deg, #007bff, #0056b3); color: white; padding: 15px 20px; border-radius: 12px 12px 0 0;">
      <div style="display: flex; justify-content: space-between; align-items: center;">
        <h5 id="editProcurementModalTitle" style="margin: 0; font-weight: 600;">
          <i class="fas fa-edit me-2"></i>Edit Procurement Assignment
        </h5>
        <button onclick="closeProcurementEditModal()" style="background: rgba(255,255,255,0.2); border: none; color: white; padding: 5px 10px; border-radius: 6px; cursor: pointer;">
          <i class="fas fa-times"></i>
        </button>
      </div>
    </div>

    <!-- Modal Content -->
    <div id="editProcurementModalContent" style="padding: 20px;">
      <!-- Content will be loaded here -->
      <div class="text-center py-4">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2">Loading edit form...</p>
      </div>
    </div>

  </div>
</div>

<%= render 'javascript' %>
<%= render 'styles' %>

    </div>
  </div>
</div>