        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
          <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 mb-0">Loading procurement assignments...</p>
      </div>
    </div>

    <!-- Footer -->
    <div style="background: #f8f9fa; padding: 15px 20px; border-radius: 0 0 15px 15px; border-top: 1px solid #dee2e6;">
      <div style="display: flex; justify-content: space-between; align-items: center;">
        <small class="text-muted">
          <i class="fas fa-info-circle me-1"></i>
          Click anywhere outside to close
        </small>
        <div>
          <button onclick="refreshCurrentAssignments()" class="btn btn-outline-primary btn-sm me-2" id="refreshAssignmentsBtn" style="display: none;">
            <i class="fas fa-sync-alt me-1"></i>Refresh
          </button>
          <button onclick="closeProcurementAssignmentsOverlay()" class="btn btn-secondary btn-sm">
            <i class="fas fa-times me-1"></i>Close
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Small Edit Modal for Procurement Assignments -->
