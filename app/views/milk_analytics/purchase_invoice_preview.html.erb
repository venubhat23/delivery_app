<% content_for :title, "Purchase Invoice - #{@invoice.invoice_number}" %>

<div class="container-fluid">
  <!-- Invoice Header -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h4 class="mb-0">
                <i class="fas fa-file-invoice-dollar me-2"></i>PURCHASE INVOICE
              </h4>
              <small class="opacity-75">Invoice #<%= @invoice.invoice_number %></small>
            </div>
            <div class="text-end">
              <div class="mb-1"><strong>Invoice Date:</strong> <%= @invoice.invoice_date.strftime('%d %B %Y') %></div>
              <div class="mb-1"><strong>Status:</strong> 
                <span class="badge bg-<%= @invoice.status == 'generated' ? 'success' : 'warning' %>">
                  <%= @invoice.status.upcase %>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Invoice Details -->
  <div class="row mb-4">
    <div class="col-md-6">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-light">
          <h6 class="mb-0"><i class="fas fa-building me-1"></i>Vendor Information</h6>
        </div>
        <div class="card-body">
          <h5 class="text-primary"><%= @invoice.vendor_name %></h5>
          <p class="text-muted mb-0">Procurement Schedule ID: #<%= @schedule.id %></p>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-light">
          <h6 class="mb-0"><i class="fas fa-calendar-alt me-1"></i>Schedule Period</h6>
        </div>
        <div class="card-body">
          <p class="mb-1"><strong>From:</strong> <%= @schedule.from_date.strftime('%d %B %Y') %></p>
          <p class="mb-1"><strong>To:</strong> <%= @schedule.to_date.strftime('%d %B %Y') %></p>
          <p class="mb-0"><strong>Duration:</strong> <%= @schedule.duration_in_days %> days</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Detailed Assignment Information -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-secondary text-white">
          <h6 class="mb-0"><i class="fas fa-clipboard-list me-1"></i>Procurement Assignment Details</h6>
        </div>
        <div class="card-body p-0">
          <% assignments = @schedule.procurement_assignments %>
          <% if assignments.any? %>
            <div class="table-responsive">
              <table class="table table-striped mb-0">
                <thead class="table-dark">
                  <tr>
                    <th>Assignment #</th>
                    <th>Date</th>
                    <th>Product</th>
                    <th>Planned Qty</th>
                    <th>Actual Qty</th>
                    <th>Buying Price (â‚¹/L)</th>
                    <th>Status</th>
                    <th class="text-end">Purchase Amount (â‚¹)</th>
                    <th>Notes</th>
                  </tr>
                </thead>
                <tbody>
                  <% total_purchase_amount = 0 %>
                  <% assignments.each do |assignment| %>
                    <% quantity = assignment.actual_quantity.presence || assignment.planned_quantity || 0 %>
                    <% buying_price = assignment.buying_price || 0 %>
                    <% purchase_amount = quantity * buying_price %>
                    <% total_purchase_amount += purchase_amount %>
                    <tr>
                      <td><strong>#<%= assignment.id %></strong></td>
                      <td><%= assignment.date.strftime('%d %b %Y') %></td>
                      <td><%= assignment.product&.name || @schedule.product&.name || 'Milk' %></td>
                      <td><span class="badge bg-info"><%= number_with_precision(assignment.planned_quantity || 0, precision: 1) %>L</span></td>
                      <td>
                        <% if assignment.actual_quantity.present? %>
                          <span class="badge bg-success"><%= number_with_precision(assignment.actual_quantity, precision: 1) %>L</span>
                        <% else %>
                          <span class="badge bg-secondary">Pending</span>
                        <% end %>
                      </td>
                      <td class="fw-bold text-primary">â‚¹<%= number_with_precision(buying_price, precision: 2) %></td>
                      <td>
                        <span class="badge bg-<%= assignment.status == 'completed' ? 'success' : assignment.status == 'pending' ? 'warning' : 'secondary' %>">
                          <%= assignment.status.upcase %>
                        </span>
                      </td>
                      <td class="text-end fw-bold">â‚¹<%= number_with_delimiter(purchase_amount.round(2)) %></td>
                      <td><%= assignment.notes.present? ? truncate(assignment.notes, length: 30) : '-' %></td>
                    </tr>
                  <% end %>
                </tbody>
                <tfoot class="table-info">
                  <tr class="fw-bold">
                    <td colspan="3">TOTAL PROCUREMENT</td>
                    <td><%= number_with_precision(assignments.sum(&:planned_quantity), precision: 1) %>L</td>
                    <td><%= number_with_precision(assignments.sum { |a| a.actual_quantity || 0 }, precision: 1) %>L</td>
                    <td>-</td>
                    <td>-</td>
                    <td class="text-end">â‚¹<%= number_with_delimiter(total_purchase_amount.round(2)) %></td>
                    <td>-</td>
                  </tr>
                </tfoot>
              </table>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
              <h5 class="text-muted">No procurement assignments found</h5>
              <p class="text-muted">This schedule doesn't have any assignments created yet.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Purchase Summary by Product -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white">
          <h6 class="mb-0"><i class="fas fa-chart-pie me-1"></i>Purchase Summary - Buying Price Items Only</h6>
        </div>
        <div class="card-body p-0">
          <% if @invoice.invoice_items.any? %>
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Date</th>
                    <th>Product</th>
                    <th>Quantity Purchased</th>
                    <th>Unit</th>
                    <th>Buying Rate (â‚¹)</th>
                    <th class="text-end">Purchase Cost (â‚¹)</th>
                    <th>Description</th>
                  </tr>
                </thead>
                <tbody>
                  <% @invoice.invoice_items.each_with_index do |item, index| %>
                    <tr>
                      <td><%= Date.parse(item['date']).strftime('%d %b %Y') %></td>
                      <td>
                        <div class="d-flex align-items-center">
                          <i class="fas fa-cube text-primary me-2"></i>
                          <strong><%= item['product_name'] %></strong>
                        </div>
                      </td>
                      <td><span class="badge bg-success fs-6"><%= number_with_precision(item['quantity'], precision: 1) %></span></td>
                      <td><%= item['unit'] %></td>
                      <td class="fw-bold text-primary">â‚¹<%= number_with_precision(item['rate'], precision: 2) %></td>
                      <td class="text-end fw-bold">â‚¹<%= number_with_delimiter(item['amount'].round(2)) %></td>
                      <td class="text-muted">
                        Daily procurement of <%= item['product_name'] %> at buying rate â‚¹<%= item['rate'] %>/<%= item['unit'] %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
                <tfoot class="table-success">
                  <tr class="fw-bold fs-5">
                    <td colspan="2" class="text-primary">TOTAL PURCHASE COST</td>
                    <td><%= number_with_precision(@invoice.invoice_totals['total_quantity'], precision: 1) %></td>
                    <td>Liters</td>
                    <td>-</td>
                    <td class="text-end text-success">â‚¹<%= number_with_delimiter(@invoice.invoice_totals['total_amount'].round(2)) %></td>
                    <td class="text-muted">Amount to pay vendor</td>
                  </tr>
                </tfoot>
              </table>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
              <h5 class="text-muted">No purchase items found</h5>
              <p class="text-muted">This invoice doesn't have any items to show based on buying prices.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Procurement Financial Summary -->
  <div class="row mb-4">
    <div class="col-md-8">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-info text-white">
          <h6 class="mb-0"><i class="fas fa-chart-line me-1"></i>Procurement Financial Analysis</h6>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-sm-6">
              <div class="border-end pe-3">
                <h6 class="text-primary">Purchase Details (Owner Pays Vendor)</h6>
                <p class="mb-2"><strong>Planned Quantity:</strong> <%= number_with_precision(@schedule.quantity || 0, precision: 1) %> <%= @schedule.unit || 'Liters' %></p>
                <p class="mb-2"><strong>Buying Price per Liter:</strong> <span class="text-success fw-bold">â‚¹<%= number_with_precision(@schedule.buying_price || 0, precision: 2) %></span></p>
                <p class="mb-2"><strong>Total Purchase Cost:</strong> <span class="text-danger fw-bold">â‚¹<%= number_with_delimiter(@invoice.total_amount.round(2)) %></span></p>
                <p class="mb-0"><strong>Average Purchase Rate:</strong> â‚¹<%= number_with_precision((@invoice.total_amount / (@invoice.invoice_totals['total_quantity'] || 1)), precision: 2) %>/L</p>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="ps-3">
                <h6 class="text-secondary">Reference Information</h6>
                <p class="mb-2"><strong>Total Assignments:</strong> <%= @schedule.procurement_assignments.count %></p>
                <p class="mb-2"><strong>Completion Status:</strong>
                  <% completion = @schedule.completion_percentage rescue 0 %>
                  <span class="badge bg-<%= completion > 80 ? 'success' : completion > 50 ? 'warning' : 'danger' %>">
                    <%= completion %>%
                  </span>
                </p>
                <p class="mb-2"><strong>Product:</strong> <%= @schedule.product&.name || 'Milk' %></p>
                <p class="mb-0"><strong>Vendor:</strong> <%= @invoice.vendor_name %></p>
              </div>
            </div>
          </div>

          <!-- Cost Breakdown -->
          <hr class="my-3">
          <div class="row">
            <div class="col-12">
              <h6 class="text-warning">ðŸ“‹ Invoice Breakdown</h6>
              <div class="bg-light p-3 rounded">
                <div class="row text-center">
                  <div class="col-3">
                    <div class="border-end">
                      <h5 class="text-primary mb-0"><%= @invoice.invoice_totals['item_count'] || 0 %></h5>
                      <small class="text-muted">Total Items</small>
                    </div>
                  </div>
                  <div class="col-3">
                    <div class="border-end">
                      <h5 class="text-success mb-0"><%= number_with_precision(@invoice.invoice_totals['total_quantity'] || 0, precision: 1) %>L</h5>
                      <small class="text-muted">Total Quantity</small>
                    </div>
                  </div>
                  <div class="col-3">
                    <div class="border-end">
                      <h5 class="text-warning mb-0">â‚¹<%= number_with_precision(@schedule.buying_price || 0, precision: 2) %></h5>
                      <small class="text-muted">Buying Rate/L</small>
                    </div>
                  </div>
                  <div class="col-3">
                    <h5 class="text-danger mb-0">â‚¹<%= number_with_delimiter(@invoice.total_amount.round(2)) %></h5>
                    <small class="text-muted">Total Purchase Cost</small>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-0 shadow-sm bg-gradient text-white" style="background: linear-gradient(135deg, #28a745, #20c997);">
        <div class="card-header border-0">
          <h6 class="mb-0"><i class="fas fa-money-bill-wave me-1"></i>Amount Payable to Vendor</h6>
        </div>
        <div class="card-body text-center">
          <h1 class="mb-2 display-4">â‚¹<%= number_with_delimiter(@invoice.total_amount.round(2)) %></h1>
          <p class="mb-2 opacity-75">
            For <%= number_with_precision(@invoice.invoice_totals['total_quantity'] || 0, precision: 1) %> liters
          </p>
          <hr class="bg-white opacity-25">
          <small class="opacity-75">
            <i class="fas fa-info-circle me-1"></i>
            Based on buying price calculations only
          </small>
        </div>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between">
        <div>
          <%= link_to milk_analytics_path(tab: 'schedules'), class: "btn btn-outline-secondary" do %>
            <i class="fas fa-arrow-left me-1"></i>Back to Schedules
          <% end %>
        </div>
        <div class="d-flex gap-2">
          <button class="btn btn-primary" onclick="window.print()">
            <i class="fas fa-print me-1"></i>Print Invoice
          </button>
          <% if defined?(request) && request.format.html? %>
            <%= link_to preview_purchase_invoice_milk_analytics_path(invoice_id: @invoice.id, format: :pdf), 
                      class: "btn btn-success", target: "_blank" do %>
              <i class="fas fa-file-pdf me-1"></i>Download PDF
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Invoice Footer -->
  <div class="row">
    <div class="col-12">
      <div class="card border-0 shadow-sm bg-light">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h6 class="fw-bold">Notes</h6>
              <% if @invoice.notes.present? %>
                <p class="mb-0"><%= simple_format(@invoice.notes) %></p>
              <% else %>
                <p class="text-muted mb-0">No additional notes for this invoice.</p>
              <% end %>
            </div>
            <div class="col-md-6 text-md-end">
              <h6 class="fw-bold">Invoice Details</h6>
              <p class="mb-1"><strong>Generated on:</strong> <%= @invoice.created_at.strftime('%d %B %Y at %I:%M %p') %></p>
              <p class="mb-1"><strong>Generated by:</strong> <%= @invoice.user.email %></p>
              <p class="mb-0"><strong>System:</strong> Milk Analytics Dashboard</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Print Styles -->
<style>
  @media print {
    .btn, .card-header .btn {
      display: none !important;
    }
    
    .card {
      border: 1px solid #dee2e6 !important;
      box-shadow: none !important;
      page-break-inside: avoid;
    }
    
    .container-fluid {
      padding: 0 !important;
    }
    
    .row {
      margin: 0 !important;
    }
    
    .col-12, .col-md-4, .col-md-6, .col-md-8 {
      padding: 0 5px !important;
    }
    
    h2, h4, h6 {
      color: #000 !important;
    }
    
    .text-primary, .text-success, .text-info {
      color: #000 !important;
    }
    
    .bg-primary, .bg-success, .bg-info, .bg-secondary {
      background-color: #f8f9fa !important;
      color: #000 !important;
    }
    
    .badge {
      border: 1px solid #000 !important;
      background-color: #fff !important;
      color: #000 !important;
    }
  }
</style>