<div class="row">
  <div class="col-lg-8 col-xl-6 mx-auto">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-primary text-white">
        <h4 class="mb-0">
          <i class="fas fa-user-plus me-2"></i>
          Add Customer Referral
        </h4>
      </div>
      <div class="card-body p-4">
        <%= form_with model: @referral, url: affiliate_referrals_path, local: true, class: "needs-validation", novalidate: true do |form| %>
          <% if @referral.errors.any? %>
            <div class="alert alert-danger mb-4">
              <h6><i class="fas fa-exclamation-triangle me-2"></i>Please fix the following errors:</h6>
              <ul class="mb-0">
                <% @referral.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="alert alert-info mb-4">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Referral Reward:</strong> ₹500 will be credited to your account once this referral is approved by admin.
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= form.label :customer_name, "Customer Name", class: "form-label" %>
              <%= form.text_field :customer_name, class: "form-control", placeholder: "Enter customer full name", required: true %>
              <div class="invalid-feedback">Please provide the customer's name.</div>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.label :customer_phone, "Phone Number", class: "form-label" %>
              <%= form.text_field :customer_phone, class: "form-control", placeholder: "Enter phone number", required: true %>
              <div class="invalid-feedback">Please provide a valid phone number.</div>
            </div>
          </div>

          <div class="mb-3">
            <%= form.label :customer_email, "Email Address (Optional)", class: "form-label" %>
            <%= form.email_field :customer_email, class: "form-control", placeholder: "Enter email address (optional)" %>
            <div class="form-text">Email is optional but helps with customer verification.</div>
          </div>

          <div class="mb-3">
            <%= form.label :notes, "Additional Notes (Optional)", class: "form-label" %>
            <%= form.text_area :notes, class: "form-control", rows: 3, placeholder: "Any additional information about this customer..." %>
            <div class="form-text">Any additional details that might help with the referral approval.</div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="card bg-light">
                <div class="card-body text-center">
                  <h5 class="text-success mb-2">₹500</h5>
                  <p class="text-muted mb-0">Referral Reward</p>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card bg-light">
                <div class="card-body text-center">
                  <h6 class="text-primary mb-2">Your Code</h6>
                  <code class="badge bg-secondary"><%= current_affiliate.referral_code %></code>
                </div>
              </div>
            </div>
          </div>

          <div class="d-flex gap-2 mt-4">
            <%= form.submit "Submit Referral", class: "btn btn-primary px-4" %>
            <%= link_to affiliate_referrals_path, class: "btn btn-outline-secondary" do %>
              <i class="fas fa-arrow-left me-1"></i>
              Back to Referrals
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
// Bootstrap form validation
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>