<div class="row">
  <div class="col-lg-8 col-xl-6 mx-auto">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-warning text-dark">
        <h4 class="mb-0">
          <i class="fas fa-edit me-2"></i>
          Edit Customer Referral
        </h4>
      </div>
      <div class="card-body p-4">
        <%= form_with model: @referral, url: affiliate_referral_path(@referral), method: :patch, local: true, class: "needs-validation", novalidate: true do |form| %>
          <% if @referral.errors.any? %>
            <div class="alert alert-danger mb-4">
              <h6><i class="fas fa-exclamation-triangle me-2"></i>Please fix the following errors:</h6>
              <ul class="mb-0">
                <% @referral.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <% unless @referral.pending? %>
            <div class="alert alert-info mb-4">
              <i class="fas fa-info-circle me-2"></i>
              <strong>Note:</strong> This referral has already been processed and cannot be modified.
            </div>
          <% end %>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= form.label :customer_name, "Customer Name", class: "form-label" %>
              <%= form.text_field :customer_name, class: "form-control", placeholder: "Enter customer full name", required: true, disabled: !@referral.pending? %>
              <div class="invalid-feedback">Please provide the customer's name.</div>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.label :customer_phone, "Phone Number", class: "form-label" %>
              <%= form.text_field :customer_phone, class: "form-control", placeholder: "Enter phone number", required: true, disabled: !@referral.pending? %>
              <div class="invalid-feedback">Please provide a valid phone number.</div>
            </div>
          </div>

          <div class="mb-3">
            <%= form.label :customer_email, "Email Address (Optional)", class: "form-label" %>
            <%= form.email_field :customer_email, class: "form-control", placeholder: "Enter email address (optional)", disabled: !@referral.pending? %>
            <div class="form-text">Email is optional but helps with customer verification.</div>
          </div>

          <div class="mb-3">
            <%= form.label :notes, "Additional Notes (Optional)", class: "form-label" %>
            <%= form.text_area :notes, class: "form-control", rows: 3, placeholder: "Any additional information about this customer...", disabled: !@referral.pending? %>
            <div class="form-text">Any additional details that might help with the referral approval.</div>
          </div>

          <div class="d-flex gap-2">
            <% if @referral.pending? %>
              <%= form.submit "Update Referral", class: "btn btn-warning px-4" %>
            <% end %>
            <%= link_to affiliate_referral_path(@referral), class: "btn btn-outline-primary" do %>
              <i class="fas fa-eye me-1"></i>
              View Details
            <% end %>
            <%= link_to affiliate_referrals_path, class: "btn btn-outline-secondary" do %>
              <i class="fas fa-arrow-left me-1"></i>
              Back to Referrals
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% unless @referral.pending? %>
<script>
// Disable form if not pending
document.addEventListener('DOMContentLoaded', function() {
  const form = document.querySelector('form');
  if (form) {
    const inputs = form.querySelectorAll('input, textarea');
    inputs.forEach(input => input.disabled = true);
  }
});
</script>
<% end %>