<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">
      <div class="card shadow">
        <div class="card-header bg-success text-white text-center">
          <h4 class="mb-0">
            <i class="fas fa-users me-2"></i>
            Affiliate Login
          </h4>
        </div>
        <div class="card-body p-4">
          <%= form_with url: affiliate_login_path, method: :post, local: true, class: "needs-validation", novalidate: true do |form| %>
            <div class="mb-3">
              <%= form.label :email, "Email Address", class: "form-label" %>
              <%= form.email_field :email, class: "form-control", placeholder: "Enter your email", required: true %>
              <div class="invalid-feedback">
                Please provide a valid email address.
              </div>
            </div>

            <div class="mb-3">
              <%= form.label :password, "Password", class: "form-label" %>
              <%= form.password_field :password, class: "form-control", placeholder: "Enter your password", required: true %>
              <div class="invalid-feedback">
                Please provide a valid password.
              </div>
            </div>

            <div class="d-grid gap-2 mb-3">
              <%= form.submit "Login", class: "btn btn-success btn-lg" %>
            </div>

            <div class="text-center">
              <small class="text-muted">
                <i class="fas fa-info-circle me-1"></i>
                Contact admin if you need help accessing your account
              </small>
            </div>
          <% end %>
        </div>
      </div>

      <div class="text-center mt-3">
        <%= link_to root_path, class: "btn btn-outline-secondary" do %>
          <i class="fas fa-arrow-left me-1"></i>
          Back to Main Site
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
// Bootstrap form validation
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>