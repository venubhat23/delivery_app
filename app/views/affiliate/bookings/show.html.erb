<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">
          <i class="fas fa-shopping-cart me-2"></i>
          Booking Details
        </h4>
        <div>
          <% if @booking.can_be_cancelled? %>
            <%= link_to edit_affiliate_booking_path(@booking), class: "btn btn-light btn-sm" do %>
              <i class="fas fa-edit me-1"></i>Edit
            <% end %>
          <% end %>
          <%= link_to affiliate_bookings_path, class: "btn btn-outline-light btn-sm" do %>
            <i class="fas fa-arrow-left me-1"></i>Back
          <% end %>
        </div>
      </div>
      <div class="card-body p-4">
        <div class="row mb-4">
          <div class="col-md-6">
            <h6 class="text-muted mb-2">Product Information</h6>
            <p><strong>Product:</strong> <%= @booking.product&.name || 'Product' %></p>
            <p><strong>Quantity:</strong> <%= @booking.quantity %> <%= @booking.product&.unit || 'units' %></p>
            <p><strong>Price per Unit:</strong> ₹<%= number_with_delimiter(@booking.price.to_i) %></p>
            <p><strong>Total Amount:</strong> ₹<%= number_with_delimiter(@booking.total_amount.to_i) %></p>
          </div>
          <div class="col-md-6">
            <h6 class="text-muted mb-2">Booking Details</h6>
            <p>
              <strong>Status:</strong>
              <span class="badge bg-<%= @booking.pending? ? 'warning' : @booking.confirmed? ? 'info' : @booking.completed? ? 'success' : 'danger' %>">
                <%= @booking.status&.capitalize || 'Pending' %>
              </span>
            </p>
            <p><strong>Booking Date:</strong> <%= @booking.booking_date.strftime("%d %B %Y") %></p>
            <p><strong>Created:</strong> <%= @booking.created_at.strftime("%d %B %Y at %I:%M %p") %></p>
            <p><strong>Last Updated:</strong> <%= @booking.updated_at.strftime("%d %B %Y at %I:%M %p") %></p>
          </div>
        </div>

        <% if @booking.notes.present? %>
          <div class="mb-4">
            <h6 class="text-muted mb-2">Notes</h6>
            <div class="bg-light p-3 rounded">
              <%= simple_format(@booking.notes) %>
            </div>
          </div>
        <% end %>

        <div class="text-center">
          <% if @booking.pending? %>
            <div class="alert alert-warning mb-3">
              <i class="fas fa-clock me-2"></i>
              This booking is pending confirmation from the admin.
            </div>
            <% if @booking.can_be_cancelled? %>
              <%= link_to cancel_affiliate_booking_path(@booking), method: :patch,
                  class: "btn btn-warning me-2",
                  confirm: "Are you sure you want to cancel this booking?" do %>
                <i class="fas fa-times me-1"></i>Cancel Booking
              <% end %>
            <% end %>
          <% elsif @booking.confirmed? %>
            <div class="alert alert-info">
              <i class="fas fa-check-circle me-2"></i>
              This booking has been confirmed and is being processed.
            </div>
          <% elsif @booking.completed? %>
            <div class="alert alert-success">
              <i class="fas fa-check-double me-2"></i>
              This booking has been completed successfully!
            </div>
          <% elsif @booking.cancelled? %>
            <div class="alert alert-danger">
              <i class="fas fa-times-circle me-2"></i>
              This booking was cancelled.
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>