<div class="row">
  <div class="col-lg-8 col-xl-6 mx-auto">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-success text-white">
        <h4 class="mb-0">
          <i class="fas fa-plus me-2"></i>
          New Booking
        </h4>
      </div>
      <div class="card-body p-4">
        <%= form_with model: @booking, url: affiliate_bookings_path, local: true, class: "needs-validation", novalidate: true do |form| %>
          <% if @booking.errors.any? %>
            <div class="alert alert-danger mb-4">
              <h6><i class="fas fa-exclamation-triangle me-2"></i>Please fix the following errors:</h6>
              <ul class="mb-0">
                <% @booking.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= form.label :product_id, "Product", class: "form-label" %>
              <%= form.select :product_id,
                  options_from_collection_for_select(@products, :id, :name, @booking.product_id),
                  { prompt: 'Select a product' },
                  { class: "form-select", required: true, id: "product_select" } %>
              <div class="invalid-feedback">Please select a product.</div>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.label :booking_date, "Booking Date", class: "form-label" %>
              <%= form.date_field :booking_date,
                  class: "form-control",
                  value: @booking.booking_date&.strftime("%Y-%m-%d") || Date.current.strftime("%Y-%m-%d"),
                  required: true %>
              <div class="invalid-feedback">Please provide a booking date.</div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= form.label :quantity, "Quantity", class: "form-label" %>
              <%= form.number_field :quantity,
                  class: "form-control",
                  placeholder: "Enter quantity",
                  min: 1,
                  step: 0.1,
                  required: true,
                  id: "quantity_input" %>
              <div class="form-text">Product unit will be shown after selection</div>
              <div class="invalid-feedback">Please provide a valid quantity.</div>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.label :price, "Price per Unit (₹)", class: "form-label" %>
              <%= form.number_field :price,
                  class: "form-control",
                  placeholder: "Enter price per unit",
                  min: 1,
                  step: 0.01,
                  required: true,
                  id: "price_input" %>
              <div class="form-text">Current market price</div>
              <div class="invalid-feedback">Please provide a valid price.</div>
            </div>
          </div>

          <div class="mb-3">
            <div class="card bg-light">
              <div class="card-body text-center">
                <h5 class="text-primary mb-2">Total Amount: ₹<span id="total_amount">0</span></h5>
                <p class="text-muted mb-0">Quantity × Price per Unit</p>
              </div>
            </div>
          </div>

          <div class="mb-3">
            <%= form.label :notes, "Notes (Optional)", class: "form-label" %>
            <%= form.text_area :notes,
                class: "form-control",
                rows: 3,
                placeholder: "Any special requirements or notes..." %>
            <div class="form-text">Additional details about this booking.</div>
          </div>

          <div class="d-flex gap-2">
            <%= form.submit "Create Booking", class: "btn btn-success px-4" %>
            <%= link_to affiliate_bookings_path, class: "btn btn-outline-secondary" do %>
              <i class="fas fa-arrow-left me-1"></i>
              Back to Bookings
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
// Bootstrap form validation
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);

  // Calculate total amount
  function updateTotalAmount() {
    const quantity = parseFloat(document.getElementById('quantity_input').value) || 0;
    const price = parseFloat(document.getElementById('price_input').value) || 0;
    const total = quantity * price;
    document.getElementById('total_amount').textContent = total.toLocaleString();
  }

  document.getElementById('quantity_input').addEventListener('input', updateTotalAmount);
  document.getElementById('price_input').addEventListener('input', updateTotalAmount);
})();
</script>