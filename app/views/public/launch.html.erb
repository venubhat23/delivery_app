    <script>
        function createFirework(x, y) {
            const firework = document.createElement('div');
            firework.className = 'firework';
            firework.style.left = x + 'px';
            firework.style.top = y + 'px';
            firework.style.background = ['#ffd700', '#ff6b6b', '#4CAF50', '#2196F3', '#ff9800'][Math.floor(Math.random() * 5)];
            document.getElementById('fireworks').appendChild(firework);

            setTimeout(() => {
                firework.remove();
            }, 2000);
        }

        function startFireworks() {
            const interval = setInterval(() => {
                const x = Math.random() * window.innerWidth;
                const y = Math.random() * window.innerHeight;
                createFirework(x, y);
            }, 200);

            setTimeout(() => {
                clearInterval(interval);
            }, 10000);
        }

        function initiateCountdown() {
            const countdownEl = document.getElementById('countdown');
            let count = 3;

            countdownEl.classList.add('active');

            const countInterval = setInterval(() => {
                if (count > 0) {
                    countdownEl.textContent = count;
                    count--;
                } else {
                    countdownEl.textContent = 'LAUNCH!';
                    setTimeout(() => {
                        countdownEl.classList.remove('active');
                        document.getElementById('productReveal').classList.add('active');
                        startFireworks();
                        setTimeout(() => {
                            document.getElementById('successMessage').classList.add('active');
                        }, 3000);
                    }, 1000);
                    clearInterval(countInterval);
                }
            }, 1000);
        }

        function initiateSequence() {
            document.getElementById('preLaunchStage').classList.add('hidden');
            document.getElementById('launchSequence').classList.add('active');

            setTimeout(() => {
                initiateCountdown();
            }, 1000);
        }

        function initiateLaunch() {
            // Add button press animation
            const button = document.querySelector('.launch-button');
            button.style.transform = 'scale(0.9)';
            button.style.background = 'linear-gradient(45deg, #4CAF50, #45a049)';

            setTimeout(() => {
                initiateSequence();
            }, 500);
        }

        // Add some automatic particles
        setInterval(() => {
            if (document.getElementById('preLaunchStage').classList.contains('hidden')) return;

            const x = Math.random() * window.innerWidth;
            const y = window.innerHeight + 10;
            createFirework(x, y);
        }, 3000);
    </script>
