<!-- Modern Ecommerce Product Catalog -->
<div class="ecommerce-container">
  <!-- Header -->
  <div class="catalog-header">
    <div class="header-content">
      <div class="header-left">
        <h1 class="catalog-title">
          <i class="fas fa-store me-3"></i>
          Product Catalog
        </h1>
        <p class="catalog-subtitle">Choose your products and add them to cart</p>
      </div>
      <div class="header-right">
        <%= link_to franchise_bookings_main_index_path, class: 'btn-back' do %>
          <i class="fas fa-arrow-left me-2"></i>Back to Orders
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="catalog-body">
    <!-- Filter Bar -->
    <div class="filter-bar">
      <div class="filter-left">
        <div class="search-box">
          <i class="fas fa-search"></i>
          <input type="text" id="productSearch" placeholder="Search products...">
        </div>
        <div class="category-filter">
          <select id="categoryFilter" class="form-select">
            <option value="">All Categories</option>
            <% Category.all.each do |category| %>
              <option value="<%= category.id %>"><%= category.name %></option>
            <% end %>
          </select>
        </div>
      </div>
      <div class="filter-right">
        <div class="view-toggle">
          <button class="view-btn active" data-view="grid"><i class="fas fa-th"></i></button>
          <button class="view-btn" data-view="list"><i class="fas fa-list"></i></button>
        </div>
        <div class="sort-options">
          <select id="sortBy" class="form-select">
            <option value="name">Sort by Name</option>
            <option value="price">Sort by Price</option>
            <option value="category">Sort by Category</option>
          </select>
        </div>
      </div>
    </div>

    <!-- Products Grid -->
    <div class="products-section">
      <div class="products-grid" id="productsGrid">
        <% @products.each_with_index do |product, index| %>
          <div class="product-card" data-product-id="<%= product.id %>" data-category="<%= product.category_id %>" data-name="<%= product.name.downcase %>" data-price="<%= product.price %>">
            <div class="product-image">
              <% if product.image_url.present? %>
                <%= image_tag product.image_url, alt: product.name, class: 'product-img' %>
              <% else %>
                <div class="product-placeholder">
                  <i class="fas fa-box"></i>
                </div>
              <% end %>
              <div class="product-badge">
                <% if product.category %>
                  <span class="badge badge-category"><%= product.category.name %></span>
                <% end %>
              </div>
            </div>

            <div class="product-info">
              <h3 class="product-title"><%= product.name %></h3>
              <% if product.description.present? %>
                <p class="product-description"><%= truncate(product.description, length: 100) %></p>
              <% end %>

              <div class="product-details">
                <div class="price-section">
                  <span class="product-price">₹<%= number_with_delimiter(product.price) %></span>
                  <span class="price-unit">per <%= product.unit_type %></span>
                </div>
                <div class="stock-info">
                  <% if product.available_quantity > 10 %>
                    <span class="stock-badge in-stock">
                      <i class="fas fa-check-circle me-1"></i>In Stock
                    </span>
                  <% elsif product.available_quantity > 0 %>
                    <span class="stock-badge low-stock">
                      <i class="fas fa-exclamation-triangle me-1"></i>Low Stock
                    </span>
                  <% else %>
                    <span class="stock-badge out-stock">
                      <i class="fas fa-times-circle me-1"></i>Out of Stock
                    </span>
                  <% end %>
                </div>
              </div>

              <div class="product-actions">
                <div class="quantity-selector">
                  <button class="qty-btn minus" data-action="minus">-</button>
                  <input type="number" class="qty-input" value="1" min="1" max="<%= product.available_quantity %>" data-product-id="<%= product.id %>">
                  <button class="qty-btn plus" data-action="plus">+</button>
                </div>
                <button class="add-to-cart-btn"
                        data-product-id="<%= product.id %>"
                        data-product-name="<%= product.name %>"
                        data-product-price="<%= product.price %>"
                        data-product-unit="<%= product.unit_type %>"
                        data-product-image="<%= product.image_url %>"
                        <%= 'disabled' if product.available_quantity <= 0 %>>
                  <i class="fas fa-shopping-cart me-2"></i>
                  <%= product.available_quantity > 0 ? 'Add to Cart' : 'Out of Stock' %>
                </button>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Empty State -->
      <div class="empty-state" id="emptyState" style="display: none;">
        <div class="empty-content">
          <i class="fas fa-search fa-3x"></i>
          <h3>No products found</h3>
          <p>Try adjusting your search or filters</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Floating Cart -->
  <div class="floating-cart" id="floatingCart">
    <div class="cart-header" id="cartToggle">
      <div class="cart-info">
        <i class="fas fa-shopping-cart me-2"></i>
        <span class="cart-count">0</span> items
      </div>
      <div class="cart-total">
        ₹<span id="cartTotal">0</span>
      </div>
      <div class="cart-toggle">
        <i class="fas fa-chevron-up"></i>
      </div>
    </div>

    <div class="cart-body" id="cartBody">
      <div class="cart-items" id="cartItems">
        <!-- Cart items will be added here dynamically -->
      </div>
      <div class="cart-footer">
        <div class="cart-summary">
          <div class="summary-row">
            <span>Subtotal:</span>
            <span>₹<span id="cartSubtotal">0</span></span>
          </div>
          <div class="summary-row total">
            <span>Total:</span>
            <span>₹<span id="cartFinalTotal">0</span></span>
          </div>
        </div>
        <button class="checkout-btn" id="checkoutBtn" disabled>
          <i class="fas fa-check me-2"></i>Proceed to Booking
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Booking Confirmation Modal -->
<div class="modal fade" id="bookingModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="true" data-bs-keyboard="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content modern-modal">
      <div class="modal-header modern-modal-header">
        <div class="modal-title-wrapper">
          <div class="modal-icon">
            <i class="fas fa-shopping-cart"></i>
          </div>
          <div class="modal-title-content">
            <h5 class="modal-title mb-1">Confirm Your Booking</h5>
            <p class="modal-subtitle mb-0">Review your order before confirmation</p>
          </div>
        </div>
        <button type="button" class="btn-close-modern" data-bs-dismiss="modal" aria-label="Close">
          <i class="fas fa-times"></i>
        </button>
      </div>

      <div class="modal-body modern-modal-body">
        <div class="booking-summary-card" id="bookingSummary">
          <!-- Booking details will be populated here -->
        </div>

        <div class="booking-notes-section">
          <label class="form-label modern-label">
            <i class="fas fa-sticky-note me-2"></i>
            Additional Notes <span class="text-muted">(Optional)</span>
          </label>
          <textarea id="bookingNotes"
                    class="form-control modern-textarea"
                    rows="3"
                    placeholder="Any special requirements, delivery instructions, or notes..."></textarea>
        </div>
      </div>

      <div class="modal-footer modern-modal-footer">
        <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">
          <i class="fas fa-times me-2"></i>Cancel
        </button>
        <button type="button" class="btn btn-confirm" id="confirmBooking">
          <i class="fas fa-check me-2"></i>Confirm Booking
        </button>
      </div>
    </div>
  </div>
</div>

