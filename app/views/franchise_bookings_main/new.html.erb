    .filter-bar { flex-direction: column; gap: 1rem; }
    .filter-left, .filter-right { width: 100%; justify-content: space-between; }
    .products-grid { grid-template-columns: 1fr; gap: 1rem; }
    .floating-cart { width: calc(100vw - 20px); right: 10px; }
