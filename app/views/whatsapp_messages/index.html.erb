<script>
document.addEventListener('DOMContentLoaded', function() {
  // Initialize Select2 for customer search
  $('#customer-search').select2({
    theme: 'bootstrap-5',
    placeholder: 'Search by name or phone number...',
    allowClear: true,
    ajax: {
      url: '<%= search_customers_whatsapp_messages_path %>',
      dataType: 'json',
      delay: 250,
      data: function (params) {
        return {
          term: params.term
        };
      },
      processResults: function (data) {
        return {
          results: data.results
        };
      },
      cache: true
    }
  });

  // Show message function
  function showMessage(message, type = 'success') {
    const container = document.getElementById('message-container');
    const alert = document.getElementById('message-alert');

    alert.className = `alert alert-${type}`;
    alert.innerHTML = `<i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} me-2"></i>${message}`;
    container.style.display = 'block';

    // Auto-hide after 5 seconds
    setTimeout(() => {
      container.style.display = 'none';
    }, 5000);
  }

  // Show/hide loading overlay
  function toggleLoading(show) {
    const overlay = document.getElementById('loading-overlay');
    if (show) {
      overlay.classList.remove('d-none');
    } else {
      overlay.classList.add('d-none');
    }
  }

  // 3. Check total customers functionality
  document.getElementById('check-total-customers-btn').addEventListener('click', function() {
    toggleButtonLoader('check-total-customers-btn', true);

    setTimeout(() => {
      fetch('<%= total_customers_count_whatsapp_messages_path %>')
      .then(response => response.json())
      .then(data => {
        toggleButtonLoader('check-total-customers-btn', false);

        const infoDiv = document.getElementById('total-customers-info');
        const countSpan = document.getElementById('total-customers-count');

        // Animate the count
        countSpan.classList.add('number-counter');
        animateNumber(countSpan, 0, data.total_customers);

        infoDiv.style.display = 'block';
      })
      .catch(error => {
        toggleButtonLoader('check-total-customers-btn', false);
        showMessage('Error fetching customer count.', 'danger');
        console.error('Error:', error);
      });
    }, 500);
  });

  // 1. Individual Customer Message
  document.getElementById('individual-message-form').addEventListener('submit', function(e) {
    e.preventDefault();

    const customerId = $('#customer-search').val();
    const message = document.getElementById('individual-message').value.trim();

    if (!customerId) {
      showMessage('Please select a customer.', 'danger');
      return;
    }

    if (!message) {
      showMessage('Please enter a message.', 'danger');
      return;
    }

    toggleButtonLoader('send-individual-btn', true);

    fetch('<%= send_individual_message_whatsapp_messages_path %>', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
      },
      body: JSON.stringify({
        customer_id: customerId,
        message: message
      })
    })
    .then(response => response.json())
    .then(data => {
      toggleButtonLoader('send-individual-btn', false);
      if (data.success) {
        showMessage(data.message, 'success');
        // Reset form
        $('#customer-search').val(null).trigger('change');
        document.getElementById('individual-message').value = document.getElementById('individual-message').placeholder;
      } else {
        showMessage(data.error, 'danger');
      }
    })
    .catch(error => {
      toggleButtonLoader('send-individual-btn', false);
      showMessage('Error sending message. Please try again.', 'danger');
      console.error('Error:', error);
    });
  });

  // Store current unpaid customers data
  let currentUnpaidData = null;

  // Function to animate number counter
  function animateNumber(element, start, end, duration = 800) {
    const range = end - start;
    const increment = range / (duration / 16);
    let current = start;

    const timer = setInterval(() => {
      current += increment;
      if ((increment > 0 && current >= end) || (increment < 0 && current <= end)) {
        current = end;
        clearInterval(timer);
      }
      element.textContent = Math.floor(current);
    }, 16);
  }

  // Enhanced button loader function
  function toggleButtonLoader(buttonId, loading) {
    const btn = document.getElementById(buttonId);
    const btnContent = btn.querySelector('.btn-content');
    const btnLoader = btn.querySelector('.btn-loader');

    if (loading) {
      btn.classList.add('loading');
      btnContent.classList.add('d-none');
      btnLoader.classList.remove('d-none');
    } else {
      btn.classList.remove('loading');
      btnContent.classList.remove('d-none');
      btnLoader.classList.add('d-none');
    }
  }

  // 2. Check unpaid customers - Direct modal opening
  document.getElementById('check-unpaid-btn').addEventListener('click', function() {
    const month = document.getElementById('unpaid-month').value;
    const year = document.getElementById('unpaid-year').value;

    // Open modal immediately and show loading
    const modal = new bootstrap.Modal(document.getElementById('unpaidCustomersModal'));
    const modalMonthYear = document.getElementById('modal-month-year');
    const modalCount = document.getElementById('modal-unpaid-count');
    const modalTotalAmount = document.getElementById('modal-total-amount');
    const modalCustomersList = document.getElementById('modal-customers-list');
    const modalLoading = document.getElementById('modal-loading');
    const modalNoCustomers = document.getElementById('modal-no-customers');
    const modalSendBtn = document.getElementById('modal-send-reminder-btn');

    // Set modal header info
    modalMonthYear.textContent = `${Date::MONTHNAMES[month]} ${year}`;

    // Show loading initially
    modalLoading.style.display = 'block';
    modalCustomersList.style.display = 'none';
    modalNoCustomers.style.display = 'none';
    modalCount.textContent = '...';
    modalTotalAmount.textContent = '...';

    modal.show();

    // Start button loader
    toggleButtonLoader('check-unpaid-btn', true);

    // Fetch data
    fetch(`<%= unpaid_customers_data_whatsapp_messages_path %>?month=${month}&year=${year}`)
    .then(response => response.json())
    .then(data => {
      toggleButtonLoader('check-unpaid-btn', false);
      currentUnpaidData = data; // Store for later use

      // Hide loading
      modalLoading.style.display = 'none';

      if (data.count > 0) {
        // Calculate total amount
        const totalAmount = data.customers.reduce((sum, customer) => sum + customer.unpaid_amount, 0);

        // Animate counts
        animateNumber(modalCount, 0, data.count);
        modalTotalAmount.textContent = `‚Çπ${totalAmount.toLocaleString('en-IN', {minimumFractionDigits: 2})}`;

        // Show customers list
        modalCustomersList.style.display = 'block';
        modalSendBtn.style.display = 'inline-block';

        // Populate customers list
        modalCustomersList.innerHTML = data.customers.map((customer, index) => {
          const isHighAmount = customer.unpaid_amount > 1000;
          return `
            <div class="list-group-item customer-card ${isHighAmount ? 'high-amount' : ''}" style="animation-delay: ${index * 0.1}s">
              <div class="d-flex justify-content-between align-items-center">
                <div class="flex-grow-1">
                  <div class="d-flex align-items-center mb-2">
                    <div class="bg-warning rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                      <i class="fas fa-user text-dark"></i>
                    </div>
                    <div>
                      <h6 class="mb-1 fw-bold">${customer.name}</h6>
                      <small class="text-muted">
                        <i class="fas fa-phone me-1"></i>${customer.phone_number}
                      </small>
                    </div>
                  </div>
                  <div class="small text-muted">
                    <i class="fas fa-file-invoice me-1"></i>
                    ${customer.invoice_count} unpaid invoice${customer.invoice_count > 1 ? 's' : ''}
                  </div>
                </div>
                <div class="text-end">
                  <span class="amount-badge ${isHighAmount ? 'high' : ''}">
                    ‚Çπ${customer.unpaid_amount.toLocaleString('en-IN', {minimumFractionDigits: 2})}
                  </span>
                  <div class="mt-1">
                    <small class="text-muted">
                      ${isHighAmount ? 'üî¥ High Priority' : '‚ö†Ô∏è Pending'}
                    </small>
                  </div>
                </div>
              </div>
            </div>
          `;
        }).join('');

        // Add entrance animation to customer cards
        setTimeout(() => {
          modalCustomersList.querySelectorAll('.customer-card').forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            setTimeout(() => {
              card.style.transition = 'all 0.5s ease';
              card.style.opacity = '1';
              card.style.transform = 'translateY(0)';
            }, index * 100);
          });
        }, 100);

        // Enable send button in the main form
        document.getElementById('send-unpaid-btn').disabled = false;
      } else {
        // Show no customers message
        modalNoCustomers.style.display = 'block';
        modalSendBtn.style.display = 'none';
        modalCount.textContent = '0';
        modalTotalAmount.textContent = '‚Çπ0';

        // Disable send button in the main form
        document.getElementById('send-unpaid-btn').disabled = true;
      }
    })
    .catch(error => {
      toggleButtonLoader('check-unpaid-btn', false);
      modal.hide();
      showMessage('Error fetching unpaid customers.', 'danger');
      console.error('Error:', error);
    });
  });

  // 2. Send message to unpaid customers
  document.getElementById('unpaid-message-form').addEventListener('submit', function(e) {
    e.preventDefault();

    const month = document.getElementById('unpaid-month').value;
    const year = document.getElementById('unpaid-year').value;
    const message = document.getElementById('unpaid-message').value.trim();

    if (!message) {
      showMessage('Please enter a message.', 'danger');
      return;
    }

    if (confirm('Are you sure you want to send this message to all unpaid customers?')) {
      toggleButtonLoader('send-unpaid-btn', true);

      fetch('<%= send_unpaid_customers_message_whatsapp_messages_path %>', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
        },
        body: JSON.stringify({
          month: month,
          year: year,
          message: message
        })
      })
      .then(response => response.json())
      .then(data => {
        toggleButtonLoader('send-unpaid-btn', false);
        if (data.success) {
          showMessage(data.message, 'success');
        } else {
          showMessage(data.error, 'danger');
        }
      })
      .catch(error => {
        toggleButtonLoader('send-unpaid-btn', false);
        showMessage('Error sending messages. Please try again.', 'danger');
        console.error('Error:', error);
      });
    }
  });

  // 3. Send wishes to all customers
  document.getElementById('wishes-message-form').addEventListener('submit', function(e) {
    e.preventDefault();

    const message = document.getElementById('wishes-message').value.trim();

    if (!message) {
      showMessage('Please enter a message.', 'danger');
      return;
    }

    if (confirm('Are you sure you want to send this message to ALL customers? This action cannot be undone.')) {
      toggleButtonLoader('send-wishes-btn', true);

      fetch('<%= send_wishes_to_all_whatsapp_messages_path %>', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
        },
        body: JSON.stringify({
          message: message
        })
      })
      .then(response => response.json())
      .then(data => {
        toggleButtonLoader('send-wishes-btn', false);
        if (data.success) {
          showMessage(data.message, 'success');
        } else {
          showMessage(data.error, 'danger');
        }
      })
      .catch(error => {
        toggleButtonLoader('send-wishes-btn', false);
        showMessage('Error sending messages. Please try again.', 'danger');
        console.error('Error:', error);
      });
    }
  });

  // Month/year change handlers - no auto-loading
  document.getElementById('unpaid-month').addEventListener('change', function() {
    // Just update the button text to reflect the change
    // User needs to click the button to actually load data
  });

  document.getElementById('unpaid-year').addEventListener('change', function() {
    // Just update the button text to reflect the change
    // User needs to click the button to actually load data
  });

  // Modal send reminder functionality
  document.getElementById('modal-send-reminder-btn').addEventListener('click', function() {
    const modal = bootstrap.Modal.getInstance(document.getElementById('unpaidCustomersModal'));
    modal.hide();

    // Scroll to unpaid customers section and trigger send
    document.querySelector('#unpaid-message-form').scrollIntoView({ behavior: 'smooth' });

    // Highlight the send button
    const sendBtn = document.getElementById('send-unpaid-btn');
    sendBtn.classList.add('btn-pulse');
    setTimeout(() => sendBtn.classList.remove('btn-pulse'), 2000);
  });


  // Only auto-check total customers on page load
  document.getElementById('check-total-customers-btn').click();
});
</script>