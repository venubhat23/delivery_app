  border-color: #198754;
}

/* Send buttons loading states */
#send-individual-btn.loading {
  pointer-events: none;
  background: linear-gradient(-45deg, #0d6efd, #6ea8fe, #0d6efd, #6ea8fe);
  background-size: 400% 400%;
  animation: shimmer 1.5s ease-in-out infinite;
  border-color: #0d6efd;
}

#send-unpaid-btn.loading {
  pointer-events: none;
  background: linear-gradient(-45deg, #ffc107, #ffda6a, #ffc107, #ffda6a);
  background-size: 400% 400%;
  animation: shimmer 1.5s ease-in-out infinite;
  border-color: #ffc107;
}

#send-wishes-btn.loading {
  pointer-events: none;
  background: linear-gradient(-45deg, #198754, #51c878, #198754, #51c878);
  background-size: 400% 400%;
  animation: shimmer 1.5s ease-in-out infinite;
  border-color: #198754;
}

@keyframes shimmer {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

.loading-dots {
  display: inline-block;
}

.loading-dots span {
  opacity: 0;
  animation: dot-flashing 1.4s infinite;
}

.loading-dots .dot2 {
  animation-delay: 0.2s;
}

.loading-dots .dot3 {
  animation-delay: 0.4s;
}

@keyframes dot-flashing {
  0%, 80%, 100% {
    opacity: 0;
  }
  40% {
    opacity: 1;
  }
}

/* Number Counter Animation */
.number-counter {
  display: inline-block;
  font-weight: bold;
  font-size: 1.2em;
  color: #ff6b35;
  animation: countUp 0.8s ease-out;
}

@keyframes countUp {
  from {
    transform: scale(0.5);
    opacity: 0;
  }
  50% {
    transform: scale(1.2);
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

