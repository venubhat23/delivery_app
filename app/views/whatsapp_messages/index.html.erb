/* Modern WhatsApp UI Styling */
:root {
  --whatsapp-green: #25d366;
  --whatsapp-dark: #128c7e;
  --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --gradient-success: linear-gradient(135deg, #25d366 0%, #128c7e 100%);
  --gradient-warning: linear-gradient(135deg, #ffc107 0%, #ff8f00 100%);
  --shadow-modern: 0 8px 32px rgba(0, 0, 0, 0.1);
  --shadow-hover: 0 16px 48px rgba(0, 0, 0, 0.15);
  --border-radius: 16px;
}

/* Modern Card Styling */
.modern-card {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: var(--border-radius) !important;
  overflow: hidden;
  background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
}

.modern-card:hover {
  transform: translateY(-8px);
  box-shadow: var(--shadow-hover);
}

.modern-card .card-header {
  border-radius: var(--border-radius) var(--border-radius) 0 0 !important;
  position: relative;
  overflow: hidden;
}

.modern-card .card-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
  pointer-events: none;
}

/* Background Gradients */
.bg-gradient-primary {
  background: var(--gradient-primary) !important;
}

.bg-gradient-success {
  background: var(--gradient-success) !important;
}

.bg-gradient-warning {
  background: var(--gradient-warning) !important;
}

/* Modern Form Elements */
.modern-select, .modern-textarea {
  border-radius: 12px !important;
  border: 2px solid #e9ecef !important;
  padding: 12px 16px !important;
  transition: all 0.3s ease !important;
  background: #ffffff !important;
  font-size: 14px !important;
}

.modern-select:focus, .modern-textarea:focus {
  border-color: var(--whatsapp-green) !important;
  box-shadow: 0 0 0 0.2rem rgba(37, 211, 102, 0.25) !important;
  transform: translateY(-2px) !important;
}

.modern-textarea {
  resize: vertical !important;
  min-height: 120px !important;
}

/* Modern Buttons */
.modern-btn {
  border-radius: 12px !important;
  padding: 12px 24px !important;
  font-weight: 600 !important;
  text-transform: none !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  position: relative !important;
  overflow: hidden !important;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1) !important;
}

.modern-btn:hover {
  transform: translateY(-2px) !important;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15) !important;
}

.modern-btn:active {
  transform: translateY(0) !important;
}

/* Modern Alert Styling */
.modern-alert {
  border-radius: 12px !important;
  border: 0 !important;
  padding: 20px !important;
  box-shadow: var(--shadow-modern) !important;
  backdrop-filter: blur(10px) !important;
}

/* Header Animations */
.bounce-animation {
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
