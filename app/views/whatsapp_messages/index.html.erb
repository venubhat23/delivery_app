.select2-result-customer {
  display: flex;
  align-items: center;
  padding: 8px 12px;
}

.select2-result-customer__avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: var(--whatsapp-green);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
  color: white;
  font-size: 14px;
