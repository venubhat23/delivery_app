<!-- app/views/parties/show.html.erb -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">
    <i class="fas fa-user me-2"></i><%= @party.name %>
  </h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <%= link_to edit_party_path(@party), class: "btn btn-warning me-2" do %>
      <i class="fas fa-edit me-2"></i>Edit Party
    <% end %>
    <%= link_to parties_path, class: "btn btn-outline-secondary" do %>
      <i class="fas fa-arrow-left me-2"></i>Back to Parties
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-8">
    <!-- Basic Information -->
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-info-circle me-2"></i>Basic Information
        </h6>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label text-muted">Party Name</label>
              <div class="fw-bold"><%= @party.name %></div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label text-muted">Mobile Number</label>
              <div class="fw-bold">
                <i class="fas fa-phone me-2"></i><%= @party.mobile_number %>
              </div>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-12">
            <div class="mb-3">
              <label class="form-label text-muted">GST Number</label>
              <div class="fw-bold">
                <%= @party.gst_number.present? ? @party.gst_number : '-' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Shipping Information -->
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-success">
          <i class="fas fa-shipping-fast me-2"></i>Shipping Information
        </h6>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-12">
            <div class="mb-3">
              <label class="form-label text-muted">Shipping Address</label>
              <div class="fw-bold">
                <%= @party.shipping_address.present? ? @party.shipping_address : '-' %>
              </div>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-4">
            <div class="mb-3">
              <label class="form-label text-muted">City</label>
              <div class="fw-bold">
                <%= @party.shipping_city.present? ? @party.shipping_city : '-' %>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="mb-3">
              <label class="form-label text-muted">State</label>
              <div class="fw-bold">
                <%= @party.shipping_state.present? ? @party.shipping_state : '-' %>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="mb-3">
              <label class="form-label text-muted">Pincode</label>
              <div class="fw-bold">
                <%= @party.shipping_pincode.present? ? @party.shipping_pincode : '-' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Billing Information -->
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-info">
          <i class="fas fa-file-invoice me-2"></i>Billing Information
        </h6>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-8">
            <div class="mb-3">
              <label class="form-label text-muted">Billing Address</label>
              <div class="fw-bold">
                <%= @party.billing_address.present? ? @party.billing_address : '-' %>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="mb-3">
              <label class="form-label text-muted">Billing Pincode</label>
              <div class="fw-bold">
                <%= @party.billing_pincode.present? ? @party.billing_pincode : '-' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-4">
    <!-- Quick Actions -->
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-bolt me-2"></i>Quick Actions
        </h6>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <%= link_to edit_party_path(@party), class: "btn btn-warning" do %>
            <i class="fas fa-edit me-2"></i>Edit Party
          <% end %>
          <%= link_to party_path(@party), method: :delete, 
              class: "btn btn-danger", 
              confirm: "Are you sure you want to delete this party?" do %>
            <i class="fas fa-trash me-2"></i>Delete Party
          <% end %>
        </div>
      </div>
    </div>

    <!-- Party Stats -->
    <div class="card shadow">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-info">
          <i class="fas fa-chart-bar me-2"></i>Party Details
        </h6>
      </div>
      <div class="card-body">
        <div class="row text-center">
          <div class="col-6">
            <div class="border-end">
              <div class="h5 mb-0 text-primary">
                <%= @party.created_at.strftime("%d") %>
              </div>
              <small class="text-muted">Created Day</small>
            </div>
          </div>
          <div class="col-6">
            <div class="h5 mb-0 text-success">
              <%= @party.created_at.strftime("%b") %>
            </div>
            <small class="text-muted">Created Month</small>
          </div>
        </div>
        
        <hr>
        
        <div class="text-center">
          <small class="text-muted">
            <i class="fas fa-calendar me-1"></i>
            Created on <%= @party.created_at.strftime("%B %d, %Y") %>
          </small>
        </div>
        
        <% if @party.updated_at != @party.created_at %>
          <div class="text-center mt-2">
            <small class="text-muted">
              <i class="fas fa-edit me-1"></i>
              Updated on <%= @party.updated_at.strftime("%B %d, %Y") %>
            </small>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>