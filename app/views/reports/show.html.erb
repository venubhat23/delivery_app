.stats-card-warning { border-left-color: #ffc107; }
.stats-card-danger { border-left-color: #dc3545; }

.stats-icon {
  font-size: 2rem;
  margin-bottom: 0.5rem;
  opacity: 0.7;
}

.stats-number {
  font-size: 1.5rem;
  font-weight: bold;
  margin-bottom: 0.25rem;
}

.stats-label {
  font-size: 0.875rem;
  color: #6c757d;
  font-weight: 500;
}

