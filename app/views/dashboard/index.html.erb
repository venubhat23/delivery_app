<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enhanced Dashboard</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
</head>
<body class="bg-light">
<div class="container-fluid p-4">

<!-- Enhanced Dashboard -->
<div class="page-header">
  <div class="d-flex justify-content-between align-items-center">
    <div>
      <h1 class="h2 mb-2">
        <i class="fas fa-chart-line me-3"></i>Dashboard Overview
      </h1>
      <p class="text-muted mb-0">Welcome back! Here's what's happening with your delivery business today.</p>
    </div>
    <div class="d-flex gap-2">
      <%= link_to products_path, class: "btn btn-primary" do %>
        <i class="fas fa-cube me-2"></i>Manage Products
      <% end %>
      <%= link_to customers_path, class: "btn btn-success" do %>
        <i class="fas fa-users me-2"></i>View Customers
      <% end %>
    </div>
  </div>
</div>

<!-- Enhanced Stats Cards -->
<div class="row mb-4">
  <div class="col-xl-3 col-md-6 mb-4">
    <div class="stats-card stats-card-primary">
      <div class="stats-icon">
        <i class="fas fa-users"></i>
      </div>
      <div class="stats-content">
        <div class="stats-number">
          <%= @total_customers || 0 %>
        </div>
        <div class="stats-label">Total Customers</div>
        <div class="stats-trend positive">
          <i class="fas fa-arrow-up"></i>
          <span>+5.2%</span>
          <small>vs last month</small>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="stats-card stats-card-success">
      <div class="stats-icon">
        <i class="fas fa-cube"></i>
      </div>
      <div class="stats-content">
        <div class="stats-number">
          <%= @total_products || 0 %>
        </div>
        <div class="stats-label">Total Products</div>
        <div class="stats-trend positive">
          <i class="fas fa-arrow-up"></i>
          <span>+8.1%</span>
          <small>vs last month</small>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="stats-card stats-card-warning">
      <div class="stats-icon">
        <i class="fas fa-truck"></i>
      </div>
      <div class="stats-content">
        <div class="stats-number">
          <%= @pending_deliveries || 0 %>
        </div>
        <div class="stats-label">Pending Deliveries</div>
        <div class="stats-trend negative">
          <i class="fas fa-arrow-down"></i>
          <span>-3.4%</span>
          <small>vs last month</small>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="stats-card stats-card-info">
      <div class="stats-icon">
        <i class="fas fa-receipt"></i>
      </div>
      <div class="stats-content">
        <div class="stats-number">
          <%= @total_invoices || 0 %>
        </div>
        <div class="stats-label">Total Invoices</div>
        <div class="stats-trend positive">
          <i class="fas fa-arrow-up"></i>
          <span>+12.7%</span>
          <small>vs last month</small>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Charts and Analytics Row -->
<div class="row mb-4">
  <div class="col-lg-8">
    <div class="card chart-card">
      <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
          <h6 class="mb-0">
            <i class="fas fa-chart-line me-2"></i>Sales Analytics
          </h6>
          <div class="chart-controls">
            <select class="form-select form-select-sm">
              <option>Last 7 Days</option>
              <option>Last 30 Days</option>
              <option>Last 3 Months</option>
            </select>
          </div>
        </div>
      </div>
      <div class="card-body">
        <canvas id="salesChart" height="300"></canvas>
      </div>
    </div>
  </div>
  
  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <h6 class="mb-0">
          <i class="fas fa-medal me-2"></i>Top Products
        </h6>
      </div>
      <div class="card-body">
        <% if @top_products&.any? %>
          <% @top_products.each_with_index do |product, index| %>
            <div class="top-product-item">
              <div class="product-rank">
                <span class="rank-number"><%= index + 1 %></span>
              </div>
              <div class="product-details">
                <h6 class="product-name"><%= product.name %></h6>
                <small class="product-category"><%= product.unit_type || 'General' %></small>
              </div>
              <div class="product-metrics">
                <div class="metric">
                  <span class="metric-value"><%= product.available_quantity || 0 %></span>
                  <span class="metric-label">Available</span>
                </div>
                <div class="metric">
                  <span class="metric-value">â‚¹<%= number_with_delimiter(product.price || 0) %></span>
                  <span class="metric-label">Price</span>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="empty-state-sm">
            <i class="fas fa-cube"></i>
            <p>No products available</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Welcome Section and Recent Activity -->
<div class="row">
  <div class="col-lg-8">
    <div class="card welcome-card">
      <div class="card-header">
        <h6 class="mb-0">
          <i class="fas fa-rocket me-2"></i>Welcome to DeliveryPro
        </h6>
      </div>
      <div class="card-body">
        <p class="welcome-text">
          Welcome to your professional delivery management dashboard! 
          Here you can efficiently manage all aspects of your delivery business.
        </p>
        
        <div class="feature-grid">
          <div class="feature-item">
            <div class="feature-icon">
              <i class="fas fa-cube"></i>
            </div>
            <div class="feature-content">
              <h6>Product Management</h6>
              <p>Manage your inventory with advanced categorization and tracking</p>
            </div>
          </div>
          <div class="feature-item">
            <div class="feature-icon">
              <i class="fas fa-users"></i>
            </div>
            <div class="feature-content">
              <h6>Customer Database</h6>
              <p>Maintain detailed customer records with location tracking</p>
            </div>
          </div>
          <div class="feature-item">
            <div class="feature-icon">
              <i class="fas fa-route"></i>
            </div>
            <div class="feature-content">
              <h6>Smart Routing</h6>
              <p>Optimize delivery routes and assign delivery personnel</p>
            </div>
          </div>
          <div class="feature-item">
            <div class="feature-icon">
              <i class="fas fa-chart-bar"></i>
            </div>
            <div class="feature-content">
              <h6>Analytics & Reports</h6>
              <p>Track performance with detailed analytics and reporting</p>
            </div>
          </div>
        </div>
        
        <div class="quick-stats">
          <div class="row">
            <div class="col-md-3">
              <div class="quick-stat">
                <div class="stat-number"><%= @total_customers || 0 %></div>
                <div class="stat-label">Customers</div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="quick-stat">
                <div class="stat-number"><%= @total_products || 0 %></div>
                <div class="stat-label">Products</div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="quick-stat">
                <div class="stat-number"><%= @pending_deliveries || 0 %></div>
                <div class="stat-label">Pending</div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="quick-stat">
                <div class="stat-number"><%= @total_invoices || 0 %></div>
                <div class="stat-label">Invoices</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <h6 class="mb-0">
          <i class="fas fa-user-friends me-2"></i>Recent Customers
        </h6>
      </div>
      <div class="card-body">
        <% if @recent_customers&.any? %>
          <% @recent_customers.each do |customer| %>
            <div class="recent-customer-item">
              <div class="customer-avatar">
                <%= customer.name.split.map(&:first).join.upcase %>
              </div>
              <div class="customer-info">
                <h6 class="customer-name"><%= customer.name %></h6>
                <small class="customer-details">
                  <% if customer.phone_number.present? %>
                    <i class="fas fa-phone me-1"></i><%= customer.phone_number %>
                  <% else %>
                    <i class="fas fa-map-marker-alt me-1"></i>
                    <%= truncate(customer.address, length: 30) || 'No address' %>
                  <% end %>
                </small>
              </div>
              <div class="customer-status">
                <% if customer.delivery_person.present? %>
                  <i class="fas fa-check-circle text-success" title="Assigned to <%= customer.delivery_person.name %>"></i>
                <% else %>
                  <i class="fas fa-clock text-warning" title="Not assigned"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="empty-state-sm">
            <i class="fas fa-users"></i>
            <p>No customers yet</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

</div>

<style>
/* Enhanced Stats Cards */
.stats-card {
  background: var(--bg-white);
  border-radius: var(--border-radius);
  padding: 2rem;
  box-shadow: var(--box-shadow);
  transition: var(--transition);
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  gap: 1.5rem;
}

.stats-card:hover {
  box-shadow: var(--box-shadow-hover);
  transform: translateY(-5px);
}

.stats-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 4px;
  background: var(--primary-gradient);
}

.stats-card-primary::before {
  background: var(--primary-gradient);
}

.stats-card-success::before {
  background: var(--success-gradient);
}

.stats-card-warning::before {
  background: var(--warning-gradient);
}

.stats-card-info::before {
  background: var(--dark-gradient);
}

.stats-card .stats-icon {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  background: var(--primary-gradient);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 28px;
  opacity: 0.9;
  flex-shrink: 0;
}

.stats-card-success .stats-icon {
  background: var(--success-gradient);
}

.stats-card-warning .stats-icon {
  background: var(--warning-gradient);
}

.stats-card-info .stats-icon {
  background: var(--dark-gradient);
}

.stats-content {
  flex: 1;
}

.stats-number {
  font-size: 2.5rem;
  font-weight: 700;
  color: var(--text-primary);
  line-height: 1;
  margin-bottom: 0.5rem;
}

.stats-label {
  color: var(--text-secondary);
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  font-size: 0.875rem;
  margin-bottom: 0.5rem;
}

.stats-trend {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.875rem;
  font-weight: 500;
}

.stats-trend.positive {
  color: #10b981;
}

.stats-trend.negative {
  color: #ef4444;
}

.stats-trend i {
  font-size: 0.75rem;
}

.stats-trend small {
  color: var(--text-secondary);
  font-size: 0.75rem;
}

/* Chart Card */
.chart-card {
  background: var(--bg-white);
  border-radius: var(--border-radius);
  box-shadow: var(--box-shadow);
}

.chart-controls {
  display: flex;
  align-items: center;
  gap: 1rem;
}

/* Top Products */
.top-product-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem 0;
  border-bottom: 1px solid var(--border-color);
  transition: var(--transition);
}

.top-product-item:last-child {
  border-bottom: none;
}

.top-product-item:hover {
  background: var(--bg-light);
  border-radius: 8px;
  padding: 1rem;
  margin: 0 -1rem;
}

.product-rank {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: var(--primary-gradient);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.rank-number {
  color: white;
  font-weight: 700;
  font-size: 1.1rem;
}

.product-details {
  flex: 1;
}

.product-name {
  font-size: 1rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 0.25rem;
}

.product-category {
  color: var(--text-secondary);
  font-size: 0.875rem;
}

.product-metrics {
  display: flex;
  gap: 1rem;
}

.metric {
  text-align: center;
}

.metric-value {
  display: block;
  font-weight: 600;
  color: var(--text-primary);
  font-size: 0.875rem;
}

.metric-label {
  display: block;
  color: var(--text-secondary);
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Welcome Card */
.welcome-card {
  background: linear-gradient(135deg, var(--bg-white) 0%, #f8fafc 100%);
}

.welcome-text {
  color: var(--text-secondary);
  font-size: 1.1rem;
  margin-bottom: 2rem;
  line-height: 1.6;
}

.feature-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
  padding: 1rem;
  background: var(--bg-white);
  border-radius: var(--border-radius);
  border: 1px solid var(--border-color);
  transition: var(--transition);
}

.feature-item:hover {
  box-shadow: var(--box-shadow);
  transform: translateY(-2px);
}

.feature-icon {
  width: 50px;
  height: 50px;
  border-radius: 12px;
  background: var(--primary-gradient);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 20px;
  flex-shrink: 0;
}

.feature-content h6 {
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 0.5rem;
}

.feature-content p {
  color: var(--text-secondary);
  font-size: 0.875rem;
  margin: 0;
}

.quick-stats {
  background: var(--bg-white);
  border-radius: var(--border-radius);
  padding: 2rem;
  border: 1px solid var(--border-color);
}

.quick-stat {
  text-align: center;
}

.quick-stat .stat-number {
  font-size: 2rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 0.5rem;
}

.quick-stat .stat-label {
  color: var(--text-secondary);
  font-size: 0.875rem;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Recent Customers */
.recent-customer-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem 0;
  border-bottom: 1px solid var(--border-color);
  transition: var(--transition);
}

.recent-customer-item:last-child {
  border-bottom: none;
}

.recent-customer-item:hover {
  background: var(--bg-light);
  border-radius: 8px;
  padding: 1rem;
  margin: 0 -1rem;
}

.recent-customer-item .customer-avatar {
  width: 45px;
  height: 45px;
  border-radius: 50%;
  background: var(--success-gradient);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 600;
  font-size: 16px;
  flex-shrink: 0;
}

.customer-info {
  flex: 1;
}

.customer-name {
  font-size: 1rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 0.25rem;
}

.customer-details {
  color: var(--text-secondary);
  font-size: 0.875rem;
}

.customer-status {
  font-size: 1.2rem;
}

/* Empty States */
.empty-state-sm {
  text-align: center;
  padding: 2rem;
  color: var(--text-secondary);
}

.empty-state-sm i {
  font-size: 3rem;
  opacity: 0.3;
  margin-bottom: 1rem;
}

.empty-state-sm p {
  margin: 0;
}

/* Responsive Design */
@media (max-width: 768px) {
  .stats-card {
    flex-direction: column;
    text-align: center;
    gap: 1rem;
  }
  
  .stats-card .stats-icon {
    width: 60px;
    height: 60px;
    font-size: 24px;
  }
  
  .stats-number {
    font-size: 2rem;
  }
  
  .feature-grid {
    grid-template-columns: 1fr;
  }
  
  .product-metrics {
    flex-direction: column;
    gap: 0.5rem;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Sales Chart
  const ctx = document.getElementById('salesChart');
  if (ctx) {
    new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
        datasets: [{
          label: 'Sales',
          data: [12, 19, 3, 5, 2, 3, 20],
          borderColor: '#667eea',
          backgroundColor: 'rgba(102, 126, 234, 0.1)',
          tension: 0.4,
          fill: true
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            display: false
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            grid: {
              color: 'rgba(0, 0, 0, 0.1)'
            }
          },
          x: {
            grid: {
              display: false
            }
          }
        }
      }
    });
  }
});
</script>

</body>
</html>