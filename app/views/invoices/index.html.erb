    const steps = [
      { id: 'step-1', message: 'ðŸŒ± Atma Nirbhar Farm - Validating customer records and permissions...', percent: 25 },
      { id: 'step-2', message: 'ðŸ“„ Generating premium invoices with Atma Nirbhar Farm branding...', percent: 50 },
      { id: 'step-3', message: 'ðŸ“± Sending personalized WhatsApp notifications to valued customers...', percent: 75 },
      { id: 'step-4', message: 'âœ¨ Completing invoice generation for Atma Nirbhar Farm success!', percent: 100 }
    ];

    // Get modern loader elements
    const progressRings = document.querySelectorAll('.ring-progress');
    const progressNumber = document.querySelector('.percentage-number');
    const progressMessage = document.getElementById('progress-message');

    steps.forEach((step, index) => {
      setTimeout(() => {
        // Update all progress rings with different animations
        progressRings.forEach((ring, ringIndex) => {
          const radius = ring.getAttribute('r');
          const circumference = 2 * Math.PI * radius;
          const offset = circumference - (step.percent / 100) * circumference;

          ring.style.strokeDasharray = circumference;
          ring.style.strokeDashoffset = offset;
        });

        // Update percentage with smooth counting animation
        if (progressNumber) {
          const currentPercent = parseInt(progressNumber.textContent) || 0;
          animateCounter(progressNumber, currentPercent, step.percent, 800);
        }

        // Update message with typewriter effect
        if (progressMessage) {
          typewriterEffect(progressMessage, step.message);
        }

        // Update step states with enhanced animations
        const allSteps = document.querySelectorAll('.modern-step');

        // Mark previous steps as completed
        allSteps.forEach((stepEl, i) => {
          if (i < index) {
            stepEl.classList.remove('active');
            stepEl.classList.add('completed');
          } else if (i === index) {
            stepEl.classList.add('active');
            stepEl.classList.remove('completed');
          } else {
            stepEl.classList.remove('active', 'completed');
          }
        });

      }, (index + 1) * 1200); // Slower, more impressive timing
    });
  }

  // Enhanced helper functions for modern loader
  function animateCounter(element, start, end, duration) {
    const startTime = Date.now();
    const animate = () => {
      const elapsed = Date.now() - startTime;
      const progress = Math.min(elapsed / duration, 1);

      // Easing function for smooth animation
      const easeOutQuart = 1 - Math.pow(1 - progress, 4);
      const current = Math.round(start + (end - start) * easeOutQuart);

      element.textContent = current;

      if (progress < 1) {
        requestAnimationFrame(animate);
      }
    };
    requestAnimationFrame(animate);
  }

  function typewriterEffect(element, text) {
    element.textContent = '';
    let i = 0;
    const speed = 50; // milliseconds per character

    const type = () => {
      if (i < text.length) {
        element.textContent += text.charAt(i);
        i++;
        setTimeout(type, speed);
      }
    };

    type();
  }

