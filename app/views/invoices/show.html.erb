      <!-- Product-wise Summary -->
      <div style="background-color: #f8f9fa; padding: 15px; border-radius: 8px; margin-bottom: 20px;">
        <h3 style="color: #5a4ec9; margin: 0 0 15px 0; font-size: 16px;">📦 Product-wise Summary</h3>
        <table style="width: 100%; border-collapse: collapse; font-size: 12px;">
          <thead style="background-color: #343a40; color: white;">
            <tr>
              <th style="padding: 12px; text-align: left; border: 1px solid #ddd;">PRODUCT</th>
              <th style="padding: 12px; text-align: center; border: 1px solid #ddd;">TOTAL QTY</th>
              <th style="padding: 12px; text-align: right; border: 1px solid #ddd;">UNIT PRICE</th>
              <th style="padding: 12px; text-align: right; border: 1px solid #ddd;">AMOUNT</th>
              <th style="padding: 12px; text-align: center; border: 1px solid #ddd;">DELIVERIES</th>
            </tr>
          </thead>
          <tbody>
            <%
              # Calculate product-wise summary from invoice items
              product_summary = {}
              @invoice_items.each do |item|
                product = item.product
                if product_summary[product.id]
                  product_summary[product.id][:quantity] += item.quantity
                  product_summary[product.id][:total_amount] += (item.quantity * item.unit_price)
                  product_summary[product.id][:deliveries_count] += 1
                else
                  product_summary[product.id] = {
                    product: product,
                    quantity: item.quantity,
                    unit_price: item.unit_price,
                    total_amount: (item.quantity * item.unit_price),
                    deliveries_count: 1
                  }
                end
              end
            %>
            <% product_summary.each_with_index do |(product_id, summary), index| %>
              <tr style="<%= 'background-color: #f8f9fa;' if index.even? %>">
                <td style="padding: 10px; border: 1px solid #ddd;">
                  <div style="font-weight: bold; margin-bottom: 5px;"><%= summary[:product].name %></div>
                  <% if summary[:product].description.present? %>
                    <div style="font-size: 11px; color: #666; font-style: italic; margin-bottom: 5px;"><%= summary[:product].description %></div>
                  <% end %>
                  <% if summary[:product].unit_type.present? %>
                    <span style="background-color: #6c757d; color: white; padding: 3px 8px; border-radius: 4px; font-size: 10px;"><%= summary[:product].unit_type %></span>
                  <% end %>
                </td>
                <td style="padding: 10px; text-align: center; border: 1px solid #ddd;">
                  <span style="font-weight: bold; font-size: 14px;"><%= summary[:quantity] %></span>
                  <br><small style="color: #666;"><%= summary[:product].unit_type %></small>
                </td>
                <td style="padding: 10px; text-align: right; border: 1px solid #ddd; font-weight: bold;">
                  ₹<%= number_with_delimiter(summary[:unit_price], delimiter: ',') %>
                </td>
                <td style="padding: 10px; text-align: right; border: 1px solid #ddd; font-weight: bold; color: #28a745;">
                  ₹<%= number_with_delimiter(summary[:total_amount], delimiter: ',') %>
                </td>
                <td style="padding: 10px; text-align: center; border: 1px solid #ddd;">
                  <span style="background-color: #5a4ec9; color: white; padding: 5px 12px; border-radius: 15px; font-size: 11px;">
                    <%= summary[:deliveries_count] %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot style="background-color: #6c757d; color: white; font-weight: bold;">
            <tr>
              <th style="padding: 12px; border: 1px solid #ddd;">GRAND TOTAL</th>
              <th style="padding: 12px; text-align: center; border: 1px solid #ddd;">
                <%= product_summary.values.sum { |s| s[:quantity] } %>
              </th>
