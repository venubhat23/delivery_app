              class="qr-image"
            />
          </div>
        </div>

        <div class="tax-summary">
          <div>
            TAXABLE AMOUNT <span style="float: right">â‚¹ <%= number_with_delimiter(taxable_amount, delimiter: ',') %></span><br />
            <% if total_cgst > 0 %>
              <% cgst_rate = @invoice_items.sum { |item| item.product&.is_gst_applicable ? (item.product.total_cgst_percentage || 0) : 0 } / @invoice_items.select { |item| item.product&.is_gst_applicable }.count rescue 0 %>
              CGST @<%= cgst_rate %>% <span style="float: right">â‚¹ <%= number_with_delimiter(total_cgst, delimiter: ',') %></span><br />
            <% end %>
            <% if total_sgst > 0 %>
              <% sgst_rate = @invoice_items.sum { |item| item.product&.is_gst_applicable ? (item.product.total_sgst_percentage || 0) : 0 } / @invoice_items.select { |item| item.product&.is_gst_applicable }.count rescue 0 %>
              SGST @<%= sgst_rate %>% <span style="float: right">â‚¹ <%= number_with_delimiter(total_sgst, delimiter: ',') %></span><br />
            <% end %>
            <% if total_igst > 0 %>
              <% igst_rate = @invoice_items.sum { |item| item.product&.is_gst_applicable ? (item.product.total_igst_percentage || 0) : 0 } / @invoice_items.select { |item| item.product&.is_gst_applicable }.count rescue 0 %>
              IGST @<%= igst_rate %>% <span style="float: right">â‚¹ <%= number_with_delimiter(total_igst, delimiter: ',') %></span><br />
            <% end %>
          </div>
          <div class="total">
            TOTAL AMOUNT <span style="float: right">â‚¹ <%= number_with_delimiter(final_total, delimiter: ',') %></span><br />
            <span style="font-weight: normal">Received Amount</span>
            <span style="float: right">â‚¹ 0</span>
          </div>
          <div class="amount-words">
            <h3>Total Amount (in words)</h3>
            <% 
              # Convert number to words - basic implementation
              total_amount_int = final_total.to_i
              words = case total_amount_int
              when 0..20
                %w[Zero One Two Three Four Five Six Seven Eight Nine Ten Eleven Twelve Thirteen Fourteen Fifteen Sixteen Seventeen Eighteen Nineteen Twenty][total_amount_int]
              when 21..99
                tens = %w[Twenty Thirty Forty Fifty Sixty Seventy Eighty Ninety]
                units = %w[One Two Three Four Five Six Seven Eight Nine]
                tens_digit = (total_amount_int / 10) - 2
                units_digit = total_amount_int % 10
                if units_digit > 0
                  "#{tens[tens_digit]} #{units[units_digit - 1]}"
                else
                  tens[tens_digit]
                end
              when 100..999
                hundreds = (total_amount_int / 100)
                remainder = total_amount_int % 100
                result = %w[One Two Three Four Five Six Seven Eight Nine][hundreds - 1] + " Hundred"
                if remainder > 0
                  if remainder <= 20
                    result += " " + %w[One Two Three Four Five Six Seven Eight Nine Ten Eleven Twelve Thirteen Fourteen Fifteen Sixteen Seventeen Eighteen Nineteen Twenty][remainder - 1]
                  else
                    tens = %w[Twenty Thirty Forty Fifty Sixty Seventy Eighty Ninety]
                    units = %w[One Two Three Four Five Six Seven Eight Nine]
                    tens_digit = (remainder / 10) - 2
                    units_digit = remainder % 10
                    result += " " + tens[tens_digit]
                    result += " " + units[units_digit - 1] if units_digit > 0
                  end
                end
                result
              when 1000..99999
                thousands = (total_amount_int / 1000)
                remainder = total_amount_int % 1000
                
                # Convert thousands part
                if thousands <= 20
                  result = %w[One Two Three Four Five Six Seven Eight Nine Ten Eleven Twelve Thirteen Fourteen Fifteen Sixteen Seventeen Eighteen Nineteen Twenty][thousands - 1] + " Thousand"
                else
                  tens = %w[Twenty Thirty Forty Fifty Sixty Seventy Eighty Ninety]
                  units = %w[One Two Three Four Five Six Seven Eight Nine]
                  tens_digit = (thousands / 10) - 2
                  units_digit = thousands % 10
                  result = tens[tens_digit]
                  result += " " + units[units_digit - 1] if units_digit > 0
                  result += " Thousand"
                end
                
                # Add remainder if present
                if remainder > 0
                  if remainder <= 20
                    result += " " + %w[One Two Three Four Five Six Seven Eight Nine Ten Eleven Twelve Thirteen Fourteen Fifteen Sixteen Seventeen Eighteen Nineteen Twenty][remainder - 1]
                  elsif remainder < 100
                    tens = %w[Twenty Thirty Forty Fifty Sixty Seventy Eighty Ninety]
                    units = %w[One Two Three Four Five Six Seven Eight Nine]
                    tens_digit = (remainder / 10) - 2
                    units_digit = remainder % 10
                    result += " " + tens[tens_digit]
                    result += " " + units[units_digit - 1] if units_digit > 0
                  else
                    hundreds = (remainder / 100)
                    remainder_after_hundreds = remainder % 100
                    result += " " + %w[One Two Three Four Five Six Seven Eight Nine][hundreds - 1] + " Hundred"
                    if remainder_after_hundreds > 0
                      if remainder_after_hundreds <= 20
                        result += " " + %w[One Two Three Four Five Six Seven Eight Nine Ten Eleven Twelve Thirteen Fourteen Fifteen Sixteen Seventeen Eighteen Nineteen Twenty][remainder_after_hundreds - 1]
                      else
                        tens = %w[Twenty Thirty Forty Fifty Sixty Seventy Eighty Ninety]
                        units = %w[One Two Three Four Five Six Seven Eight Nine]
                        tens_digit = (remainder_after_hundreds / 10) - 2
                        units_digit = remainder_after_hundreds % 10
                        result += " " + tens[tens_digit]
                        result += " " + units[units_digit - 1] if units_digit > 0
                      end
                    end
                  end
                end
                result
              else
                "#{total_amount_int}"
              end
            %>
            <div><%= words %> Rupees</div>
          </div>
        </div>
      </div>
      
      <div class="terms-signature">
        <div class="terms">
          <h3>TERMS AND CONDITIONS</h3>
          <% if @invoice.notes.present? %>
            <div style="padding-left: 20px;"><%= simple_format(@invoice.notes) %></div>
          <% else %>
