                    <br><small style="color: #666; font-size: 10px;">
                      📝 <%= truncate(assignment.special_instructions, length: 30) %>
                    </small>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Summary Statistics -->
      <div style="display: flex; gap: 15px; margin-bottom: 20px;">
        <div style="flex: 1;">
          <div style="background-color: #f8f9fa; padding: 20px; text-align: center; border-radius: 8px;">
            <h4 style="color: #666; margin: 0 0 10px 0; font-size: 14px;">Total Deliveries</h4>
            <div style="font-size: 32px; font-weight: bold; color: #5a4ec9;"><%= @invoice.delivery_assignments.count %></div>
            <small style="color: #666; font-size: 12px;">assignments</small>
