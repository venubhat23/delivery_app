      <div class="top-bar"></div>
      <div class="invoice-meta">
        <div>Invoice No.: <span><%= @invoice.invoice_number || @invoice.id %></span></div>
        <div>Invoice Date: <span><%= @invoice.invoice_date&.strftime('%d/%m/%Y') || @invoice.created_at&.strftime('%d/%m/%Y') || Date.current.strftime('%d/%m/%Y') %></span></div>
        <div>Due Date: <span><%= @invoice.due_date&.strftime('%d/%m/%Y') || 1.month.from_now.strftime('%d/%m/%Y') %></span></div>
      </div>

      <div class="bill-ship-section">
        <div class="bill">
          <div class="bill-title">BILL TO</div>
          <div class="client-name"><%= @invoice.customer&.name || @customer&.name || 'Customer Name' %></div>
          <%= @invoice.customer&.address || @customer&.address || 'Address' %><br>
          <% phone = @invoice.phone_number || @invoice.customer&.phone_number || @customer&.phone_number %>
          <% if phone.present? %>
            <div class="mobile">Mobile: <%= phone %></div>
          <% end %>
        </div>
        <div class="ship">
          <div class="ship-title">SHIP TO</div>
          <div class="client-name"><%= @invoice.customer&.name || @customer&.name || 'Customer Name' %></div>
          <%= @invoice.customer&.address || @customer&.address || 'Address' %>
        </div>
      </div>

      <!-- Items Table -->
      <table id="item-table">
        <thead>
          <tr>
            <th>ITEMS</th>
            <th>HSN</th>
            <th>QTY.</th>
            <th>RATE</th>
            <th>TAX</th>
            <th>AMOUNT</th>
          </tr>
        </thead>
        <tbody>
          <% @invoice_items.each do |item| %>
            <tr>
              <td>
                <div><%= item.product&.name || 'Product' %></div>
                <% if item.product&.description.present? %>
                  <div class="description"><%= item.product.description %></div>
                <% end %>
              </td>
              <td><%= item.product&.hsn_sac || '' %></td>
              <td><%= item.quantity %> <%= item.product&.unit_type&.upcase || 'PCS' %></td>
              <td>â‚¹<%= number_with_delimiter(item.unit_price || 0, delimiter: ',') %></td>
              <td>
                <% 
                  base_amount = item.quantity * (item.unit_price || 0)
                  if item.product&.is_gst_applicable
                    total_gst_rate = (item.product.total_cgst_percentage || 0) + (item.product.total_sgst_percentage || 0) + (item.product.total_igst_percentage || 0)
                    # Calculate base amount before tax (from tax-inclusive amount)
                    base_amount_before_tax = (base_amount * 100 / (100 + total_gst_rate)).round(2)
                    tax_amount = base_amount - base_amount_before_tax
                  else
                    total_gst_rate = 0
                    tax_amount = 0
                  end
                %>
                â‚¹<%= number_with_delimiter(tax_amount, delimiter: ',') %><br />
                <span class="tax-rate">(<%= total_gst_rate %>%)</span>
              </td>
              <td class="amount">
                <% 
                  if item.product&.is_gst_applicable
                    total_gst_rate = (item.product.total_cgst_percentage || 0) + (item.product.total_sgst_percentage || 0) + (item.product.total_igst_percentage || 0)
                    # For GST items, show the base amount before tax
                    display_amount = (base_amount * 100 / (100 + total_gst_rate)).round(2)
                  else
                    # For non-GST items, show the full amount
                    display_amount = base_amount
                  end
                %>
                â‚¹<%= number_with_delimiter(display_amount, delimiter: ',') %>
              </td>
            </tr>
          <% end %>
        </tbody>
