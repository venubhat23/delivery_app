        margin-top: 2px;
      }

      /* Ensure proper spacing and alignment for PDF */
      .float-right {
        float: right;
      }

      .clear-both {
        clear: both;
      }
    </style>
  </head>
  <body>
    <%
      # Calculate if any product has GST
      has_gst = @invoice_items.any? { |item| item.product&.is_gst_applicable }
      
      # Calculate totals with proper GST breakdown
      taxable_amount = 0
      total_cgst = 0
      total_sgst = 0
      total_igst = 0
      
      @invoice_items.each do |item|
        # Base amount (quantity × unit_price)
        base_amount = item.quantity * (item.unit_price || 0)
        
        if item.product&.is_gst_applicable
          # For GST applicable items, the unit_price is assumed to be tax-inclusive
          # We need to extract the base amount (before tax) and calculate tax
          total_gst_rate = (item.product.total_cgst_percentage || 0) + (item.product.total_sgst_percentage || 0) + (item.product.total_igst_percentage || 0)
          
          # Calculate base amount before tax (from tax-inclusive amount)
          base_amount_before_tax = (base_amount * 100 / (100 + total_gst_rate)).round(2)
          
          # Calculate individual tax components based on base amount before tax
          cgst_rate = item.product.total_cgst_percentage || 0
          sgst_rate = item.product.total_sgst_percentage || 0
          igst_rate = item.product.total_igst_percentage || 0
          
          cgst_amount = (base_amount_before_tax * cgst_rate / 100).round(2)
          sgst_amount = (base_amount_before_tax * sgst_rate / 100).round(2)
          igst_amount = (base_amount_before_tax * igst_rate / 100).round(2)
          
          total_cgst += cgst_amount
          total_sgst += sgst_amount
          total_igst += igst_amount
          
          # For taxable amount calculation, use base amount (before tax)
          taxable_amount += base_amount_before_tax
        else
          # For non-GST items, the full amount is considered taxable for display purposes
          # but no GST is calculated
          taxable_amount += base_amount
        end
      end
      
      total_tax = total_cgst + total_sgst + total_igst
      final_total = taxable_amount + total_tax
    %>
    <div class="invoice-container">
      <!-- Tax label and original recipient -->
      <div class="tax-label-container">
        <span class="tax-label"><%= has_gst ? 'TAX INVOICE' : 'BILL OF SUPPLY' %></span>
        <span class="original-recipient">ORIGINAL FOR RECIPIENT</span>
      </div>

      <!-- Header section using table layout -->
      <table class="invoice-header-table">
        <tr>
          <td class="logo-cell">
            <img class="logo" src="https://marketincer-assets.s3.us-east-1.amazonaws.com/WhatsApp+Image+2025-06-25+at+8.04.23+AM.jpeg" alt="Atma Nirbhir Farm Logo" />
          </td>
          <td class="company-info-cell">
            <div class="company-name">Atma Nirbhar Farm</div>
            <div class="address">
              #827 4th main 9th Block 2nd Stage Near Hanumagiri temple Nagarbhavi,
              Bangalore, Karnataka, 560072
            </div>
            <div class="contact">
              <span class="highlight">Mobile:</span> 9972808044 &nbsp;&nbsp;
              <span class="highlight">GSTIN:</span> 29AOIPT8113K1ZC &nbsp;&nbsp;
              <span class="highlight">PAN Number:</span> AOIPT8113K <br />
              <span class="highlight">Email:</span> atmanirbharfarm@gmail.com
            </div>
          </td>
        </tr>
      </table>

      <!-- Top bar -->
      <div class="top-bar"></div>

      <!-- Invoice meta information -->
      <table class="invoice-meta-table">
        <tr>
          <td>Invoice No.: <span><%= @invoice.invoice_number || @invoice.id %></span></td>
          <td>Invoice Date: <span><%= @invoice.invoice_date&.strftime('%d/%m/%Y') || @invoice.created_at&.strftime('%d/%m/%Y') || Date.current.strftime('%d/%m/%Y') %></span></td>
          <td>Due Date: <span><%= @invoice.due_date&.strftime('%d/%m/%Y') || 1.month.from_now.strftime('%d/%m/%Y') %></span></td>
        </tr>
      </table>

      <!-- Bill to and Ship to section -->
      <table class="bill-ship-table">
        <tr>
          <td>
            <div class="bill-title">BILL TO</div>
            <div class="client-name"><%= @invoice.customer&.name || @customer&.name || 'Customer Name' %></div>
            <div><%= @invoice.customer&.address || @customer&.address || 'Address' %></div>
            <% phone = @invoice.phone_number || @invoice.customer&.phone_number || @customer&.phone_number %>
            <% if phone.present? %>
              <div class="mobile">Mobile: <%= phone %></div>
            <% end %>
          </td>
          <td>
            <div class="ship-title">SHIP TO</div>
            <div class="client-name"><%= @invoice.customer&.name || @customer&.name || 'Customer Name' %></div>
            <div><%= @invoice.customer&.address || @customer&.address || 'Address' %></div>
          </td>
        </tr>
      </table>

      <!-- Items table -->
      <table class="items-table">
        <thead>
          <tr>
            <th>ITEMS</th>
            <th class="center-align">HSN</th>
            <th class="center-align">QTY.</th>
            <th class="right-align">RATE</th>
            <th class="right-align">TAX</th>
            <th class="right-align">AMOUNT</th>
          </tr>
        </thead>
        <tbody>
          <% @invoice_items.each do |item| %>
            <tr>
              <td>
                <div><%= item.product&.name || 'Product' %></div>
                <% if item.product&.description.present? %>
                  <div class="description"><%= item.product.description %></div>
                <% end %>
              </td>
              <td class="center-align"><%= item.product&.hsn_sac || '-' %></td>
              <td class="center-align"><%= item.quantity %> <%= item.product&.unit_type || 'PCS' %></td>
              <td class="right-align">₹<%= number_with_delimiter(item.unit_price || 0, delimiter: ',') %></td>
              <td class="right-align">
                <% 
                  base_amount = item.quantity * (item.unit_price || 0)
                  if item.product&.is_gst_applicable
                    total_gst_rate = (item.product.total_cgst_percentage || 0) + (item.product.total_sgst_percentage || 0) + (item.product.total_igst_percentage || 0)
                    # Calculate base amount before tax (from tax-inclusive amount)
                    base_amount_before_tax = (base_amount * 100 / (100 + total_gst_rate)).round(2)
                    tax_amount = base_amount - base_amount_before_tax
                  else
                    total_gst_rate = 0
                    tax_amount = 0
                  end
                %>
                ₹<%= number_with_delimiter(tax_amount, delimiter: ',') %><br />
                <span class="tax-rate">(<%= total_gst_rate %>%)</span>
              </td>
              <td class="right-align">
                <% 
                  if item.product&.is_gst_applicable
                    total_gst_rate = (item.product.total_cgst_percentage || 0) + (item.product.total_sgst_percentage || 0) + (item.product.total_igst_percentage || 0)
                    # For GST items, show the base amount before tax
                    display_amount = (base_amount * 100 / (100 + total_gst_rate)).round(2)
                  else
                    # For non-GST items, show the full amount
                    display_amount = base_amount
                  end
                %>
                ₹<%= number_with_delimiter(display_amount, delimiter: ',') %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <!-- Subtotal section -->
      <table class="subtotal-table">
        <tr class="section-border">
          <td>SUBTOTAL</td>
          <td>-</td>
          <td style="width: 40%;">
            <table class="subtotal-values-table">
              <tr>
                <td>₹ <%= number_with_delimiter(total_tax, delimiter: ',') %></td>
                <td>₹ <%= number_with_delimiter(taxable_amount, delimiter: ',') %></td>
              </tr>
            </table>
          </td>
        </tr>
      </table>

      <!-- Details section -->
      <table class="details-main-table">
        <tr>
          <td class="bank-details-cell">
            <div class="bank-details">
              <h3>BANK DETAILS</h3>
              <table class="bank-details-table">
                <tr>
                  <td>Name:</td>
                  <td>Atma Nirbhar Farm</td>
                </tr>
                <tr>
                  <td>IFSC Code:</td>
                  <td>CNRB0003194</td>
                </tr>
                <tr>
                  <td>Account No:</td>
                  <td>3194201000718</td>
                </tr>
                <tr>
                  <td>Bank:</td>
                  <td>Canara Bank</td>
                </tr>
              </table>

              <h4>PAYMENT QR CODE</h4>
              <table class="payment-qr-table">
                <tr>
                  <td>
                    <p>UPI ID:<br />9972808044@ybl</p>
                    <div class="upi-icons">
                      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/4f/PhonePe_Logo.svg/1280px-PhonePe_Logo.svg.png" alt="PhonePe" />
                      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/d/d1/Google_Pay_Logo.svg/512px-Google_Pay_Logo.svg.png" alt="GPay" />
                      <img src="https://upload.wikimedia.org/wikipedia/commons/5/5b/Paytm_logo.png" alt="Paytm" />
                      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/59/Unified_Payments_Interface_logo.svg/1920px-Unified_Payments_Interface_logo.svg.png" alt="UPI" />
                    </div>
                  </td>
                  <td style="text-align: center;">
                    <img src="https://api.qrserver.com/v1/create-qr-code/?size=100x100&data=upi://pay?pa=9972808044@ybl" alt="QR Code" class="qr-image" />
                  </td>
                </tr>
              </table>
            </div>
          </td>
          <td class="tax-summary-cell">
            <div class="tax-summary">
              <div>
                TAXABLE AMOUNT <span class="float-right">₹ <%= number_with_delimiter(taxable_amount, delimiter: ',') %></span>
                <div class="clear-both"></div>
                <% if total_cgst > 0 %>
                  <% cgst_rate = @invoice_items.sum { |item| item.product&.is_gst_applicable ? (item.product.total_cgst_percentage || 0) : 0 } / @invoice_items.select { |item| item.product&.is_gst_applicable }.count rescue 0 %>
                  CGST @<%= cgst_rate %>% <span class="float-right">₹ <%= number_with_delimiter(total_cgst, delimiter: ',') %></span>
                  <div class="clear-both"></div>
                <% end %>
                <% if total_sgst > 0 %>
                  <% sgst_rate = @invoice_items.sum { |item| item.product&.is_gst_applicable ? (item.product.total_sgst_percentage || 0) : 0 } / @invoice_items.select { |item| item.product&.is_gst_applicable }.count rescue 0 %>
                  SGST @<%= sgst_rate %>% <span class="float-right">₹ <%= number_with_delimiter(total_sgst, delimiter: ',') %></span>
                  <div class="clear-both"></div>
                <% end %>
                <% if total_igst > 0 %>
                  <% igst_rate = @invoice_items.sum { |item| item.product&.is_gst_applicable ? (item.product.total_igst_percentage || 0) : 0 } / @invoice_items.select { |item| item.product&.is_gst_applicable }.count rescue 0 %>
                  IGST @<%= igst_rate %>% <span class="float-right">₹ <%= number_with_delimiter(total_igst, delimiter: ',') %></span>
                  <div class="clear-both"></div>
                <% end %>
              </div>
              <div class="total">
                TOTAL AMOUNT <span class="float-right">₹ <%= number_with_delimiter(final_total, delimiter: ',') %></span>
                <div class="clear-both"></div>
                <span style="font-weight: normal">Received Amount</span>
                <span class="float-right">₹ 0</span>
                <div class="clear-both"></div>
              </div>
              <div class="amount-words">
                <h3>Total Amount (in words)</h3>
                <% 
                  # Convert number to words - basic implementation
                  total_amount_int = final_total.to_i
                  words = case total_amount_int
                  when 0..20
                    %w[Zero One Two Three Four Five Six Seven Eight Nine Ten Eleven Twelve Thirteen Fourteen Fifteen Sixteen Seventeen Eighteen Nineteen Twenty][total_amount_int]
                  when 21..99
                    tens = %w[Twenty Thirty Forty Fifty Sixty Seventy Eighty Ninety]
                    units = %w[One Two Three Four Five Six Seven Eight Nine]
                    tens_digit = (total_amount_int / 10) - 2
                    units_digit = total_amount_int % 10
                    if units_digit > 0
                      "#{tens[tens_digit]} #{units[units_digit - 1]}"
                    else
                      tens[tens_digit]
                    end
                  when 100..999
                    hundreds = (total_amount_int / 100)
                    remainder = total_amount_int % 100
                    result = %w[One Two Three Four Five Six Seven Eight Nine][hundreds - 1] + " Hundred"
                    if remainder > 0
                      if remainder <= 20
                        result += " " + %w[One Two Three Four Five Six Seven Eight Nine Ten Eleven Twelve Thirteen Fourteen Fifteen Sixteen Seventeen Eighteen Nineteen Twenty][remainder - 1]
                      else
                        tens = %w[Twenty Thirty Forty Fifty Sixty Seventy Eighty Ninety]
                        units = %w[One Two Three Four Five Six Seven Eight Nine]
                        tens_digit = (remainder / 10) - 2
                        units_digit = remainder % 10
                        result += " " + tens[tens_digit]
                        result += " " + units[units_digit - 1] if units_digit > 0
                      end
                    end
                    result
                  when 1000..99999
                    thousands = (total_amount_int / 1000)
                    remainder = total_amount_int % 1000
                    
                    # Convert thousands part
                    if thousands <= 20
                      result = %w[One Two Three Four Five Six Seven Eight Nine Ten Eleven Twelve Thirteen Fourteen Fifteen Sixteen Seventeen Eighteen Nineteen Twenty][thousands - 1] + " Thousand"
                    else
                      tens = %w[Twenty Thirty Forty Fifty Sixty Seventy Eighty Ninety]
                      units = %w[One Two Three Four Five Six Seven Eight Nine]
                      tens_digit = (thousands / 10) - 2
                      units_digit = thousands % 10
                      result = tens[tens_digit]
                      result += " " + units[units_digit - 1] if units_digit > 0
                      result += " Thousand"
                    end
                    
                    # Add remainder if present
                    if remainder > 0
                      if remainder <= 20
                        result += " " + %w[One Two Three Four Five Six Seven Eight Nine Ten Eleven Twelve Thirteen Fourteen Fifteen Sixteen Seventeen Eighteen Nineteen Twenty][remainder - 1]
                      elsif remainder < 100
                        tens = %w[Twenty Thirty Forty Fifty Sixty Seventy Eighty Ninety]
                        units = %w[One Two Three Four Five Six Seven Eight Nine]
                        tens_digit = (remainder / 10) - 2
                        units_digit = remainder % 10
                        result += " " + tens[tens_digit]
                        result += " " + units[units_digit - 1] if units_digit > 0
                      else
                        hundreds = (remainder / 100)
                        remainder_after_hundreds = remainder % 100
                        result += " " + %w[One Two Three Four Five Six Seven Eight Nine][hundreds - 1] + " Hundred"
                        if remainder_after_hundreds > 0
                          if remainder_after_hundreds <= 20
                            result += " " + %w[One Two Three Four Five Six Seven Eight Nine Ten Eleven Twelve Thirteen Fourteen Fifteen Sixteen Seventeen Eighteen Nineteen Twenty][remainder_after_hundreds - 1]
                          else
                            tens = %w[Twenty Thirty Forty Fifty Sixty Seventy Eighty Ninety]
                            units = %w[One Two Three Four Five Six Seven Eight Nine]
                            tens_digit = (remainder_after_hundreds / 10) - 2
                            units_digit = remainder_after_hundreds % 10
                            result += " " + tens[tens_digit]
                            result += " " + units[units_digit - 1] if units_digit > 0
                          end
                        end
                      end
                    end
                    result
                  else
                    "#{total_amount_int}"
                  end
                %>
                <div><%= words %> Rupees</div>
              </div>
            </div>
          </td>
        </tr>
      </table>

      <!-- Terms and signature section -->
      <table class="terms-signature-table">
        <tr>
          <td class="terms-cell">
            <div class="terms">
              <h3>TERMS AND CONDITIONS</h3>
              <% if @invoice.notes.present? %>
                <div style="padding-left: 20px;"><%= simple_format(@invoice.notes) %></div>
              <% else %>
                <ol>
                  <li>Kindly Do Make Every Month Payment on or Before the 10th of The Month</li>
                  <li>Kindly Share the Screenshot Immediately Once the Payment is Done to Confirm Your Payment</li>
                </ol>
              <% end %>
            </div>
          </td>
          <td class="signature-cell">
            <div class="signature-box"></div>
            <div class="signature-label">AUTHORISED SIGNATORY FOR</div>
            <div class="signature-name">Atma Nirbhar Farm</div>
          </td>
        </tr>
      </table>
    </div>
  </body>
