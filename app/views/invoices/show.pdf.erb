      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
        background-color: #f5f5f5;
      }

      .invoice-container {
        max-width: 800px;
        margin: 0 auto;
        background-color: white;
        padding: 30px;
      }

      /* Use table-based layout instead of flexbox for PDF compatibility */
      .invoice-header-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 15px;
      }

      .invoice-header-table td {
        vertical-align: top;
        padding: 0;
      }

      .logo-cell {
        width: 200px;
        padding-right: 20px;
      }

      .logo {
        width: 150px;
