                    result = ""
                    if num >= 100
                      result += ones[num / 100] + " Hundred "
                      num %= 100
                    end
                    if num >= 20
                      result += tens[num / 10] + " "
                      num %= 10
                    elsif num >= 10
                      result += teens[num - 10] + " "
                      num = 0
                    end
                    if num > 0
