                  <% if summary[:product].description.present? %>
                    <div class="product-desc"><%= summary[:product].description %></div>
                  <% end %>
                  <% if summary[:product].unit_type.present? %>
                    <span class="product-unit-badge"><%= summary[:product].unit_type %></span>
                  <% end %>
                </td>
                <td class="text-center" data-label="TOTAL QTY">
                  <span class="qty-value"><%= summary[:quantity] %></span><br>
                  <small class="qty-unit"><%= summary[:product].unit_type %></small>
                </td>
                <td class="text-right" data-label="UNIT PRICE">‚Çπ<%= number_with_delimiter(summary[:unit_price], delimiter: ',') %></td>
                <td class="text-right" data-label="AMOUNT">
                  <span class="amount-value">‚Çπ<%= number_with_delimiter(summary[:total_amount], delimiter: ',') %></span>
                </td>
                <td class="text-center" data-label="DELIVERIES">
                  <span class="delivery-badge"><%= summary[:deliveries_count] %></span>
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <th data-label="PRODUCT">GRAND TOTAL</th>
              <th class="text-center" data-label="TOTAL QTY"><%= product_summary.values.sum { |s| s[:quantity] } %></th>
              <th data-label="UNIT PRICE"></th>
              <th class="text-right" data-label="AMOUNT">‚Çπ<%= number_with_delimiter(@invoice.total_amount.round(2), delimiter: ',') %></th>
              <th class="text-center" data-label="DELIVERIES">
                <span class="delivery-badge-total"><%= @invoice.delivery_assignments.count %></span>
              </th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>

    <!-- Detailed Delivery History -->
    <div class="delivery-history-section">
      <div class="history-header">
        <h3 class="section-heading">Detailed Delivery History</h3>
        <small class="history-note">Sorted by completion date</small>
      </div>
      <div class="delivery-history-table-wrapper">
        <table class="delivery-history-table">
          <thead>
            <tr>
              <th>DATE</th>
              <th>PRODUCT</th>
              <th class="text-center">QTY</th>
              <th class="text-right">AMOUNT</th>
              <th class="text-center">STATUS</th>
              <th>DELIVERED BY</th>
            </tr>
          </thead>
          <tbody>
            <% @delivery_assignments_array.each_with_index do |assignment, index| %>
              <%
                # Safe calculations with nil checks
                product_price = assignment.product&.price || 0
                quantity = assignment.quantity || 0
                total_amount = quantity * product_price
                discount_amount = assignment.discount_amount || 0
                has_discount = discount_amount > 0
                discount_percentage = has_discount && total_amount > 0 ? ((discount_amount / total_amount) * 100).round(1) : 0
              %>
              <tr>
                <td data-label="DATE">
                  <% display_date = assignment.scheduled_date %>
                  <%= display_date&.strftime('%d %b %Y') %>
                  <% if assignment.completed_at.present? %>
                    <br><small class="time-completed"><%= assignment.completed_at.strftime('%H:%M') %></small>
                  <% end %>
                </td>
                <td data-label="PRODUCT">
                  <div class="product-name"><%= assignment.product.name %></div>
                  <% if has_discount %>
                    <br><small style="color: #f39c12; font-size: 10px;">
                      üí∞ Discount: ‚Çπ<%= discount_amount %>
                      (<%= discount_percentage %>%)
                    </small>
                  <% end %>
                </td>
                <td class="text-center" data-label="QTY">
                  <span class="qty-value"><%= assignment.quantity %></span><br>
                  <small class="qty-unit"><%= assignment.product.unit_type %></small>
                </td>
                <td class="text-right" data-label="AMOUNT">
                  <% if has_discount %>
                    <s style="color: #666; font-size: 10px;">‚Çπ<%= number_with_delimiter(total_amount, delimiter: ',') %></s>
                    <br><strong class="amount-value">‚Çπ<%= number_with_delimiter(assignment.final_amount_after_discount, delimiter: ',') %></strong>
                  <% else %>
                    <strong class="amount-value">‚Çπ<%= number_with_delimiter(assignment.final_amount_after_discount, delimiter: ',') %></strong>
                  <% end %>
                </td>
                <td class="text-center" data-label="STATUS">
                  <% case assignment.status %>
                  <% when 'completed' %>
                    <span class="status-completed">‚úì Completed</span>
                  <% when 'pending' %>
                    <span class="status-badge" style="background: #ffc107; color: #212529;">‚è∞ Pending</span>
                  <% when 'cancelled' %>
                    <span class="status-badge" style="background: #dc3545; color: white;">‚ùå Cancelled</span>
                  <% else %>
                    <span class="status-badge" style="background: #6c757d; color: white;"><%= assignment.status.humanize %></span>
                  <% end %>
                </td>
                <td data-label="DELIVERED BY">
                  <div><%= assignment.user&.name || assignment.delivery_person&.name || 'Not assigned' %></div>
                  <% if assignment.special_instructions.present? %>
                    <br><small style="color: #666; font-size: 10px;">
                      üìù <%= truncate(assignment.special_instructions, length: 30) %>
                    </small>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Summary Statistics -->
    <div class="summary-stats-section">
      <div class="stat-box">
        <h4 class="stat-box-title">Total Deliveries</h4>
        <div class="stat-box-value"><%= @total_assignments_count %></div>
        <small class="stat-box-label">assignments</small>
      </div>
      <div class="stat-box">
        <h4 class="stat-box-title">Success Rate</h4>
        <div class="stat-box-value stat-success"><%= @success_rate %>%</div>
        <small class="stat-box-label">completed on time</small>
      </div>
    </div>

    <!-- Report Information -->
    <div class="report-info-box">
      <div class="info-icon">‚ÑπÔ∏è</div>
      <div class="info-content">
        <h4 class="info-title">Monthly Delivery Report</h4>
        <p class="info-text">
          This report shows all deliveries for <strong><%= @invoice.customer&.name %></strong>
          during <strong><%= @invoice.invoice_date&.strftime('%B %Y') %></strong> included in this invoice.
          Total amount: <strong class="info-amount">‚Çπ<%= number_with_delimiter(@invoice.total_amount.round(2), delimiter: ',') %></strong>
        </p>
      </div>
    </div>
  </div>

  <!-- Mark as Completed Modal -->
  <div id="completeModal" class="modal">
    <div class="modal-content">
      <div class="modal-header success">
        <h2 class="modal-title">‚úÖ Mark Invoice as Completed</h2>
        <button class="close-btn" onclick="closeCompleteModal()">&times;</button>
      </div>
      <div class="modal-body">
        <div class="alert alert-info">
          <strong>üìã Confirm Payment Completion</strong>
        </div>

        <div class="invoice-details-card">
          <h4>Invoice Details:</h4>
          <p><strong>Invoice Number:</strong> <%= @invoice.formatted_number || @invoice.invoice_number %></p>
          <p><strong>Customer:</strong> <%= @invoice.customer&.name %></p>
          <p><strong>Amount:</strong> ‚Çπ<%= number_with_delimiter(@invoice.total_amount, delimiter: ',') %></p>
        </div>

        <div class="form-group">
          <label class="form-label">
            <input type="checkbox" id="paymentConfirmation" required style="margin-right: 8px;">
            <strong>Yes, I confirm that the customer has paid for this invoice</strong>
          </label>
        </div>

        <div class="alert alert-warning">
          <small>‚ö†Ô∏è This action will mark the invoice as completed. This action cannot be undone.</small>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" onclick="closeCompleteModal()">Cancel</button>
        <button type="button" class="btn btn-success" id="confirmComplete" disabled>Mark as Completed</button>
      </div>
    </div>
  </div>


  <!-- Success Modal -->
  <div id="successModal" class="modal">
    <div class="modal-content">
      <div class="modal-header success">
        <h2 class="modal-title">‚úÖ Success</h2>
        <button class="close-btn" onclick="closeSuccessModal()">&times;</button>
      </div>
      <div class="modal-body">
        <div class="success-message">
          <div class="success-icon">‚úÖ</div>
          <div class="success-title" id="successTitle">Action Completed!</div>
          <div class="success-text" id="successText">The operation was completed successfully.</div>
          <button class="btn btn-success" onclick="closeSuccessModal()">OK</button>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Global variables
    const invoiceId = '<%= @invoice.id %>';
    const invoiceToken = '<%= @invoice.share_token %>';

    // Complete Invoice Modal
    function openCompleteModal() {
      document.getElementById('completeModal').style.display = 'block';
      document.getElementById('paymentConfirmation').checked = false;
      document.getElementById('confirmComplete').disabled = true;
    }

    function closeCompleteModal() {
      document.getElementById('completeModal').style.display = 'none';
    }

    // Delete Invoice Modal
    function openDeleteModal() {
      document.getElementById('deleteModal').style.display = 'block';
      document.getElementById('deleteConfirmation').value = '';
      document.getElementById('confirmDelete').disabled = true;
      document.getElementById('deleteConfirmation').classList.remove('is-valid', 'is-invalid');

      // Focus on input field
      setTimeout(() => {
        document.getElementById('deleteConfirmation').focus();
      }, 300);
    }

    function closeDeleteModal() {
      document.getElementById('deleteModal').style.display = 'none';
    }

    // Success Modal
    function showSuccessModal(title, text) {
      document.getElementById('successTitle').textContent = title;
      document.getElementById('successText').textContent = text;
      document.getElementById('successModal').style.display = 'block';
    }

    function closeSuccessModal() {
      document.getElementById('successModal').style.display = 'none';
    }

    // Close modals when clicking outside
    window.onclick = function(event) {
      const completeModal = document.getElementById('completeModal');
      const deleteModal = document.getElementById('deleteModal');
      const successModal = document.getElementById('successModal');

      if (event.target === completeModal) {
        closeCompleteModal();
      }
      if (event.target === deleteModal) {
        closeDeleteModal();
      }
      if (event.target === successModal) {
        closeSuccessModal();
      }
    }

    // Enable/disable complete button based on checkbox
    document.getElementById('paymentConfirmation').addEventListener('change', function() {
      document.getElementById('confirmComplete').disabled = !this.checked;
    });

    // Enable/disable delete button based on input
    document.getElementById('deleteConfirmation').addEventListener('input', function() {
      const confirmBtn = document.getElementById('confirmDelete');
      const inputValue = this.value.toLowerCase().trim();

      if (inputValue === 'delete') {
        confirmBtn.disabled = false;
        this.classList.remove('is-invalid');
        this.classList.add('is-valid');
      } else {
        confirmBtn.disabled = true;
        this.classList.remove('is-valid');
        if (inputValue.length > 0) {
          this.classList.add('is-invalid');
        } else {
          this.classList.remove('is-invalid');
        }
      }
    });

    // Handle complete action
    document.getElementById('confirmComplete').addEventListener('click', function() {
      const confirmBtn = this;
      const originalText = confirmBtn.textContent;

      confirmBtn.disabled = true;
      confirmBtn.textContent = 'Processing...';

      // Use fetch API to handle JSON response
      fetch(`/invoices_public/${invoiceId}/complete`, {
        method: 'PATCH',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.getAttribute('content') || '<%= form_authenticity_token %>',
          'Accept': 'application/json'
        },
        body: JSON.stringify({})
      })
      .then(response => response.json())
      .then(data => {
        closeCompleteModal();

        if (data.success) {
          showSuccessModal('Invoice Completed!', data.message || 'The invoice has been successfully marked as completed.');

          // Hide the complete button since invoice is now completed
          const completeBtn = document.querySelector('.complete-btn');
          if (completeBtn) {
            completeBtn.style.display = 'none';
          }
        } else {
          showSuccessModal('Error', data.message || 'Failed to mark invoice as completed.');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        closeCompleteModal();
        showSuccessModal('Error', 'An error occurred while completing the invoice.');
      })
      .finally(() => {
        confirmBtn.disabled = false;
        confirmBtn.textContent = originalText;
      });
    });

    // Handle delete action
    document.getElementById('confirmDelete').addEventListener('click', function() {
      const confirmBtn = this;
      const originalText = confirmBtn.textContent;

      confirmBtn.disabled = true;
      confirmBtn.textContent = 'Deleting...';

      // Use fetch API to handle JSON response
      fetch(`/invoices_public/${invoiceId}`, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.getAttribute('content') || '<%= form_authenticity_token %>',
          'Accept': 'application/json'
        }
      })
      .then(response => response.json())
      .then(data => {
        closeDeleteModal();

        if (data.success) {
          showSuccessModal('Invoice Deleted!', data.message || 'The invoice and all related data have been successfully deleted.');

          // Redirect after a delay
          setTimeout(() => {
            window.location.href = '/invoices_public';
          }, 2000);
        } else {
          showSuccessModal('Error', data.message || 'Failed to delete invoice.');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        closeDeleteModal();
        showSuccessModal('Error', 'An error occurred while deleting the invoice.');
      })
      .finally(() => {
        confirmBtn.disabled = false;
        confirmBtn.textContent = originalText;
      });
    });

    // Add CSRF token to head if not present
    if (!document.querySelector('meta[name="csrf-token"]')) {
      const csrfMeta = document.createElement('meta');
      csrfMeta.name = 'csrf-token';
      csrfMeta.content = '<%= form_authenticity_token %>';
      document.head.appendChild(csrfMeta);
    }
  </script>
</body>
</html>