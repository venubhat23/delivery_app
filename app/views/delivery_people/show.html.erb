<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Delivery Person: <%= @delivery_person.name %></h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <%= link_to "Back to List", delivery_people_path, class: "btn btn-secondary me-2" %>
    <%= link_to "Edit", edit_delivery_person_path(@delivery_person), class: "btn btn-primary me-2" %>
  </div>
</div>

<div class="row">
  <!-- Main Details -->
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Profile Information</h5>
      </div>
      <div class="card-body">
        <p><strong>Email:</strong> <%= @delivery_person.email %></p>
        <% if @delivery_person.phone.present? %>
          <p><strong>Phone:</strong> <%= @delivery_person.phone %></p>
        <% end %>

        <p><strong>Status:</strong>
            <span class="badge bg-success">Active</span>
       
        </p>
      </div>
    </div>

    <!-- Assigned Deliveries -->
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="card-title mb-0">Assigned Deliveries</h5>
      </div>
      <div class="card-body">
        <% if @delivery_person.delivery_assignments.any? %>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>Customer</th>
                <th>Status</th>
                <th>Date</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @delivery_person.delivery_assignments.each do |assignment| %>
                <tr>
                  <td><%= assignment.id %></td>
                  <td><%= assignment.customer.name %></td>
                  <td>
                    <% case assignment.status %>
                    <% when 'pending' %>
                      <span class="badge bg-warning text-dark">Pending</span>
                    <% when 'in_progress' %>
                      <span class="badge bg-info">In Progress</span>
                    <% when 'completed' %>
                      <span class="badge bg-success">Completed</span>
                    <% when 'cancelled' %>
                      <span class="badge bg-danger">Cancelled</span>
                    <% end %>
                  </td>
                  <td><%= assignment.scheduled_date.strftime("%B %d, %Y") %></td>
                  <td><%= link_to "View", delivery_assignment_path(assignment), class: "btn btn-sm btn-outline-primary" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p class="text-muted">No assignments yet.</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Sidebar -->
  <div class="col-md-4">
    <!-- Action Panel -->
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Actions</h5>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <%= link_to "Edit", edit_delivery_person_path(@delivery_person), class: "btn btn-primary" %>
          
        </div>
    
        <p><strong>Email:</strong> <%= @delivery_person.email %></p>
        <% if @delivery_person.phone.present? %>
          <p><strong>Phone:</strong> <%= @delivery_person.phone %></p>
        <% end %>
   
      </div>
    </div>

    <!-- Assigned Deliveries -->
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="card-title mb-0">Assigned Deliveries</h5>
      </div>
      <div class="card-body">
        <% if @delivery_person.delivery_assignments.any? %>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>Customer</th>
                <th>Status</th>
                <th>Date</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @delivery_person.delivery_assignments.each do |assignment| %>
                <tr>
                  <td><%= assignment.id %></td>
                  <td><%= assignment.customer.name %></td>
                  <td>
                    <% case assignment.status %>
                    <% when 'pending' %>
                      <span class="badge bg-warning text-dark">Pending</span>
                    <% when 'in_progress' %>
                      <span class="badge bg-info">In Progress</span>
                    <% when 'completed' %>
                      <span class="badge bg-success">Completed</span>
                    <% when 'cancelled' %>
                      <span class="badge bg-danger">Cancelled</span>
                    <% end %>
                  </td>
                  <td><%= assignment.scheduled_date.strftime("%B %d, %Y") %></td>
                  <td><%= link_to "View", delivery_assignment_path(assignment), class: "btn btn-sm btn-outline-primary" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p class="text-muted">No assignments yet.</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Sidebar -->
  <div class="col-md-4">
    <!-- Action Panel -->
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Actions</h5>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <%= link_to "Edit", edit_delivery_person_path(@delivery_person), class: "btn btn-primary" %>
        </div>
      </div>
    </div>

    <!-- Summary -->
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="card-title mb-0">Summary</h5>
      </div>
      <div class="card-body">
        <p><strong>Deliveries Assigned:</strong> <%= @delivery_person.delivery_assignments.count %></p>
        <p><strong>Created:</strong> <small class="text-muted"><%= time_ago_in_words(@delivery_person.created_at) %> ago</small></p>
        <% if @delivery_person.updated_at != @delivery_person.created_at %>
          <p><strong>Last Updated:</strong> <small class="text-muted"><%= time_ago_in_words(@delivery_person.updated_at) %> ago</small></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
  </div>
    </div>

   
  </div>
</div>
