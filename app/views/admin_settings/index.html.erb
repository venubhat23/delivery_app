<% content_for :title, "Admin Settings" %>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h3><i class="fas fa-cog me-2"></i>Admin Settings</h3>
          <% if @admin_setting.persisted? %>
            <%= link_to "Edit Settings", edit_admin_setting_path(@admin_setting), class: "btn btn-primary" %>
          <% else %>
            <%= link_to "Setup Settings", new_admin_setting_path, class: "btn btn-success" %>
          <% end %>
        </div>
        <div class="card-body">
          <% if @admin_setting.persisted? %>
            <div class="alert alert-info">
              <i class="fas fa-info-circle me-2"></i>
              Your admin settings have been configured. Click "Edit Settings" to make changes.
            </div>
            <%= link_to "View Settings", @admin_setting, class: "btn btn-outline-primary" %>
          <% else %>
            <div class="alert alert-warning">
              <i class="fas fa-exclamation-triangle me-2"></i>
              Admin settings need to be configured. Please click "Setup Settings" to get started.
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>