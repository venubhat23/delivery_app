<% content_for :title, "Daily Procurement" %>

<div class="container-fluid py-4">
  <!-- Header Section -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="h3 mb-1 text-gray-800">
            <i class="fas fa-clipboard-list text-primary me-2"></i>
            Daily Procurement Management
          </h1>
          <p class="text-muted mb-0">Track and manage daily milk procurement from vendors</p>
        </div>
        <div class="d-flex gap-2">
          <%= link_to analytics_procurement_schedules_path, class: "btn btn-info" do %>
            <i class="fas fa-chart-line me-1"></i>
            Analytics
          <% end %>
          <%= link_to new_procurement_assignment_path, class: "btn btn-primary" do %>
            <i class="fas fa-plus me-1"></i>
            Add Assignment
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <%= form_with url: procurement_assignments_path, method: :get, local: true, class: "row g-3 align-items-end" do |form| %>
        <div class="col-md-2">
          <%= form.label :status, "Status", class: "form-label fw-bold" %>
          <%= form.select :status, 
              options_for_select([
                ['All Status', ''],
                ['Pending', 'pending'],
                ['Completed', 'completed'],
                ['Cancelled', 'cancelled']
              ], params[:status]),
              {},
              { class: "form-select" } %>
        </div>
        
        <div class="col-md-3">
          <%= form.label :vendor, "Vendor", class: "form-label fw-bold" %>
          <%= form.select :vendor, 
              options_from_collection_for_select(@vendors.map { |v| [v, v] }, :last, :first, params[:vendor]),
              { prompt: 'All Vendors' },
              { class: "form-select" } %>
        </div>
        
        <div class="col-md-2">
          <%= form.label :start_date, "From Date", class: "form-label fw-bold" %>
          <%= form.date_field :start_date, value: params[:start_date], class: "form-control" %>
        </div>
        
        <div class="col-md-2">
          <%= form.label :end_date, "To Date", class: "form-label fw-bold" %>
          <%= form.date_field :end_date, value: params[:end_date], class: "form-control" %>
        </div>
        
        <div class="col-md-2">
          <%= form.label :date, "Specific Date", class: "form-label fw-bold" %>
          <%= form.date_field :date, value: params[:date], class: "form-control" %>
        </div>
        
        <div class="col-md-1">
          <%= form.submit "Filter", class: "btn btn-primary w-100" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                Total Assignments
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @total_assignments %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-list fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-warning shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                Pending
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @pending_assignments %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-clock fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-success shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                Completed
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @completed_assignments %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-check-circle fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-danger shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                Overdue
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @overdue_assignments %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Assignments Table -->
  <div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
      <h6 class="m-0 font-weight-bold text-primary">Procurement Assignments</h6>
      <div>
        <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#bulkCompleteModal">
          <i class="fas fa-check-double me-1"></i>
          Bulk Complete
        </button>
      </div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
          <thead class="table-light">
            <tr>
              <th width="40">
                <input type="checkbox" id="selectAll" class="form-check-input">
              </th>
              <th>Date</th>
              <th>Vendor</th>
              <th>Planned Quantity</th>
              <th>Actual Quantity</th>
              <th>Buying Price</th>
              <th>Selling Price</th>
              <th>Profit</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @procurement_assignments.each do |assignment| %>
              <tr class="<%= 'table-warning' if assignment.overdue? %>">
                <td>
                  <input type="checkbox" name="assignment_ids[]" value="<%= assignment.id %>" class="form-check-input assignment-checkbox">
                </td>
                <td>
                  <div>
                    <span class="fw-bold"><%= assignment.date.strftime('%d %b %Y') %></span><br>
                    <small class="text-muted"><%= assignment.date.strftime('%A') %></small>
                  </div>
                </td>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="avatar avatar-sm me-3">
                      <div class="avatar-initial rounded-circle bg-label-primary">
                        <%= assignment.vendor_name.first.upcase %>
                      </div>
                    </div>
                    <div>
                      <h6 class="mb-0 text-sm"><%= assignment.vendor_name %></h6>
                      <small class="text-muted"><%= assignment.unit.titleize %></small>
                    </div>
                  </div>
                </td>
                <td>
                  <span class="fw-bold text-primary"><%= number_with_delimiter(assignment.planned_quantity) %></span>
                  <small class="text-muted d-block"><%= assignment.unit %></small>
                </td>
                <td>
                  <% if assignment.actual_quantity.present? %>
                    <span class="fw-bold text-success"><%= number_with_delimiter(assignment.actual_quantity) %></span>
                    <small class="text-muted d-block"><%= assignment.unit %></small>
                    <% if assignment.variance != 0 %>
                      <small class="badge <%= assignment.variance > 0 ? 'bg-success' : 'bg-warning' %>">
                        <%= assignment.variance > 0 ? '+' : '' %><%= assignment.variance_percentage %>%
                      </small>
                    <% end %>
                  <% else %>
                    <span class="text-muted">Not recorded</span>
                  <% end %>
                </td>
                <td>
                  <span class="fw-bold text-success">₹<%= number_with_delimiter(assignment.buying_price) %></span>
                  <small class="text-muted d-block">per <%= assignment.unit.singularize %></small>
                </td>
                <td>
                  <span class="fw-bold text-info">₹<%= number_with_delimiter(assignment.selling_price) %></span>
                  <small class="text-muted d-block">per <%= assignment.unit.singularize %></small>
                </td>
                <td>
                  <% if assignment.completed? %>
                    <div>
                      <span class="fw-bold text-success">₹<%= number_with_delimiter(assignment.profit) %></span><br>
                      <small class="badge bg-light-success text-success">
                        <%= assignment.profit_margin_percentage %>% margin
                      </small>
                    </div>
                  <% else %>
                    <span class="text-muted">Pending</span>
                  <% end %>
                </td>
                <td>
                  <span class="<%= assignment.status_badge_class %>">
                    <%= assignment.status.titleize %>
                  </span>
                  <% if assignment.overdue? %>
                    <br><small class="badge bg-danger">Overdue</small>
                  <% end %>
                </td>
                <td>
                  <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                      <i class="fas fa-ellipsis-v"></i>
                    </button>
                    <ul class="dropdown-menu">
                      <li>
                        <%= link_to procurement_assignment_path(assignment), class: "dropdown-item" do %>
                          <i class="fas fa-eye me-2"></i>View Details
                        <% end %>
                      </li>
                      <li>
                        <%= link_to edit_procurement_assignment_path(assignment), class: "dropdown-item" do %>
                          <i class="fas fa-edit me-2"></i>Edit
                        <% end %>
                      </li>
                      <% if assignment.pending? %>
                        <li>
                          <button type="button" class="dropdown-item" 
                                  onclick="openCompleteModal(<%= assignment.id %>, '<%= assignment.vendor_name %>', <%= assignment.planned_quantity %>)">
                            <i class="fas fa-check me-2"></i>Mark Complete
                          </button>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                          <%= link_to cancel_procurement_assignment_path(assignment), 
                                      method: :patch, 
                                      class: "dropdown-item text-danger",
                                      data: { confirm: "Cancel this assignment?" } do %>
                            <i class="fas fa-times me-2"></i>Cancel
                          <% end %>
                        </li>
                      <% end %>
                      <li><hr class="dropdown-divider"></li>
                      <li>
                        <%= link_to procurement_assignment_path(assignment), 
                                    method: :delete, 
                                    class: "dropdown-item text-danger",
                                    data: { confirm: "Delete this assignment?" } do %>
                          <i class="fas fa-trash me-2"></i>Delete
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <% if @procurement_assignments.empty? %>
          <div class="text-center py-5">
            <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">No procurement assignments found</h5>
            <p class="text-muted">Create procurement schedules to generate daily assignments.</p>
            <%= link_to new_procurement_schedule_path, class: "btn btn-primary" do %>
              <i class="fas fa-plus me-1"></i>
              Create Schedule
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Complete Assignment Modal -->
<div class="modal fade" id="completeModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Complete Procurement Assignment</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <%= form_with url: "", method: :patch, local: true, id: "completeForm" do |form| %>
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label fw-bold">Vendor:</label>
            <span id="modalVendorName" class="form-control-plaintext"></span>
          </div>
          <div class="mb-3">
            <label class="form-label fw-bold">Planned Quantity:</label>
            <span id="modalPlannedQuantity" class="form-control-plaintext"></span>
          </div>
          <div class="mb-3">
            <label for="actualQuantity" class="form-label fw-bold">Actual Quantity Received:</label>
            <input type="number" class="form-control" id="actualQuantity" name="actual_quantity" 
                   step="0.01" min="0.01" required>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-success">Mark Complete</button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Select all checkbox functionality
  const selectAllCheckbox = document.getElementById('selectAll');
  const assignmentCheckboxes = document.querySelectorAll('.assignment-checkbox');
  
  selectAllCheckbox.addEventListener('change', function() {
    assignmentCheckboxes.forEach(checkbox => {
      checkbox.checked = this.checked;
    });
  });
  
  // Complete assignment modal
  window.openCompleteModal = function(assignmentId, vendorName, plannedQuantity) {
    document.getElementById('modalVendorName').textContent = vendorName;
    document.getElementById('modalPlannedQuantity').textContent = plannedQuantity + ' liters';
    document.getElementById('completeForm').action = `/milk-procurement/${assignmentId}/complete`;
    document.getElementById('actualQuantity').value = plannedQuantity;
    
    const modal = new bootstrap.Modal(document.getElementById('completeModal'));
    modal.show();
  };
});
</script>

