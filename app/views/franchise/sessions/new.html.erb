<!-- Franchise Login Page -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center py-4">
          <h3 class="mb-0">
            <i class="fas fa-store me-2"></i>
            Franchise Login
          </h3>
          <p class="mb-0 mt-2">Access Your Franchise Portal</p>
        </div>

        <div class="card-body p-4">
          <%= form_with url: franchise_login_path, method: :post, local: true, class: 'needs-validation', novalidate: true do |form| %>
            <div class="mb-4">
              <%= form.label :email, class: 'form-label fw-bold' do %>
                <i class="fas fa-envelope me-1 text-primary"></i>
                Email Address
              <% end %>
              <%= form.email_field :email,
                    class: 'form-control form-control-lg',
                    placeholder: 'Enter your email address',
                    required: true,
                    autofocus: true %>
              <div class="invalid-feedback">
                Please provide a valid email address.
              </div>
            </div>

            <div class="mb-4">
              <%= form.label :password, class: 'form-label fw-bold' do %>
                <i class="fas fa-lock me-1 text-primary"></i>
                Password
              <% end %>
              <%= form.password_field :password,
                    class: 'form-control form-control-lg',
                    placeholder: 'Enter your password',
                    required: true %>
              <div class="invalid-feedback">
                Please provide your password.
              </div>
            </div>

            <div class="d-grid gap-2">
              <%= form.submit 'Login to Portal',
                    class: 'btn btn-primary btn-lg' %>
            </div>
          <% end %>
        </div>

        <div class="card-footer text-center py-3 bg-light">
          <small class="text-muted">
            <i class="fas fa-shield-alt me-1"></i>
            Secure franchise access portal
          </small>
        </div>
      </div>

      <div class="text-center mt-4">
        <small class="text-muted">
          <i class="fas fa-question-circle me-1"></i>
          Having trouble accessing your account? Contact your administrator.
        </small>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    padding-top: 2rem;
  }

  .card {
    border: none;
    border-radius: 15px;
    overflow: hidden;
  }

  .card-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    border-radius: 15px 15px 0 0 !important;
  }

  .form-control:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
  }

  .btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    border-radius: 10px;
    padding: 12px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
  }

  .text-primary {
    color: #667eea !important;
  }
</style>

<script>
  // Bootstrap form validation
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      var forms = document.getElementsByClassName('needs-validation');
      var validation = Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
</script>