<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Franchise Portal - Farm Delivery Management</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body class="bg-light">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <%= link_to franchise_dashboard_path, class: 'navbar-brand d-flex align-items-center' do %>
          <i class="fas fa-store me-2"></i>
          <span>Franchise Portal</span>
        <% end %>

        <% if franchise_logged_in? %>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
              <li class="nav-item">
                <%= link_to franchise_dashboard_path, class: 'nav-link' do %>
                  <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to franchise_bookings_path, class: 'nav-link' do %>
                  <i class="fas fa-shopping-cart me-1"></i>My Bookings
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_franchise_booking_path, class: 'nav-link' do %>
                  <i class="fas fa-plus me-1"></i>New Booking
                <% end %>
              </li>
            </ul>

            <ul class="navbar-nav">
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                  <i class="fas fa-user me-1"></i><%= current_franchise.name %>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                  <li>
                    <span class="dropdown-item-text">
                      <small class="text-muted"><%= current_franchise.email %></small>
                    </span>
                  </li>
                  <li><hr class="dropdown-divider"></li>
                  <li>
                    <%= link_to franchise_logout_path, method: :delete, class: 'dropdown-item' do %>
                      <i class="fas fa-sign-out-alt me-2"></i>Logout
                    <% end %>
                  </li>
                </ul>
              </li>
            </ul>
          </div>
        <% end %>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% if notice %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i><%= notice %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% end %>

    <% if alert %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i><%= alert %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% end %>

    <% flash.each do |type, message| %>
      <% next if type.in?(['notice', 'alert']) %>
      <div class="alert alert-<%= type == 'success' ? 'success' : 'info' %> alert-dismissible fade show" role="alert">
        <i class="fas fa-info-circle me-2"></i><%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% end %>

    <!-- Main Content -->
    <main class="container-fluid py-4">
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-3 mt-5">
      <div class="container-fluid text-center">
        <p class="mb-0">
          <i class="fas fa-copyright me-1"></i>
          <%= Date.current.year %> Farm Delivery Management - Franchise Portal
        </p>
      </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>