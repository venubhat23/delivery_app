<% content_for :title, "Purchase Invoice ##{@purchase_invoice.invoice_number}" %>

<div class="header">
  <div class="company-name">Atma Nirbhar Farm</div>
  <div class="contact-info">
    #827 4th main 9th Block 2nd Stage Near Hanumagiri temple Nagarbhavi<br>
    Bangalore, Karnataka, 560072<br>
    Mobile: 9972808044 | Email: atmanirbharfarm@gmail.com<br>
    GSTIN: 29AOIPT8113K1ZC | PAN: AOIPT8113K
  </div>
</div>

<div class="document-type">Purchase Invoice</div>

<div class="invoice-info">
  <div class="left-info">
    <strong>Invoice No:</strong> <%= @purchase_invoice.invoice_number %><br>
    <strong>Invoice Date:</strong> <%= @purchase_invoice.invoice_date.strftime('%d/%m/%Y') %><br>
    <strong>Due Date:</strong> <%= @purchase_invoice.due_date.strftime('%d/%m/%Y') %>
  </div>
  <div class="right-info">
    <strong>Status:</strong> <%= @purchase_invoice.status.capitalize %><br>
    <strong>Total Amount:</strong> ₹ <%= number_with_delimiter(@purchase_invoice.total_amount) %>
  </div>
</div>

<div class="supplier-info">
  <div class="section-title">Supplier Information</div>
  <strong><%= @purchase_invoice.supplier_name %></strong><br>
  <% if @purchase_invoice.supplier_address.present? %>
    <%= @purchase_invoice.supplier_address %><br>
  <% end %>
  <% if @purchase_invoice.supplier_phone.present? %>
    Mobile: <%= @purchase_invoice.supplier_phone %><br>
  <% end %>
  <% if @purchase_invoice.supplier_email.present? %>
    Email: <%= @purchase_invoice.supplier_email %>
  <% end %>
</div>

<div class="footer-spacing"></div>

<!-- Page 2 -->
<div class="page-break">
  <div class="section-title">Items Details</div>
  
  <table class="items-table">
    <thead>
      <tr>
        <th>S.No</th>
        <th>Item Description</th>
        <th>Quantity</th>
        <th>Rate</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @purchase_invoice.purchase_invoice_items.each_with_index do |item, index| %>
        <tr>
          <td style="text-align: center;"><%= index + 1 %></td>
          <td>
            <strong><%= item.purchase_product.name %></strong><br>
            <% if item.purchase_product.description.present? %>
              <em><%= item.purchase_product.description %></em>
            <% end %>
          </td>
          <td style="text-align: center;"><%= item.quantity %></td>
          <td class="amount">₹ <%= number_with_delimiter(item.unit_price) %></td>
          <td class="amount">₹ <%= number_with_delimiter(item.total_price) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="total-section">
    <table class="total-table">
      <tr>
        <td>Subtotal:</td>
        <td>₹ <%= number_with_delimiter(@purchase_invoice.subtotal) %></td>
      </tr>
      <% if @purchase_invoice.tax_amount.present? && @purchase_invoice.tax_amount > 0 %>
        <tr>
          <td>Tax:</td>
          <td>₹ <%= number_with_delimiter(@purchase_invoice.tax_amount) %></td>
        </tr>
      <% end %>
      <tr class="total-row">
        <td><strong>Total Amount:</strong></td>
        <td><strong>₹ <%= number_with_delimiter(@purchase_invoice.total_amount) %></strong></td>
      </tr>
    </table>
  </div>

  <div class="clearfix"></div>
  <div class="footer-spacing"></div>
</div>

<!-- Page 3 -->
<div class="page-break">
  <div class="section-title">Payment Information</div>
  
  <div style="margin-bottom: 30px;">
    <strong>Bank Details:</strong><br>
    Account Name: Atma Nirbhar Farm<br>
    Account Number: 3194201000718<br>
    IFSC Code: CNRB0003194<br>
    Bank: Canara Bank<br><br>
    
    <strong>UPI Payment:</strong><br>
    UPI ID: 9972808044@ybl<br>
    Mobile: 9972808044
  </div>

  <div class="terms-conditions">
    <div class="section-title">Terms and Conditions</div>
    <ol>
      <li>Payment terms as per agreement</li>
      <li>All payments are subject to realization</li>
      <li>Any disputes should be resolved within 7 days of invoice date</li>
