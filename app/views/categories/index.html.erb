<!-- Enhanced Categories Index Page -->
<div class="container-fluid">
  <div class="row" style="margin-top: 2rem; margin-left: 1rem; padding-top: 1.5rem;">
    <div class="col-12">
      <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h1 class="h2 mb-2">
              <i class="fas fa-tags me-3"></i>Category Management
            </h1>
            <p class="text-muted mb-0">Organize your products with categories</p>
          </div>
          <div class="d-flex gap-2">
            <div class="badge-container me-3">
              <span class="badge bg-light text-dark fs-6 px-3 py-2">
                <i class="fas fa-list me-1"></i>
                Total: <%= @total_categories %>
              </span>
            </div>
            <%= link_to new_category_path, class: "btn btn-primary" do %>
              <i class="fas fa-plus me-2"></i>Add Category
            <% end %>
          </div>
        </div>
      </div>

      <!-- Categories Table -->
      <% if @categories.any? %>
        <div class="card mt-4">
          <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
              <h6 class="mb-0">
                <i class="fas fa-list me-2"></i>Categories List
              </h6>
              <span class="badge bg-primary"><%= @categories.count %> items</span>
            </div>
          </div>
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead>
                  <tr>
                    <th scope="col">
                      <i class="fas fa-tags me-1"></i>Category
                    </th>
                    <th scope="col">
                      <i class="fas fa-info-circle me-1"></i>Description
                    </th>
                    <th scope="col">
                      <i class="fas fa-box me-1"></i>Products
                    </th>
                    <th scope="col">
                      <i class="fas fa-rupee-sign me-1"></i>Total Value
                    </th>
                    <th scope="col">
                      <i class="fas fa-cogs me-1"></i>Actions
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <% @categories.each do |category| %>
                    <tr class="category-row">
                      <td>
                        <div class="d-flex align-items-center">
                          <div class="category-avatar me-3">
                            <%= category.name.first.upcase %>
                          </div>
                          <div>
                            <div class="category-dot me-2" style="background-color: <%= category.color %>"></div>
                            <%= link_to category.name, category_path(category), class: "text-decoration-none fw-bold text-primary" %>
                          </div>
                        </div>
                      </td>
                      <td>
                        <span class="text-muted">
                          <%= category.description.present? ? truncate(category.description, length: 80) : "No description" %>
                        </span>
                      </td>
                      <td>
                        <span class="badge bg-info px-3 py-2">
                          <i class="fas fa-box me-1"></i>
                          <%= category.products_count %>
                        </span>
                      </td>
                      <td>
                        <span class="fw-bold text-success fs-6">
                          â‚¹<%= number_with_precision(category.total_products_value, precision: 2) %>
                        </span>
                      </td>
                      <td>
                        <div class="btn-group" role="group">
                          <%= link_to category_path(category), class: "btn btn-sm btn-outline-primary", title: "View Details" do %>
                            <i class="fas fa-eye"></i>
                          <% end %>
                          <%= link_to edit_category_path(category), class: "btn btn-sm btn-outline-warning", title: "Edit Category" do %>
                            <i class="fas fa-edit"></i>
                          <% end %>
                          <%= button_to category_path(category),
                              method: :delete,
                              form: { "data-turbo-confirm": "Are you sure you want to delete this category? All associated products will be uncategorized.", class: "d-inline" },
                              class: "btn btn-sm btn-outline-danger",
                              title: "Delete Category" do %>
                            <i class="fas fa-trash"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% else %>
        <div class="card mt-4">
          <div class="card-body">
            <div class="empty-state">
              <i class="fas fa-tags"></i>
              <h4>No Categories Found</h4>
              <p>Start organizing your products by creating your first category.</p>
              <%= link_to new_category_path, class: "btn btn-primary mt-3" do %>
                <i class="fas fa-plus me-2"></i>Create First Category
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

