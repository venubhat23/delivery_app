<% content_for :title, "Customer Wallets" %>

<div class="container-fluid">
  <!-- Header Section -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="h3 mb-0">Customer Wallets</h1>
          <p class="text-muted mb-0">Manage customer wallet balances and transactions</p>
        </div>
        <div class="d-flex gap-2">
          <span class="badge bg-primary fs-6">Total Wallet Balance: ₹<%= number_with_delimiter(@total_wallet_amount, delimiter: ',') %></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters Section -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <%= form_with url: customer_wallets_path, method: :get, local: true, class: "d-flex gap-3 align-items-end" do |form| %>
            <div class="flex-grow-1">
              <%= form.text_field :search,
                                  placeholder: "Search customers by name...",
                                  value: params[:search],
                                  class: "form-control" %>
            </div>
            <div>
              <%= form.submit "Search", class: "btn btn-primary" %>
            </div>
            <% if params[:search].present? %>
              <div>
                <%= link_to "Clear", customer_wallets_path, class: "btn btn-outline-secondary" %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Customer Wallets Table -->
  <div class="row">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
          <h5 class="card-title mb-0">Customer Wallet Balances</h5>
        </div>
        <div class="card-body p-0">
          <% if @customers.any? %>
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead class="table-light">
                  <tr>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Wallet Balance</th>
                    <th scope="col">Delivery Person</th>
                    <th scope="col" class="text-center">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @customers.each do |customer| %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <div class="avatar-circle bg-primary text-white me-3">
                            <%= customer.name&.first&.upcase %>
                          </div>
                          <div>
                            <div class="fw-semibold"><%= customer.name %></div>
                            <small class="text-muted">ID: <%= customer.id %></small>
                          </div>
                        </div>
                      </td>
                      <td>
                        <span class="badge bg-light text-dark">
                          <%= customer.phone_number.present? ? customer.phone_number : "Not provided" %>
                        </span>
                      </td>
                      <td>
                        <span class="badge <%= customer.wallet_amount > 0 ? 'bg-success' : 'bg-warning' %> fs-6">
                          ₹<%= number_with_delimiter(customer.wallet_amount, delimiter: ',') %>
                        </span>
                      </td>
                      <td>
                        <% if customer.delivery_person.present? %>
                          <span class="badge bg-info text-dark">
                            <%= customer.delivery_person.name %>
                          </span>
                        <% else %>
                          <span class="text-muted">Not assigned</span>
                        <% end %>
                      </td>
                      <td class="text-center">
                        <div class="btn-group" role="group">
                          <!-- Add Funds Button -->
                          <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#addFundsModal<%= customer.id %>">
                            <i class="fas fa-plus"></i> Add
                          </button>

                          <!-- Deduct Funds Button -->
                          <button type="button" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#deductFundsModal<%= customer.id %>">
                            <i class="fas fa-minus"></i> Deduct
                          </button>

                          <!-- Edit Button -->
                          <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editWalletModal<%= customer.id %>">
                            <i class="fas fa-edit"></i>
                          </button>
                        </div>

                        <!-- Add Funds Modal -->
                        <div class="modal fade" id="addFundsModal<%= customer.id %>" tabindex="-1">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title">Add Funds - <%= customer.name %></h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                              </div>
                              <%= form_with url: add_funds_customer_wallet_path(customer), method: :patch, local: true do |form| %>
                                <div class="modal-body">
                                  <div class="mb-3">
                                    <label class="form-label">Amount to Add (₹)</label>
                                    <%= form.number_field :amount, step: 0.01, min: 0.01, class: "form-control", placeholder: "Enter amount" %>
                                  </div>
                                  <div class="alert alert-info">
                                    Current Balance: ₹<%= number_with_delimiter(customer.wallet_amount, delimiter: ',') %>
                                  </div>
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                  <%= form.submit "Add Funds", class: "btn btn-success" %>
                                </div>
                              <% end %>
                            </div>
                          </div>
                        </div>

                        <!-- Deduct Funds Modal -->
                        <div class="modal fade" id="deductFundsModal<%= customer.id %>" tabindex="-1">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title">Deduct Funds - <%= customer.name %></h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                              </div>
                              <%= form_with url: deduct_funds_customer_wallet_path(customer), method: :patch, local: true do |form| %>
                                <div class="modal-body">
                                  <div class="mb-3">
                                    <label class="form-label">Amount to Deduct (₹)</label>
                                    <%= form.number_field :amount, step: 0.01, min: 0.01, max: customer.wallet_amount, class: "form-control", placeholder: "Enter amount" %>
                                  </div>
                                  <div class="alert alert-warning">
                                    Current Balance: ₹<%= number_with_delimiter(customer.wallet_amount, delimiter: ',') %>
                                  </div>
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                  <%= form.submit "Deduct Funds", class: "btn btn-warning" %>
                                </div>
                              <% end %>
                            </div>
                          </div>
                        </div>

                        <!-- Edit Wallet Modal -->
                        <div class="modal fade" id="editWalletModal<%= customer.id %>" tabindex="-1">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title">Edit Wallet - <%= customer.name %></h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                              </div>
                              <%= form_with model: customer, url: customer_wallet_path(customer), method: :patch, local: true do |form| %>
                                <div class="modal-body">
                                  <div class="mb-3">
                                    <label class="form-label">Wallet Balance (₹)</label>
                                    <%= form.number_field :wallet_amount, step: 0.01, min: 0, class: "form-control" %>
                                  </div>
                                  <div class="alert alert-info">
                                    Current Balance: ₹<%= number_with_delimiter(customer.wallet_amount, delimiter: ',') %>
                                  </div>
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                  <%= form.submit "Update Wallet", class: "btn btn-primary" %>
                                </div>
                              <% end %>
                            </div>
                          </div>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>

            <!-- Pagination -->
            <div class="card-footer bg-white border-top">
              <%= paginate @customers, theme: 'twitter-bootstrap-4' %>
            </div>
          <% else %>
            <div class="text-center py-5">
              <i class="fas fa-wallet fa-3x text-muted mb-3"></i>
              <h5 class="text-muted">No customers found</h5>
              <p class="text-muted">
                <% if params[:search].present? %>
                  No customers match your search criteria.
                <% else %>
                  No customers available in the system.
                <% end %>
              </p>
              <% if params[:search].present? %>
                <%= link_to "Clear Search", customer_wallets_path, class: "btn btn-outline-primary" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.avatar-circle {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 16px;
}
</style>