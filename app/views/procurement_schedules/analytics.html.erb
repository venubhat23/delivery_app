<% content_for :title, "Milk Supply Analytics" %>

<div class="container-fluid py-4">
  <!-- Header Section -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="h3 mb-1 text-gray-800">
            <i class="fas fa-analytics text-primary me-2"></i>
            Milk Supply & Analytics Dashboard
          </h1>
          <p class="text-muted mb-0">Comprehensive insights into milk procurement and business performance</p>
        </div>
        <div class="d-flex gap-2">
          <%= link_to procurement_schedules_path, class: "btn btn-secondary" do %>
            <i class="fas fa-list me-1"></i>
            View Schedules
          <% end %>
          <%= link_to new_procurement_schedule_path, class: "btn btn-primary" do %>
            <i class="fas fa-plus me-1"></i>
            New Schedule
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Date Range Filter -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <%= form_with url: analytics_procurement_schedules_path, method: :get, local: true, class: "row g-3 align-items-end" do |form| %>
        <div class="col-md-3">
          <%= form.label :date_range, "Date Range", class: "form-label fw-bold" %>
          <%= form.select :date_range, 
              options_for_select([
                ['Today', 'today'],
                ['This Week', 'this_week'],
                ['This Month', 'this_month'],
                ['Last Month', 'last_month'],
                ['Custom Range', 'custom']
              ], @date_range),
              {},
              { class: "form-select", id: "dateRangeSelect" } %>
        </div>
        
        <div class="col-md-2" id="customStartDate" style="<%= 'display: none;' unless @date_range == 'custom' %>">
          <%= form.label :start_date, "Start Date", class: "form-label fw-bold" %>
          <%= form.date_field :start_date, value: @start_date, class: "form-control" %>
        </div>
        
        <div class="col-md-2" id="customEndDate" style="<%= 'display: none;' unless @date_range == 'custom' %>">
          <%= form.label :end_date, "End Date", class: "form-label fw-bold" %>
          <%= form.date_field :end_date, value: @end_date, class: "form-control" %>
        </div>
        
        <div class="col-md-3">
          <%= form.label :vendor, "Filter by Vendor", class: "form-label fw-bold" %>
          <%= form.select :vendor, 
              options_from_collection_for_select(
                ProcurementAssignment.distinct.pluck(:vendor_name).compact.sort.map { |v| [v, v] }, 
                :last, :first, @vendor_filter
              ),
              { prompt: 'All Vendors' },
              { class: "form-select" } %>
        </div>
        
        <div class="col-md-2">
          <%= form.submit "Apply Filter", class: "btn btn-primary w-100" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Key Metrics Cards -->
  <div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                Total Milk Received
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">
                <%= number_with_delimiter(@total_milk_received || 0) %> L
              </div>
            </div>
            <div class="col-auto">
              <i class="fas fa-tint fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-success shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                Total Revenue
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">
                ₹<%= number_with_delimiter(@expected_revenue || 0) %>
              </div>
            </div>
            <div class="col-auto">
              <i class="fas fa-rupee-sign fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-info shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                Total Cost
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">
                ₹<%= number_with_delimiter(@total_cost || 0) %>
              </div>
            </div>
            <div class="col-auto">
              <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-warning shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                Total Profit
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">
                ₹<%= number_with_delimiter(@total_profit || 0) %>
              </div>
            </div>
            <div class="col-auto">
              <i class="fas fa-chart-line fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Monthly Trends Chart -->
    <div class="col-xl-8 col-lg-7">
      <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
          <h6 class="m-0 font-weight-bold text-primary">Monthly Trends (Last 6 Months)</h6>
        </div>
        <div class="card-body">
          <div class="chart-area">
            <canvas id="monthlyTrendsChart"></canvas>
          </div>
        </div>
      </div>
    </div>

    <!-- Top Vendors -->
    <div class="col-xl-4 col-lg-5">
      <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
          <h6 class="m-0 font-weight-bold text-primary">Top Vendors</h6>
        </div>
        <div class="card-body">
          <% if @top_vendors.any? %>
            <% @top_vendors.each_with_index do |(vendor, quantity), index| %>
              <div class="d-flex align-items-center justify-content-between mb-3">
                <div class="d-flex align-items-center">
                  <div class="avatar avatar-sm me-3">
                    <div class="avatar-initial rounded-circle bg-label-primary">
                      <%= vendor.first.upcase %>
                    </div>
                  </div>
                  <div>
                    <h6 class="mb-0"><%= vendor %></h6>
                    <small class="text-muted">Rank #<%= index + 1 %></small>
                  </div>
                </div>
                <div class="text-end">
                  <span class="fw-bold text-primary"><%= number_with_delimiter(quantity) %> L</span>
                </div>
              </div>
              <% unless index == @top_vendors.length - 1 %>
                <hr class="my-2">
              <% end %>
            <% end %>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-users fa-2x text-muted mb-2"></i>
              <p class="text-muted">No vendor data available</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Recent Assignments -->
    <div class="col-lg-8">
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">Recent Procurement Activities</h6>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead class="table-light">
                <tr>
                  <th>Date</th>
                  <th>Vendor</th>
                  <th>Planned</th>
                  <th>Actual</th>
                  <th>Status</th>
                  <th>Profit</th>
                </tr>
              </thead>
              <tbody>
                <% @recent_assignments.each do |assignment| %>
                  <tr>
                    <td><%= assignment.date.strftime('%d %b %Y') %></td>
                    <td>
                      <span class="fw-bold"><%= assignment.vendor_name %></span>
                    </td>
                    <td><%= number_with_delimiter(assignment.planned_quantity) %> L</td>
                    <td>
                      <% if assignment.actual_quantity.present? %>
                        <span class="fw-bold text-success"><%= number_with_delimiter(assignment.actual_quantity) %> L</span>
                      <% else %>
                        <span class="text-muted">-</span>
                      <% end %>
                    </td>
                    <td>
                      <span class="<%= assignment.status_badge_class %>">
                        <%= assignment.status.titleize %>
                      </span>
                    </td>
                    <td>
                      <% if assignment.completed? %>
                        <span class="fw-bold text-success">₹<%= number_with_delimiter(assignment.profit) %></span>
                      <% else %>
                        <span class="text-muted">Pending</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            
            <% if @recent_assignments.empty? %>
              <div class="text-center py-4">
                <i class="fas fa-clipboard-list fa-2x text-muted mb-2"></i>
                <p class="text-muted">No recent assignments found</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Pending Assignments -->
    <div class="col-lg-4">
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">Pending Assignments</h6>
        </div>
        <div class="card-body">
          <% if @pending_assignments.any? %>
            <% @pending_assignments.each do |assignment| %>
              <div class="d-flex align-items-center justify-content-between mb-3 p-2 bg-light rounded">
                <div>
                  <h6 class="mb-1"><%= assignment.vendor_name %></h6>
                  <small class="text-muted">
                    <%= assignment.date.strftime('%d %b %Y') %> • 
                    <%= number_with_delimiter(assignment.planned_quantity) %> L
                  </small>
                </div>
                <div>
                  <% if assignment.overdue? %>
                    <span class="badge bg-danger">Overdue</span>
                  <% else %>
                    <span class="badge bg-warning text-dark">Pending</span>
                  <% end %>
                </div>
              </div>
            <% end %>
            
            <div class="text-center mt-3">
              <%= link_to procurement_assignments_path(status: 'pending'), class: "btn btn-sm btn-outline-primary" do %>
                View All Pending
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
              <p class="text-muted">All assignments completed!</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Date range selector
  const dateRangeSelect = document.getElementById('dateRangeSelect');
  const customStartDate = document.getElementById('customStartDate');
  const customEndDate = document.getElementById('customEndDate');
  
  dateRangeSelect.addEventListener('change', function() {
    if (this.value === 'custom') {
      customStartDate.style.display = 'block';
      customEndDate.style.display = 'block';
    } else {
      customStartDate.style.display = 'none';
      customEndDate.style.display = 'none';
    }
  });

  // Monthly Trends Chart
  const monthlyTrendsCtx = document.getElementById('monthlyTrendsChart').getContext('2d');
  const monthlyData = <%= raw @monthly_trends.to_json %>;
  
  new Chart(monthlyTrendsCtx, {
    type: 'line',
    data: {
      labels: monthlyData.map(d => d.month),
      datasets: [
        {
          label: 'Milk Received (L)',
          data: monthlyData.map(d => d.received),
          borderColor: '#4e73df',
          backgroundColor: 'rgba(78, 115, 223, 0.1)',
          borderWidth: 2,
          fill: true,
          yAxisID: 'y'
        },
        {
          label: 'Revenue (₹)',
          data: monthlyData.map(d => d.revenue),
          borderColor: '#1cc88a',
          backgroundColor: 'rgba(28, 200, 138, 0.1)',
          borderWidth: 2,
          fill: false,
          yAxisID: 'y1'
        },
        {
          label: 'Cost (₹)',
          data: monthlyData.map(d => d.cost),
          borderColor: '#e74a3b',
          backgroundColor: 'rgba(231, 74, 59, 0.1)',
          borderWidth: 2,
          fill: false,
          yAxisID: 'y1'
        },
        {
          label: 'Profit (₹)',
          data: monthlyData.map(d => d.profit),
          borderColor: '#f6c23e',
          backgroundColor: 'rgba(246, 194, 62, 0.1)',
          borderWidth: 2,
          fill: false,
          yAxisID: 'y1'
        }
      ]
    },
    options: {
      responsive: true,
      interaction: {
        mode: 'index',
        intersect: false
      },
      plugins: {
        legend: {
          position: 'top'
        },
        title: {
          display: true,
          text: 'Monthly Performance Trends'
        }
      },
      scales: {
        x: {
          display: true,
          title: {
            display: true,
            text: 'Month'
          }
        },
        y: {
          type: 'linear',
          display: true,
          position: 'left',
          title: {
            display: true,
            text: 'Milk Quantity (Liters)'
          }
        },
        y1: {
          type: 'linear',
          display: true,
          position: 'right',
          title: {
            display: true,
            text: 'Amount (₹)'
          },
          grid: {
            drawOnChartArea: false
          }
        }
      }
    }
  });
});
</script>

