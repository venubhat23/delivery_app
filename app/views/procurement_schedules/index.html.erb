<% content_for :title, "Farm Vendor Tracker" %>

<div class="container-fluid py-4">
  <!-- Header Section -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="h3 mb-1 text-gray-800">
            <i class="fas fa-truck text-primary me-2"></i>
            Farm Vendor Tracker
          </h1>
          <p class="text-muted mb-0">Manage milk procurement schedules from different farms</p>
        </div>
        <div class="d-flex gap-2">
          <%= link_to analytics_procurement_schedules_path, class: "btn btn-info" do %>
            <i class="fas fa-chart-line me-1"></i>
            Analytics Dashboard
          <% end %>
          <%= link_to new_procurement_schedule_path, class: "btn btn-primary" do %>
            <i class="fas fa-plus me-1"></i>
            New Procurement Schedule
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                Total Schedules
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @total_schedules %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-calendar-alt fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-success shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                Active Schedules
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @active_schedules %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-check-circle fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-info shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                Completed Schedules
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @completed_schedules %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-clipboard-check fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-warning shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                This Month
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">
                <%= @procurement_schedules.where(created_at: Date.current.beginning_of_month..Date.current.end_of_month).count %>
              </div>
            </div>
            <div class="col-auto">
              <i class="fas fa-calendar-month fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Procurement Schedules Table -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Procurement Schedules</h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
          <thead class="table-light">
            <tr>
              <th>Vendor Name</th>
              <th>Duration</th>
              <th>Quantity</th>
              <th>Buying Price</th>
              <th>Selling Price</th>
              <th>Expected Profit</th>
              <th>Status</th>
              <th>Created By</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @procurement_schedules.each do |schedule| %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="avatar avatar-sm me-3">
                      <div class="avatar-initial rounded-circle bg-label-primary">
                        <%= schedule.vendor_name.first.upcase %>
                      </div>
                    </div>
                    <div>
                      <h6 class="mb-0 text-sm"><%= schedule.vendor_name %></h6>
                      <small class="text-muted"><%= schedule.unit.titleize %></small>
                    </div>
                  </div>
                </td>
                <td>
                  <div>
                    <span class="fw-bold"><%= schedule.duration_in_days %> days</span><br>
                    <small class="text-muted">
                      <%= schedule.from_date.strftime('%d %b') %> - <%= schedule.to_date.strftime('%d %b %Y') %>
                    </small>
                  </div>
                </td>
                <td>
                  <span class="fw-bold text-primary"><%= number_with_delimiter(schedule.quantity) %></span>
                  <small class="text-muted d-block"><%= schedule.unit %></small>
                </td>
                <td>
                  <span class="fw-bold text-success">₹<%= number_with_delimiter(schedule.buying_price) %></span>
                  <small class="text-muted d-block">per <%= schedule.unit.singularize %></small>
                </td>
                <td>
                  <span class="fw-bold text-info">₹<%= number_with_delimiter(schedule.selling_price) %></span>
                  <small class="text-muted d-block">per <%= schedule.unit.singularize %></small>
                </td>
                <td>
                  <div>
                    <span class="fw-bold text-success">₹<%= number_with_delimiter(schedule.expected_profit) %></span><br>
                    <small class="badge bg-light-success text-success">
                      <%= schedule.profit_margin_percentage %>% margin
                    </small>
                  </div>
                </td>
                <td>
                  <span class="badge <%= schedule.status_badge_class %> text-white">
                    <%= schedule.status.titleize %>
                  </span>
                </td>
                <td>
                  <div>
                    <span class="fw-bold"><%= schedule.user.name %></span><br>
                    <small class="text-muted"><%= schedule.created_at.strftime('%d %b %Y') %></small>
                  </div>
                </td>
                <td>
                  <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                      <i class="fas fa-ellipsis-v"></i>
                    </button>
                    <ul class="dropdown-menu">
                      <li>
                        <%= link_to procurement_schedule_path(schedule), class: "dropdown-item" do %>
                          <i class="fas fa-eye me-2"></i>View Details
                        <% end %>
                      </li>
                      <li>
                        <%= link_to edit_procurement_schedule_path(schedule), class: "dropdown-item" do %>
                          <i class="fas fa-edit me-2"></i>Edit
                        <% end %>
                      </li>
                      <% if schedule.can_generate_assignments? %>
                        <li>
                          <%= link_to generate_assignments_procurement_schedule_path(schedule), 
                                      method: :patch, 
                                      class: "dropdown-item",
                                      data: { confirm: "Generate daily assignments for this schedule?" } do %>
                            <i class="fas fa-cogs me-2"></i>Generate Assignments
                          <% end %>
                        </li>
                      <% end %>
                      <% if schedule.can_be_cancelled? %>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                          <%= link_to cancel_schedule_procurement_schedule_path(schedule), 
                                      method: :patch, 
                                      class: "dropdown-item text-danger",
                                      data: { confirm: "Are you sure you want to cancel this schedule?" } do %>
                            <i class="fas fa-times me-2"></i>Cancel Schedule
                          <% end %>
                        </li>
                      <% end %>
                      <li><hr class="dropdown-divider"></li>
                      <li>
                        <%= link_to procurement_schedule_path(schedule), 
                                    method: :delete, 
                                    class: "dropdown-item text-danger",
                                    data: { confirm: "Are you sure you want to delete this schedule?" } do %>
                          <i class="fas fa-trash me-2"></i>Delete
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <% if @procurement_schedules.empty? %>
          <div class="text-center py-5">
            <i class="fas fa-truck fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">No procurement schedules found</h5>
            <p class="text-muted">Create your first procurement schedule to start tracking milk supply from farms.</p>
            <%= link_to new_procurement_schedule_path, class: "btn btn-primary" do %>
              <i class="fas fa-plus me-1"></i>
              Create First Schedule
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  .border-left-primary {
    border-left: 0.25rem solid #4e73df !important;
  }
  .border-left-success {
    border-left: 0.25rem solid #1cc88a !important;
  }
  .border-left-info {
    border-left: 0.25rem solid #36b9cc !important;
  }
  .border-left-warning {
    border-left: 0.25rem solid #f6c23e !important;
  }
  
  .avatar {
    width: 2.5rem;
    height: 2.5rem;
  }
  
  .avatar-initial {
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    color: white;
  }
  
  .bg-label-primary {
    background-color: #4e73df !important;
  }
  
  .bg-light-success {
    background-color: rgba(28, 200, 138, 0.1) !important;
  }
</style>