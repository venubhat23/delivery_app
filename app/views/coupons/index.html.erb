<!-- Enhanced Coupons Index Page -->
<div class="container-fluid">
  <div class="row" style="margin-top: 2rem;">
    <div class="col-12">
<div class="page-header">
  <div class="d-flex justify-content-between align-items-center">
    <div>
      <h1 class="h2 mb-2">
        <i class="fas fa-ticket-alt me-3"></i>Coupon Management
      </h1>
      <p class="text-muted mb-0">Generate and manage discount coupons for your customers</p>
    </div>
    <div class="d-flex gap-2">
      <%= link_to new_coupon_path, class: "btn btn-primary" do %>
        <i class="fas fa-plus me-2"></i>Generate Coupon
      <% end %>
    </div>
  </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
  <div class="col-md-3 mb-3">
    <div class="stats-card">
      <div class="stats-icon">
        <i class="fas fa-ticket-alt"></i>
      </div>
      <div class="stats-number"><%= @total_coupons %></div>
      <div class="stats-label">Total Coupons</div>
    </div>
  </div>
  <div class="col-md-3 mb-3">
    <div class="stats-card">
      <div class="stats-icon">
        <i class="fas fa-check-circle"></i>
      </div>
      <div class="stats-number"><%= @active_coupons %></div>
      <div class="stats-label">Active Coupons</div>
    </div>
  </div>
  <div class="col-md-3 mb-3">
    <div class="stats-card">
      <div class="stats-icon">
        <i class="fas fa-times-circle"></i>
      </div>
      <div class="stats-number"><%= @expired_coupons %></div>
      <div class="stats-label">Expired Coupons</div>
    </div>
  </div>
  <div class="col-md-3 mb-3">
    <div class="stats-card">
      <div class="stats-icon">
        <i class="fas fa-rupee-sign"></i>
      </div>
      <div class="stats-number">₹<%= number_with_delimiter(@total_coupon_value.round(2), delimiter: ',') %></div>
      <div class="stats-label">Total Value</div>
    </div>
  </div>
</div>

<!-- Filters & Search -->
<div class="card mb-4">
  <div class="card-body">
    <div class="row align-items-center">
      <div class="col-md-8">
        <%= form_with url: coupons_path, method: :get, local: true, class: "d-flex align-items-center" do |form| %>
          <div class="me-3">
            <%= form.text_field :search,
                placeholder: "Search coupons by code or description...",
                value: params[:search],
                class: "form-control",
                style: "min-width: 250px;" %>
          </div>
          <div class="me-3">
            <%= form.select :status,
                options_for_select([['All Status', ''], ['Active', 'active'], ['Inactive', 'inactive'], ['Expired', 'expired']], params[:status]),
                { },
                { class: "form-select" } %>
          </div>
          <%= form.submit "Search & Filter", class: "btn btn-outline-primary" %>
        <% end %>
      </div>
      <div class="col-md-4 text-end">
        <% if params[:status].present? || params[:search].present? %>
          <%= link_to coupons_path, class: "btn btn-outline-secondary" do %>
            <i class="fas fa-times me-1"></i>Clear All
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Coupons Table -->
<div class="card">
  <div class="card-header">
    <div class="d-flex justify-content-between align-items-center">
      <h6 class="mb-0">
        <i class="fas fa-list me-2"></i>Coupons List
      </h6>
      <div class="d-flex align-items-center">
        <span class="badge bg-primary me-2"><%= @coupons.count %> items</span>
      </div>
    </div>
  </div>
  <div class="card-body p-0">
    <% if @coupons.any? %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead>
            <tr>
              <th><i class="fas fa-hashtag me-1"></i>ID</th>
              <th><i class="fas fa-barcode me-1"></i>Coupon Code</th>
              <th><i class="fas fa-rupee-sign me-1"></i>Amount</th>
              <th><i class="fas fa-align-left me-1"></i>Description</th>
              <th><i class="fas fa-toggle-on me-1"></i>Status</th>
              <th><i class="fas fa-calendar-times me-1"></i>Expires At</th>
              <th><i class="fas fa-calendar me-1"></i>Created</th>
              <th><i class="fas fa-cogs me-1"></i>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @coupons.each do |coupon| %>
              <tr class="coupon-row">
                <td>
                  <span class="badge bg-secondary coupon-id-badge">#<%= coupon.id %></span>
                </td>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="coupon-avatar me-3">
                      <i class="fas fa-ticket-alt"></i>
                    </div>
                    <div>
                      <strong class="text-primary coupon-code"><%= coupon.code %></strong>
                      <% if coupon.expiring_soon? && !coupon.expired? %>
                        <span class="badge bg-warning ms-2">Expiring Soon</span>
                      <% end %>
                    </div>
                  </div>
                </td>
                <td>
                  <span class="fw-bold text-success">
                    ₹<%= number_with_precision(coupon.amount, precision: 2) %>
                  </span>
                </td>
                <td>
                  <span class="text-muted">
                    <%= truncate(coupon.description, length: 50) if coupon.description.present? %>
                  </span>
                </td>
                <td>
                  <span class="badge bg-<%= coupon.status_class %>">
                    <%= coupon.status.titleize %>
                  </span>
                </td>
                <td>
                  <div class="expiry-info">
                    <span class="<%= coupon.expired? ? 'text-danger' : 'text-success' %>">
                      <%= coupon.expires_at.strftime("%b %d, %Y") %>
                    </span>
                    <% unless coupon.expired? %>
                      <small class="text-muted d-block">
                        <%= coupon.days_until_expiry %> days left
                      </small>
                    <% end %>
                  </div>
                </td>
                <td>
                  <span class="text-muted">
                    <%= coupon.created_at.strftime("%b %d, %Y") %>
                  </span>
                </td>
                <td>
                  <div class="btn-group" role="group">
                    <%= link_to coupon_path(coupon), class: "btn btn-sm btn-outline-primary", title: "View Details" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_coupon_path(coupon), class: "btn btn-sm btn-outline-warning", title: "Edit Coupon" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= button_to coupon_path(coupon),
                        method: :delete,
                        form: { "data-turbo-confirm": "Are you sure you want to delete this coupon?", class: "d-inline" },
                        class: "btn btn-sm btn-outline-danger",
                        title: "Delete Coupon" do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="empty-state">
        <i class="fas fa-ticket-alt"></i>
        <h4>No Coupons Found</h4>
        <p>Start creating discount coupons for your customers.</p>
        <%= link_to new_coupon_path, class: "btn btn-primary mt-3" do %>
          <i class="fas fa-plus me-2"></i>Generate First Coupon
        <% end %>
      </div>
    <% end %>
  </div>
</div>
    </div>
  </div>
</div>

