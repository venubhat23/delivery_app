    <script>
        // Attractive Loader with Farm Theme
        class FarmLoader {
            constructor() {
                this.loader = document.getElementById('farmLoader');
                this.progressCircle = document.getElementById('progressCircle');
                this.progressPercentage = document.getElementById('progressPercentage');
                this.statusMessage = document.getElementById('statusMessage');
                this.loaderIcon = document.getElementById('loaderIcon');
                this.successCheck = document.getElementById('successCheck');

                this.currentProgress = 0;
                this.targetProgress = 0;
                this.isLoading = false;

                // Status messages for different stages
                this.statusMessages = [
                    "Connecting to our farm...",
                    "Loading fresh milk inventory...",
                    "Preparing customer app link...",
                    "Gathering delivery routes...",
                    "Setting up farm dashboard...",
                    "Sending customer app link...",
                    "Finalizing your farm experience..."
                ];

                this.currentMessageIndex = 0;
            }

            updateProgress(percentage) {
                this.targetProgress = percentage;
                const circumference = 2 * Math.PI * 70; // radius = 70
                const offset = circumference - (percentage / 100) * circumference;

                // Smooth animation to target percentage
                const animateProgress = () => {
                    if (this.currentProgress < this.targetProgress) {
                        this.currentProgress += 1;
                        const currentOffset = circumference - (this.currentProgress / 100) * circumference;
                        this.progressCircle.style.strokeDashoffset = currentOffset;
                        this.progressPercentage.textContent = this.currentProgress + '%';

                        requestAnimationFrame(animateProgress);
                    }
                };

                requestAnimationFrame(animateProgress);
            }

            updateStatus(message) {
                this.statusMessage.style.animation = 'none';
                this.statusMessage.offsetHeight; // Trigger reflow
                this.statusMessage.textContent = message;
                this.statusMessage.style.animation = 'status-slide 0.5s ease-in-out';
            }

            showLoader() {
                this.loader.classList.add('show');
                this.isLoading = true;
                this.startLoadingSequence();
            }

            hideLoader() {
                this.loader.classList.remove('show');
                this.isLoading = false;
            }

            startLoadingSequence() {
                const sequence = [
                    { progress: 5, message: this.statusMessages[0], delay: 500 },
                    { progress: 15, message: this.statusMessages[1], delay: 800 },
                    { progress: 25, message: this.statusMessages[2], delay: 600 },
                    { progress: 45, message: this.statusMessages[3], delay: 700 },
                    { progress: 65, message: this.statusMessages[4], delay: 600 },
                    { progress: 85, message: this.statusMessages[5], delay: 800 },
                    { progress: 100, message: this.statusMessages[6], delay: 500 }
                ];

                let currentStep = 0;

                const executeStep = () => {
                    if (currentStep < sequence.length && this.isLoading) {
                        const step = sequence[currentStep];

                        this.updateProgress(step.progress);
                        this.updateStatus(step.message);

                        // Special handling for 100%
                        if (step.progress === 100) {
                            setTimeout(() => {
                                this.showSuccess();
                            }, 1000);
                        }

                        currentStep++;

                        setTimeout(executeStep, step.delay);
                    }
                };

                executeStep();
            }

            showSuccess() {
                // Hide loader icon and show success check
                this.loaderIcon.style.display = 'none';
                this.successCheck.style.display = 'block';

                // Update status
                this.updateStatus('Customer app link sent successfully! üéâ');

                // Hide loader after showing success
                setTimeout(() => {
                    this.hideLoader();
                }, 2000);
            }

            // Trigger loader manually
            trigger() {
                this.showLoader();
            }
        }

        // Initialize page and loader
        document.addEventListener('DOMContentLoaded', function() {
            try {
                // Initialize farm loader
                window.farmLoader = new FarmLoader();

                // Show loader automatically after page load
                console.log('üåæ Farm loader initialized successfully!');
                console.log('üí° To manually trigger: triggerFarmLoader()');
                console.log('üîß To debug: debugLoader()');

                // Disable auto-loader for login page
                console.log('üîí Login page - Auto-loader disabled');

                // Auto-hide flash messages
                setTimeout(function() {
                    const alerts = document.querySelectorAll('.farm-alert');
                    alerts.forEach(alert => {
                        alert.style.animation = 'fadeOut 0.5s ease-out forwards';
                        setTimeout(() => alert.remove(), 500);
                    });
                }, 4000);

                // Add subtle hover effects to farm images
                const farmImages = document.querySelectorAll('.farm-visual-elements > div');
                farmImages.forEach(img => {
                    img.addEventListener('mouseenter', function() {
                        this.style.transform = 'scale(1.05)';
                        this.style.transition = 'transform 0.3s ease';
                    });

                    img.addEventListener('mouseleave', function() {
                        this.style.transform = 'scale(1)';
                    });
                });

                // Login form - no loader trigger needed
                const loginForm = document.querySelector('form');
                if (loginForm) {
                    console.log('üìù Login form found - proceeding with normal form submission');
                }

                // Login button - normal form submission
                const loginButton = document.querySelector('.farm-btn');
                if (loginButton) {
                    console.log('üîë Login button found - normal form submission enabled');
                }

            } catch (error) {
                console.error('Error initializing farm loader:', error);
                // Fallback - try to show a simple loader
                const loader = document.getElementById('farmLoader');
                if (loader) {
                    loader.style.display = 'flex';
                    loader.classList.add('show');
                }
            }
        });

        // Add CSS for fade out animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes fadeOut {
                from { opacity: 1; }
                to { opacity: 0; }
            }
        `;
        document.head.appendChild(style);

        // Expose loader for manual triggering
        function triggerFarmLoader() {
            console.log('Triggering farm loader...');
            if (window.farmLoader) {
                window.farmLoader.trigger();
            } else {
                console.warn('Farm loader not initialized, trying manual trigger...');
                const loader = document.getElementById('farmLoader');
                if (loader) {
                    loader.classList.add('show');
                    // Manual animation if class fails
                    setTimeout(() => {
                        const progressCircle = document.getElementById('progressCircle');
                        const progressPercentage = document.getElementById('progressPercentage');
                        const statusMessage = document.getElementById('statusMessage');

                        let progress = 0;
                        const interval = setInterval(() => {
                            progress += 10;
                            if (progressPercentage) progressPercentage.textContent = progress + '%';
                            if (statusMessage) {
                                if (progress === 30) statusMessage.textContent = 'Sending customer app link...';
                                else if (progress === 100) {
                                    statusMessage.textContent = 'Customer app link sent successfully! üéâ';
                                    clearInterval(interval);
                                    setTimeout(() => loader.classList.remove('show'), 2000);
                                }
                            }
                        }, 500);
                    }, 100);
                }
            }
        }

        // Debug function
        function debugLoader() {
            console.log('=== FARM LOADER DEBUG ===');
            console.log('Window farmLoader exists:', !!window.farmLoader);
            console.log('Loader element exists:', !!document.getElementById('farmLoader'));
            console.log('Current URL:', window.location.href);

            // Test image loading
            const testImg = new Image();
            testImg.onload = () => console.log('‚úÖ farm1.png loaded successfully');
            testImg.onerror = () => console.error('‚ùå farm1.png failed to load');
            testImg.src = '/images/farm1.png?v=' + Date.now();
        }

        // Auto-run debug on console errors
        window.addEventListener('error', function(e) {
            console.error('JavaScript Error:', e.error);
            debugLoader();
        });
    </script>
