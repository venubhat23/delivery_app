<!-- Modern Delivery Assignments Header -->
<div class="modern-page-header">
  <div class="container-fluid">
    <div class="row align-items-center">
      <div class="col-lg-8 col-md-7">
        <div class="header-content">
          <div class="d-flex align-items-center mb-2">
            <div class="header-icon">
              <i class="fas fa-truck"></i>
            </div>
            <div>
              <h1 class="page-title mb-0">Delivery Assignments</h1>
              <div class="date-badge-container">
                <% if @current_date != Date.today %>
                  <span class="modern-badge badge-info">
                    <i class="fas fa-calendar-alt me-1"></i>
                    <%= @current_date.strftime("%d %b %Y") %>
                    <% if @current_date < Date.today %>
                      <i class="fas fa-history ms-1" title="Past date"></i>
                    <% elsif @current_date > Date.today %>
                      <i class="fas fa-clock ms-1" title="Future date"></i>
                    <% end %>
                  </span>
                <% else %>
                  <span class="modern-badge badge-today">
                    <i class="fas fa-calendar-day me-1"></i>TODAY
                  </span>
                <% end %>
              </div>
            </div>
          </div>
          <p class="page-subtitle">
            Manage delivery assignments and track delivery progress
            <% unless @current_date == Date.today %>
              - Viewing <%= @current_date.strftime("%A, %d %B %Y") %>
            <% end %>
          </p>
        </div>
      </div>
      <div class="col-lg-4 col-md-5">
        <div class="header-actions">
          <%= link_to new_delivery_assignment_path, class: "btn btn-primary btn-lg modern-btn-primary" do %>
            <i class="fas fa-plus me-2"></i>New Assignment
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% total = @total_assignments %>
<% completed = @completed_assignments %>
<% pending = @pending_assignments %>
<% overdue = @overdue_assignments %>
<% percentage = @completion_rate %>

