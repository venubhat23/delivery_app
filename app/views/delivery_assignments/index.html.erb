          <div class="col-lg-2 col-md-6">
            <label class="modern-filter-label">
              <i class="fas fa-info-circle me-1"></i>Status
            </label>
            <div data-controller="searchable-select" data-searchable-select-search-type-value="local" data-searchable-select-placeholder-value="Search statuses...">
              <%= form.select :status, options_for_select([['All Statuses', '']] + @statuses.map { |s| [s.humanize, s] }, params[:status]),
                              { include_blank: false },
                              { class: "form-select modern-input", data: { "searchable-select-target" => "select" }, id: "status-filter-select" } %>
