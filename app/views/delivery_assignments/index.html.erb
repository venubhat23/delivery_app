          <div class="col-lg-3 col-md-6">
            <label class="modern-filter-label">
              <i class="fas fa-user me-1"></i>Customer
            </label>
            <div class="customer-search-container position-relative">
              <input type="text" 
                     class="form-control modern-input customer-search-input" 
                     id="customer-search-input"
                     placeholder="Search customers by name..."
                     autocomplete="off">
              <div class="search-icon">
                <i class="fas fa-search"></i>
              </div>
              <%= form.hidden_field :customer_id, id: 'customer-select', value: params[:customer_id] %>
