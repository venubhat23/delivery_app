<div class="modal fade" id="createSalesCustomerModal" tabindex="-1" aria-labelledby="createSalesCustomerModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createSalesCustomerModalLabel">
          <i class="fas fa-user-plus me-2"></i>Create New Sales Customer
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with model: sales_customer, url: sales_customers_path, local: false, 
                    class: 'needs-validation', novalidate: true, id: 'salesCustomerForm' do |form| %>
        <div class="modal-body">
          <div id="customerFormErrors" class="alert alert-danger" style="display: none;">
            <h6>Please fix the following errors:</h6>
            <ul id="customerErrorsList" class="mb-0"></ul>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= form.label :name, 'Customer Name *', class: 'form-label' %>
                <%= form.text_field :name, class: 'form-control', required: true, placeholder: 'Enter customer name' %>
                <div class="invalid-feedback">
                  Please provide a customer name.
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= form.label :phone_number, 'Phone Number *', class: 'form-label' %>
                <%= form.text_field :phone_number, class: 'form-control', required: true, placeholder: 'Enter phone number' %>
                <div class="invalid-feedback">
                  Please provide a phone number.
                </div>
              </div>
            </div>
          </div>
          
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= form.label :email, 'Email', class: 'form-label' %>
                <%= form.email_field :email, class: 'form-control', placeholder: 'Enter email address' %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= form.label :gst_number, 'GST Number', class: 'form-label' %>
                <%= form.text_field :gst_number, class: 'form-control', placeholder: 'Enter GST number' %>
              </div>
            </div>
          </div>
          
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= form.label :pan_number, 'PAN Number', class: 'form-label' %>
                <%= form.text_field :pan_number, class: 'form-control', placeholder: 'Enter PAN number' %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= form.label :contact_person, 'Contact Person', class: 'form-label' %>
                <%= form.text_field :contact_person, class: 'form-control', placeholder: 'Enter contact person name' %>
              </div>
            </div>
          </div>
          
          <div class="mb-3">
            <%= form.label :address, 'Address', class: 'form-label' %>
            <%= form.text_area :address, rows: 3, class: 'form-control', placeholder: 'Enter address' %>
          </div>
          
          <div class="row">
            <div class="col-md-4">
              <div class="mb-3">
                <%= form.label :city, 'City', class: 'form-label' %>
                <%= form.text_field :city, class: 'form-control', placeholder: 'Enter city' %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="mb-3">
                <%= form.label :state, 'State', class: 'form-label' %>
                <%= form.text_field :state, class: 'form-control', placeholder: 'Enter state' %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="mb-3">
                <%= form.label :pincode, 'Pincode', class: 'form-label' %>
                <%= form.text_field :pincode, class: 'form-control', placeholder: 'Enter pincode' %>
              </div>
            </div>
          </div>
          
          <div class="mb-3">
            <%= form.label :shipping_address, 'Shipping Address', class: 'form-label' %>
            <%= form.text_area :shipping_address, rows: 3, class: 'form-control', placeholder: 'Enter shipping address (optional - will use billing address if empty)' %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= form.submit 'Create Customer', class: 'btn btn-primary', id: 'createCustomerBtn', data: { loading_text: 'Creating...' } %>
        </div>
      <% end %>
    </div>
  </div>
</div>